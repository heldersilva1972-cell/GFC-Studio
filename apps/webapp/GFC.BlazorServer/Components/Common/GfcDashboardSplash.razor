<div class="splash-container @(IsFadingOut ? "fading-out" : "")">
    <div class="splash-bg-blobs">
        <div class="blob blob-1"></div>
        <div class="blob blob-2"></div>
        <div class="blob blob-3"></div>
    </div>

    <div class="splash-card">
        <div class="splash-logo-wrapper">
            <div class="splash-logo-ring-outer"></div>
            <div class="splash-logo-ring"></div>
            <div class="splash-monogram">GFC</div>
        </div>

        <div class="splash-text">
            <div class="splash-title">Gloucester Fraternity Club</div>
            <div class="splash-subtitle">
                <span>Initializing Control Center</span>
                <div class="loading-dots">
                    <span>.</span><span>.</span><span>.</span>
                </div>
            </div>
            
            <div class="splash-progress-track">
                <div class="splash-progress-bar"></div>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter] public bool IsFadingOut { get; set; }
}
