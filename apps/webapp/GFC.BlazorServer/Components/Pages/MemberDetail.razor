    private string? GetTenureYears()
    {
        if (_member is null) return null;

        var normalized = MemberStatusHelper.NormalizeStatus(_member.Status);
        DateTime? startDate = null;
        string statusLabel = "";
        string? guestTenure = null;

        switch (normalized)
        {
            case "GUEST":
                // For guests, use AcceptedDate or ApplicationDate
                startDate = _member.AcceptedDate ?? _member.ApplicationDate;
                statusLabel = "Guest";
                break;

            case "REGULAR":
            case "REGULAR-NP":
                // For regular members, use RegularSince (which includes history)
                startDate = _member.RegularSince;
                statusLabel = normalized == "REGULAR-NP" ? "Regular (Non-Portuguese)" : "Regular";
                
                // Calculate Guest tenure if they were promoted from Guest
                if (_member.RegularSince.HasValue && _member.AcceptedDate.HasValue)
                {
                    // If RegularSince is later than AcceptedDate, they were a Guest first
                    if (_member.RegularSince.Value.Date > _member.AcceptedDate.Value.Date)
                    {
                        var guestYears = MemberStatusHelper.CalculateAge(_member.AcceptedDate.Value, _member.RegularSince.Value);
                        var guestYearsText = guestYears == 1 ? "year" : "years";
                        guestTenure = $"{guestYears} {guestYearsText} as Guest";
                    }
                }
                break;

            case "LIFE":
                // For Life members, show years as Regular before becoming Life
                startDate = _member.RegularSince;
                statusLabel = "Regular (before Life)";
                
                // Also calculate Guest tenure if applicable
                if (_member.RegularSince.HasValue && _member.AcceptedDate.HasValue)
                {
                    if (_member.RegularSince.Value.Date > _member.AcceptedDate.Value.Date)
                    {
                        var guestYears = MemberStatusHelper.CalculateAge(_member.AcceptedDate.Value, _member.RegularSince.Value);
                        var guestYearsText = guestYears == 1 ? "year" : "years";
                        guestTenure = $"{guestYears} {guestYearsText} as Guest";
                    }
                }
                break;

            default:
                return null;
        }

        if (!startDate.HasValue) return null;

        var years = MemberStatusHelper.CalculateAge(startDate.Value, DateTime.Today);
        var yearsText = years == 1 ? "year" : "years";

        var mainTenure = $"{years} {yearsText} as {statusLabel}";
        
        // Combine both tenures if Guest tenure exists
        if (!string.IsNullOrEmpty(guestTenure))
        {
            return $"{mainTenure} • {guestTenure}";
        }

        return mainTenure;
    }

