    private bool AllowActiveActions() => !IsInactiveMember() && !IsGuestMember() && !IsDeceased();

    private bool AllowCardAssignment()
    {
        if (!AllowActiveActions()) return false;
        
        // Directors and Life members always qualify
        if (IsDirector() || IsLifeMember()) return true;
        
        // Regular members must have paid dues
        var duesStatus = GetDuesStatus();
        return duesStatus == "Paid" || duesStatus == "Waived" || duesStatus == "In Grace Period";
    }

    private bool IsDeceased()
    {
        var normalized = MemberStatusHelper.NormalizeStatus(_member?.Status);
        return string.Equals(normalized, "DECEASED", StringComparison.OrdinalIgnoreCase);
