// [MODIFIED]
@page "/login"
@using GFC.BlazorServer.Services
@using GFC.Core.Interfaces
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Components.Forms
@attribute [AllowAnonymous]
@inject CustomAuthenticationStateProvider AuthStateProvider
@inject NavigationManager Navigation
@inject ILogger<Login> Logger
@inject ISystemSettingsService SystemSettingsService
@inject IUserConnectionService UserConnectionService
@inject IMagicLinkService MagicLinkService
@inject IToastService ToastService

<PageTitle>Login - GFC Membership</PageTitle>

<div class="login-container">
    <div class="login-card">
        <div class="login-header">
            <h1>GFC Membership System</h1>
            @if (_showLoginForm)
            {
                <p class="text-muted">Please sign in to continue</p>
            }
        </div>

        @if (_showLoginForm)
        {
            @if (_loginMode == LoginMode.Password)
            {
                <EditForm Model="_model" OnValidSubmit="HandleLoginAsync">
                    <DataAnnotationsValidator />
                    <ValidationSummary class="alert alert-danger" />

                    <div class="mb-3">
                        <label class="form-label" for="username">Username</label>
                        <InputText id="username"
                                   class="form-control"
                                   @bind-Value="_model.Username"
                                   placeholder="Enter username" />
                        <ValidationMessage For="@(() => _model.Username)" />
                    </div>

                    <div class="mb-3">
                        <label class="form-label" for="password">Password</label>
                        <input id="password"
                               type="password"
                               class="form-control"
                               @bind="_model.Password"
                               placeholder="Enter password" />
                        <ValidationMessage For="@(() => _model.Password)" />
                    </div>

                    @if (!string.IsNullOrEmpty(_error))
                    {
                        <div class="alert alert-danger mt-2" role="alert">@_error</div>
                    }

                    <button class="btn btn-primary w-100 mt-3"
                            type="submit"
                            disabled="@_isSubmitting">
                        @if (_isSubmitting)
                        {
                            <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
                            <span>Signing in...</span>
                        }
                        else
                        {
                            <span>Sign In</span>
                        }
                    </button>
                </EditForm>
            }
            else
            {
                <EditForm Model="_magicLinkModel" OnValidSubmit="HandleMagicLinkAsync">
                    <DataAnnotationsValidator />
                    <div class="mb-3">
                        <label class="form-label" for="email">Email Address</label>
                        <InputText id="email"
                                   class="form-control"
                                   @bind-Value="_magicLinkModel.Email"
                                   placeholder="Enter your email" />
                        <ValidationMessage For="@(() => _magicLinkModel.Email)" />
                    </div>

                    <button class="btn btn-primary w-100 mt-3"
                            type="submit"
                            disabled="@_isSubmitting">
                        @if (_isSubmitting)
                        {
                            <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
                            <span>Sending...</span>
                        }
                        else
                        {
                            <span>Send Magic Link</span>
                        }
                    </button>
                </EditForm>
            }

            <div class="mt-3 text-center">
                <a href="#" @onclick="ToggleLoginMode" @onclick:preventDefault="true">
                    @(_loginMode == LoginMode.Password ? "Log in with Magic Link" : "Log in with Password")
                </a>
            </div>
        }
        else
        {
            <div class="alert alert-warning">
                Login is restricted to secure private network access only.
            </div>
        }
    </div>
</div>

@code {
    private LoginModel _model = new();
    private MagicLinkModel _magicLinkModel = new();
    private bool _isSubmitting = false;
    private string? _error;
    private string? _resolvedReturnUrl;
    private bool _showLoginForm = false;
    private LoginMode _loginMode = LoginMode.Password;

    private const string InvalidCredentialsMessage = "Invalid username or password.";
    private const string LockedOrDisabledMessage = "Your account is locked or disabled. Please contact an administrator.";
    private const string GenericLoginErrorMessage = "Unable to sign in at this time. Please try again later.";

    [Parameter]
    [SupplyParameterFromQuery(Name = "returnUrl")]
    public string? ReturnUrl { get; set; }

    protected override async Task OnInitializedAsync()
    {
        UpdateResolvedReturnUrl();

        try
        {
            var authState = await AuthStateProvider.GetAuthenticationStateAsync();
            if (authState.User.Identity?.IsAuthenticated == true)
            {
                Navigation.NavigateTo(GetPostLoginDestination());
                return;
            }

            var settings = await SystemSettingsService.GetSystemSettingsAsync();
            var userConnection = await UserConnectionService.GetUserConnectionInfoAsync();

            bool isLocalhost = Navigation.BaseUri.Contains("localhost");

            if (!settings.EnforceVpn || userConnection.LocationType != GFC.Core.Models.UserConnectionLocationType.Public || isLocalhost)
            {
                _showLoginForm = true;
            }
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error during initialization: {Error}", ex.Message);
            _error = "An error occurred while loading the page.";
        }
    }

    protected override void OnParametersSet()
    {
        UpdateResolvedReturnUrl();
    }

    private async Task HandleLoginAsync()
    {
        _error = null;
        _isSubmitting = true;
        UpdateResolvedReturnUrl();
        Logger.LogInformation("Login attempt for {Username}", _model.Username);

        try
        {
            if (string.IsNullOrWhiteSpace(_model.Username) || string.IsNullOrWhiteSpace(_model.Password))
            {
                _error = "Username and password are required.";
                return;
            }

            var result = await AuthStateProvider.LoginAsync(_model.Username, _model.Password);

            if (result.Code != LoginResultCode.Success)
            {
                _error = GetUserMessage(result.Code);
                Logger.LogWarning("Login failed for {Username}: {Reason}", _model.Username, result.ErrorMessageForLog);
                return;
            }

            if (result.User == null)
            {
                _error = GenericLoginErrorMessage;
                Logger.LogError("Login returned success but User is null for {Username}", _model.Username);
                return;
            }

            Logger.LogInformation("Login successful for {Username} (UserId: {UserId})", _model.Username, result.User.UserId);
            _model.Password = string.Empty;

            if (result.PasswordChangeRequired)
            {
                Navigation.NavigateTo("/changepassword", forceLoad: false);
            }
            else
            {
                Navigation.NavigateTo(GetPostLoginDestination(), forceLoad: false);
            }
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Unexpected error during login for {Username}", _model.Username);
            _error = "Unexpected error during sign in. Please try again.";
        }
        finally
        {
            _isSubmitting = false;
        }
    }

    private async Task HandleMagicLinkAsync()
    {
        _isSubmitting = true;
        var userConnection = await UserConnectionService.GetUserConnectionInfoAsync();
        var result = await MagicLinkService.RequestMagicLinkAsync(_magicLinkModel.Email, userConnection.IpAddress);

        if (result.Success)
        {
            ToastService.ShowSuccess(result.UserMessage);
        }
        else
        {
            ToastService.ShowError(result.UserMessage);
        }

        _isSubmitting = false;
    }

    private void ToggleLoginMode()
    {
        _loginMode = _loginMode == LoginMode.Password ? LoginMode.MagicLink : LoginMode.Password;
        _error = null;
    }

    private sealed class LoginModel
    {
        [System.ComponentModel.DataAnnotations.Required(ErrorMessage = "Username is required")]
        public string Username { get; set; } = string.Empty;

        [System.ComponentModel.DataAnnotations.Required(ErrorMessage = "Password is required")]
        public string Password { get; set; } = string.Empty;
    }

    private sealed class MagicLinkModel
    {
        [System.ComponentModel.DataAnnotations.Required(ErrorMessage = "Email is required")]
        [System.ComponentModel.DataAnnotations.EmailAddress(ErrorMessage = "Invalid email address")]
        public string Email { get; set; } = string.Empty;
    }

    private enum LoginMode
    {
        Password,
        MagicLink
    }

    private static string GetUserMessage(LoginResultCode code) => code switch
    {
        LoginResultCode.InvalidCredentials => InvalidCredentialsMessage,
        LoginResultCode.AccountLockedOrDisabled => LockedOrDisabledMessage,
        _ => GenericLoginErrorMessage
    };

    private void UpdateResolvedReturnUrl()
    {
        _resolvedReturnUrl = NormalizeReturnUrl(ReturnUrl);
    }

    private static string? NormalizeReturnUrl(string? rawReturnUrl)
    {
        if (string.IsNullOrWhiteSpace(rawReturnUrl)) return null;
        try
        {
            var decoded = Uri.UnescapeDataString(rawReturnUrl).Trim();
            if (string.IsNullOrEmpty(decoded)) return null;
            if (decoded.Contains("://") || decoded.StartsWith("//")) return null;
            if (!decoded.StartsWith('/')) decoded = "/" + decoded.TrimStart('/');
            return IsLoginPath(decoded) ? null : decoded;
        }
        catch { return null; }
    }

    private static bool IsLoginPath(string path)
    {
        if (string.IsNullOrWhiteSpace(path)) return false;
        var trimmed = path.Split('?', '#')[0];
        return trimmed.Equals("/login", StringComparison.OrdinalIgnoreCase);
    }

    private string GetPostLoginDestination() => _resolvedReturnUrl ?? "/";
}
