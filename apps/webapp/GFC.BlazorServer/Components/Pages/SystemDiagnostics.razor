@page "/admin/system-diagnostics"
@using GFC.BlazorServer.Auth
@attribute [Authorize(Policy = AppPolicies.RequireAdmin)]
@inject IDiagnosticsService DiagnosticsService
@inject GFC.BlazorServer.Services.Diagnostics.IPerformanceHistoryService PerformanceHistoryService
@inject GFC.BlazorServer.Services.Diagnostics.IAlertManagementService AlertManagementService
@using GFC.Core.Models
@using GFC.Core.Models.Diagnostics
@using GFC.BlazorServer.Components.Shared.Diagnostics
@implements IAsyncDisposable

<PageTitle>System Diagnostics</PageTitle>

<div class="diag-page-container">
    <!-- Header -->
    <div class="diag-header">
        <h3 class="diag-title"><i class="bi bi-heart-pulse-fill"></i> System Diagnostics</h3>
        <div class="diag-header-actions">
            <span class="badge bg-success me-2">
                <i class="bi bi-circle-fill"></i> Background Monitoring Active
            </span>
            <span class="last-updated">Last Updated: @(_isLoading && _info == null ? "Loading..." : _lastUpdatedRelative)</span>
            <button class="btn-refresh" @onclick="() => LoadDiagnosticsAsync(true)" disabled="@_isLoading">
                <i class="bi bi-arrow-clockwise @(_isLoading ? "spinning" : "")"></i>
                <span>@(_isLoading ? "Refreshing..." : "Refresh")</span>
            </button>
        </div>
    </div>

    @if (_isLoading && _info == null)
    {
        <div class="row mt-4">
            <div class="col-lg-12 mb-4">
                <div class="card">
                    <div class="card-body">
                        <SkeletonLoader Type="text" Size="large" />
                        <SkeletonLoader Type="text" Size="medium" />
                        <SkeletonLoader Type="text" Size="small" />
                    </div>
                </div>
            </div>
            <div class="col-lg-12 mb-4">
                <div class="card">
                    <div class="card-body">
                        <SkeletonLoader Type="text" Size="large" />
                        <SkeletonLoader Type="text" Size="medium" />
                        <SkeletonLoader Type="text" Size="small" />
                    </div>
                </div>
            </div>
        </div>
    }
    else if (_info != null)
    {
        <!-- New Layout with Cards -->
        <div class="row mt-4">
            <div class="col-lg-12 mb-4">
                <AlertPanel ActiveAlerts="@_activeAlerts" OnAlertAcknowledged="LoadActiveAlertsAsync" />
            </div>
            <div class="col-lg-12 mb-4">
                <PerformanceMetricsCard Metrics="@_info.Performance" />
            </div>
            <div class="col-lg-12 mb-4">
                <DatabaseHealthCard HealthInfo="@_info.DatabaseHealth" />
            </div>
            <div class="col-lg-6 mb-4">
                <ControllerHealthCard ControllerHealth="@_info.ControllerHealth" />
            </div>
            <div class="col-lg-6 mb-4">
                <CameraSystemCard CameraSystem="@_info.CameraSystem" />
            </div>
        </div>

        <!-- Performance Charts -->
        <div class="card mt-4">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="card-title mb-0"><i class="fas fa-chart-line"></i> Performance History</h5>
                <div class="btn-group btn-group-sm" role="group">
                    <button type="button" class="btn @(_performanceHistoryDays == 1 ? "btn-primary" : "btn-outline-primary")" @onclick="() => SetPerformanceHistoryDays(1)">24 Hours</button>
                    <button type="button" class="btn @(_performanceHistoryDays == 7 ? "btn-primary" : "btn-outline-primary")" @onclick="() => SetPerformanceHistoryDays(7)">7 Days</button>
                </div>
            </div>
            <div class="card-body">
                @if (_performanceSnapshots != null && _performanceSnapshots.Any())
                {
                    <div class="row">
                        <div class="col-lg-6"><PerformanceChart Snapshots="@_performanceSnapshots" Metric="CPU" /></div>
                        <div class="col-lg-6"><PerformanceChart Snapshots="@_performanceSnapshots" Metric="Memory" /></div>
                        <div class="col-lg-6"><PerformanceChart Snapshots="@_performanceSnapshots" Metric="Connections" /></div>
                        <div class="col-lg-6"><PerformanceChart Snapshots="@_performanceSnapshots" Metric="Requests" /></div>
                    </div>
                }
                else
                {
                    <p>No performance history data available.</p>
                }
            </div>
        </div>

        <!-- General System Info -->
        <div class="card mt-4">
            <div class="card-header">
                <h5 class="card-title"><i class="fas fa-info-circle"></i> General Information</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item"><strong>Overall Health:</strong> <StatusBadge Status="@_info.OverallHealth" /></li>
                            <li class="list-group-item"><strong>Uptime:</strong> @FormatUptime(_info.Uptime)</li>
                            <li class="list-group-item"><strong>.NET Version:</strong> @_info.DotNetVersion</li>
                        </ul>
                    </div>
                    <div class="col-md-6">
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item"><strong>OS:</strong> @_info.OsDescription</li>
                            <li class="list-group-item"><strong>OS Architecture:</strong> @_info.OsArchitecture</li>
                            <li class="list-group-item"><strong>Process Architecture:</strong> @_info.ProcessArchitecture</li>
                        </ul>
                    </div>
                </div>
                 <div class="row mt-3">
                    <div class="col-12">
                        <strong>Connection String:</strong>
                        <div class="input-group">
                            <input type="text" class="form-control" value="@_info.ConnectionString" readonly>
                            <CopyButton TextToCopy="@_info.ConnectionString" />
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="card mt-4">
            <div class="card-header">
                <h5 class="card-title"><i class="bi bi-tools"></i> Diagnostic Actions</h5>
            </div>
            <div class="card-body">
                <div class="row g-3">
                    <div class="col-md-4">
                        <button class="btn btn-outline-primary w-100" @onclick="TestDatabaseConnection" disabled="@_isTestingDb">
                            <i class="bi bi-database"></i>
                            @(_isTestingDb ? "Testing..." : "Test Database Connection")
                        </button>
                    </div>
                    <div class="col-md-4">
                        <button class="btn btn-outline-primary w-100" @onclick="TestAgentApi" disabled="@_isTestingAgent">
                            <i class="bi bi-cloud"></i>
                            @(_isTestingAgent ? "Testing..." : "Test Agent API")
                        </button>
                    </div>
                    <div class="col-md-4">
                        <button class="btn btn-outline-secondary w-100" @onclick="ClearActionResults">
                            <i class="bi bi-trash"></i>
                            Clear Results
                        </button>
                    </div>
                </div>

                @if (_actionResults.Any())
                {
                    <div class="mt-4">
                        <h6>Recent Actions:</h6>
                        <div class="list-group">
                            @foreach (var result in _actionResults.OrderByDescending(r => r.ExecutedAt).Take(5))
                            {
                                <div class="list-group-item">
                                    <div class="d-flex justify-content-between align-items-start">
                                        <div>
                                            <h6 class="mb-1">
                                                @if (result.Success)
                                                {
                                                    <i class="bi bi-check-circle-fill text-success"></i>
                                                }
                                                else
                                                {
                                                    <i class="bi bi-x-circle-fill text-danger"></i>
                                                }
                                                @result.ActionName
                                            </h6>
                                            <p class="mb-1">@result.Message</p>
                                            <small class="text-muted">
                                                @result.ExecutedAt.ToLocalTime().ToString("yyyy-MM-dd HH:mm:ss")
                                                (@result.ResponseTimeMs ms)
                                            </small>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                }
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-danger mt-4" role="alert">
            Failed to load system diagnostics. Please try refreshing the page.
        </div>
    }
</div>

@code {
    private SystemDiagnosticsInfo? _info;
    private bool _isLoading = false;
    private Timer? _refreshTimer;
    private Timer? _updateDisplayTimer;
    private string _lastUpdatedRelative = "never";
    private List<PerformanceSnapshot> _performanceSnapshots;
    private List<DiagnosticAlert> _activeAlerts;
    private int _performanceHistoryDays = 1;

    private List<DiagnosticActionResult> _actionResults = new();
    private bool _isTestingDb = false;
    private bool _isTestingAgent = false;

    protected override async Task OnInitializedAsync()
    {
        await LoadDiagnosticsAsync(true);
        await LoadPerformanceHistoryAsync();
        await LoadActiveAlertsAsync();
        StartTimers();
    }

    private void StartTimers()
    {
        _refreshTimer = new Timer(async _ => await LoadDiagnosticsAsync(true), null, TimeSpan.FromSeconds(30), TimeSpan.FromSeconds(30));
        _updateDisplayTimer = new Timer(_ => UpdateTimeDisplay(), null, TimeSpan.FromSeconds(1), TimeSpan.FromSeconds(1));
    }

    private async Task LoadDiagnosticsAsync(bool showLoadingIndicator = false)
    {
        if (showLoadingIndicator)
        {
            _isLoading = true;
            await InvokeAsync(StateHasChanged);
        }

        try
        {
            _info = await DiagnosticsService.GetDiagnosticsAsync();
            UpdateTimeDisplay(); // Update immediately after fetch
        }
        catch (Exception ex)
        {
            // In a real app, you'd want to log this exception.
            Console.WriteLine($"Error loading diagnostics: {ex.Message}");
            _info = null;
        }


        _isLoading = false;
        await InvokeAsync(StateHasChanged);
    }

    private async Task LoadPerformanceHistoryAsync()
    {
        _performanceSnapshots = await PerformanceHistoryService.GetPerformanceSnapshotsAsync(DateTime.UtcNow.AddDays(-_performanceHistoryDays), DateTime.UtcNow);
        await InvokeAsync(StateHasChanged);
    }

    private async Task SetPerformanceHistoryDays(int days)
    {
        _performanceHistoryDays = days;
        await LoadPerformanceHistoryAsync();
    }

    private async Task LoadActiveAlertsAsync()
    {
        _activeAlerts = await AlertManagementService.GetActiveAlertsAsync();
        await InvokeAsync(StateHasChanged);
    }

    private void UpdateTimeDisplay()
    {
        if (_info != null)
        {
            var timeSince = DateTime.UtcNow - _info.LastUpdated;
            if (timeSince < TimeSpan.FromSeconds(5)) _lastUpdatedRelative = "just now";
            else if (timeSince < TimeSpan.FromMinutes(1)) _lastUpdatedRelative = $"{(int)timeSince.TotalSeconds}s ago";
            else if (timeSince < TimeSpan.FromHours(1)) _lastUpdatedRelative = $"{(int)timeSince.TotalMinutes}m ago";
            else _lastUpdatedRelative = $"{(int)timeSince.TotalHours}h ago";

            InvokeAsync(StateHasChanged);
        }
    }

    private string FormatUptime(TimeSpan uptime)
    {
        return $"{(int)uptime.TotalDays}d {uptime.Hours}h {uptime.Minutes}m";
    }

    public async ValueTask DisposeAsync()
    {
        if (_refreshTimer is IAsyncDisposable refreshTimerAsync) await refreshTimerAsync.DisposeAsync();
        else _refreshTimer?.Dispose();

        if (_updateDisplayTimer is IAsyncDisposable updateTimerAsync) await updateTimerAsync.DisposeAsync();
        else _updateDisplayTimer?.Dispose();
    }

    private async Task TestDatabaseConnection()
    {
        _isTestingDb = true;
        StateHasChanged();

        try
        {
            var result = await DiagnosticsService.TestDatabaseConnectionAsync();
            _actionResults.Add(result);
        }
        catch (Exception ex)
        {
            _actionResults.Add(new DiagnosticActionResult
            {
                ActionName = "Test Database Connection",
                Success = false,
                Message = $"Error: {ex.Message}",
                ExecutedAt = DateTime.UtcNow,
                ResponseTimeMs = 0
            });
        }

        _isTestingDb = false;
        StateHasChanged();
    }

    private async Task TestAgentApi()
    {
        _isTestingAgent = true;
        StateHasChanged();

        try
        {
            var result = await DiagnosticsService.TestAgentApiAsync();
            _actionResults.Add(result);
        }
        catch (Exception ex)
        {
            _actionResults.Add(new DiagnosticActionResult
            {
                ActionName = "Test Agent API",
                Success = false,
                Message = $"Error: {ex.Message}",
                ExecutedAt = DateTime.UtcNow,
                ResponseTimeMs = 0
            });
        }

        _isTestingAgent = false;
        StateHasChanged();
    }

    private void ClearActionResults()
    {
        _actionResults.Clear();
        StateHasChanged();
    }
}
