<!-- [MODIFIED] -->
@page "/admin/system-diagnostics"
@using GFC.BlazorServer.Auth
@attribute [Authorize(Policy = AppPolicies.RequireAdmin)]
@inject IDiagnosticsService DiagnosticsService
@using GFC.Core.Models
@using GFC.Core.Models.Diagnostics
@using GFC.BlazorServer.Components.Shared.Diagnostics
@implements IAsyncDisposable

<PageTitle>System Diagnostics</PageTitle>

<div class="diag-page-container">
    <!-- Header -->
    <div class="diag-header">
        <h3 class="diag-title"><i class="bi bi-heart-pulse-fill"></i> System Diagnostics</h3>
        <div class="diag-header-actions">
            <span class="last-updated">Last Updated: @(_isLoading && _info == null ? "Loading..." : _lastUpdatedRelative)</span>
            <button class="btn-refresh" @onclick="() => LoadDiagnosticsAsync(true)" disabled="@_isLoading">
                <i class="bi bi-arrow-clockwise @(_isLoading ? "spinning" : "")"></i>
                <span>@(_isLoading ? "Refreshing..." : "Refresh")</span>
            </button>
        </div>
    </div>

    @if (_isLoading && _info == null)
    {
        <div class="text-center mt-5">
            <div class="spinner-border" style="width: 3rem; height: 3rem;" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
            <h4>Loading diagnostics data...</h4>
        </div>
    }
    else if (_info != null)
    {
        <!-- New Layout with Cards -->
        <div class="row mt-4">
            <div class="col-lg-12 mb-4">
                <PerformanceMetricsCard Metrics="@_info.Performance" />
            </div>
            <div class="col-lg-12 mb-4">
                <DatabaseHealthCard HealthInfo="@_info.DatabaseHealth" />
            </div>
            <div class="col-lg-6 mb-4">
                <ControllerHealthCard ControllerHealth="@_info.ControllerHealth" />
            </div>
            <div class="col-lg-6 mb-4">
                <CameraSystemCard CameraSystem="@_info.CameraSystem" />
            </div>
        </div>

        <!-- General System Info -->
        <div class="card mt-4">
            <div class="card-header">
                <h5 class="card-title"><i class="fas fa-info-circle"></i> General Information</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item"><strong>Overall Health:</strong> <StatusBadge Status="@_info.OverallHealth" /></li>
                            <li class="list-group-item"><strong>Uptime:</strong> @FormatUptime(_info.Uptime)</li>
                            <li class="list-group-item"><strong>.NET Version:</strong> @_info.DotNetVersion</li>
                        </ul>
                    </div>
                    <div class="col-md-6">
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item"><strong>OS:</strong> @_info.OsDescription</li>
                            <li class="list-group-item"><strong>OS Architecture:</strong> @_info.OsArchitecture</li>
                            <li class="list-group-item"><strong>Process Architecture:</strong> @_info.ProcessArchitecture</li>
                        </ul>
                    </div>
                </div>
                 <div class="row mt-3">
                    <div class="col-12">
                        <strong>Connection String:</strong>
                        <div class="input-group">
                            <input type="text" class="form-control" value="@_info.ConnectionString" readonly>
                            <CopyButton TextToCopy="@_info.ConnectionString" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-danger mt-4" role="alert">
            Failed to load system diagnostics. Please try refreshing the page.
        </div>
    }
</div>

@code {
    private SystemDiagnosticsInfo? _info;
    private bool _isLoading = false;
    private Timer? _refreshTimer;
    private Timer? _updateDisplayTimer;
    private string _lastUpdatedRelative = "never";

    protected override async Task OnInitializedAsync()
    {
        await LoadDiagnosticsAsync(true);
        StartTimers();
    }

    private void StartTimers()
    {
        _refreshTimer = new Timer(async _ => await LoadDiagnosticsAsync(true), null, TimeSpan.FromSeconds(30), TimeSpan.FromSeconds(30));
        _updateDisplayTimer = new Timer(_ => UpdateTimeDisplay(), null, TimeSpan.FromSeconds(1), TimeSpan.FromSeconds(1));
    }

    private async Task LoadDiagnosticsAsync(bool showLoadingIndicator = false)
    {
        if (showLoadingIndicator)
        {
            _isLoading = true;
            await InvokeAsync(StateHasChanged);
        }

        try
        {
            _info = await DiagnosticsService.GetDiagnosticsAsync();
            UpdateTimeDisplay(); // Update immediately after fetch
        }
        catch (Exception ex)
        {
            // In a real app, you'd want to log this exception.
            Console.WriteLine($"Error loading diagnostics: {ex.Message}");
            _info = null;
        }


        _isLoading = false;
        await InvokeAsync(StateHasChanged);
    }

    private void UpdateTimeDisplay()
    {
        if (_info != null)
        {
            var timeSince = DateTime.UtcNow - _info.LastUpdated;
            if (timeSince < TimeSpan.FromSeconds(5)) _lastUpdatedRelative = "just now";
            else if (timeSince < TimeSpan.FromMinutes(1)) _lastUpdatedRelative = $"{(int)timeSince.TotalSeconds}s ago";
            else if (timeSince < TimeSpan.FromHours(1)) _lastUpdatedRelative = $"{(int)timeSince.TotalMinutes}m ago";
            else _lastUpdatedRelative = $"{(int)timeSince.TotalHours}h ago";

            InvokeAsync(StateHasChanged);
        }
    }

    private string FormatUptime(TimeSpan uptime)
    {
        return $"{(int)uptime.TotalDays}d {uptime.Hours}h {uptime.Minutes}m";
    }

    public async ValueTask DisposeAsync()
    {
        if (_refreshTimer is IAsyncDisposable refreshTimerAsync) await refreshTimerAsync.DisposeAsync();
        else _refreshTimer?.Dispose();

        if (_updateDisplayTimer is IAsyncDisposable updateTimerAsync) await updateTimerAsync.DisposeAsync();
        else _updateDisplayTimer?.Dispose();
    }
}
