@page "/controllers/card-access"
@attribute [Authorize(Policy = AppPolicies.RequireAdmin)]
@using GFC.BlazorServer.Data.Entities
@using GFC.BlazorServer.Data
@using GFC.BlazorServer.Services
@using GFC.BlazorServer.Services.Controllers
@using Microsoft.AspNetCore.Authorization
@using Microsoft.EntityFrameworkCore
@inject ControllerRegistryService RegistryService
@inject IControllerClient ControllerClient
@inject GfcDbContext DbContext
@inject NavigationManager Navigation
@inject CustomAuthenticationStateProvider AuthStateProvider
@inject ILogger<CardAccessController> Logger

<PageTitle>Card Access Controller - GFC</PageTitle>

<div class="controller-container">
    <header class="page-header">
        <div class="header-title">
            <h1>Card Access Controller</h1>
            <p>Unified hardware management and automation suite</p>
        </div>
        <div class="header-actions">
            @if (_selectedController != null)
            {
                <div class="d-flex gap-2">
                    <button class="btn-modern btn-outline-modern" @onclick="TestConnection" disabled="@_isTesting">
                        @if (_isTesting) { <span class="spinner-border spinner-border-sm me-2"></span> }
                        else { <i class="bi bi-broadcast"></i> }
                        Test Link
                    </button>
                    <button class="btn-modern btn-primary-modern" @onclick="SyncAllToController" disabled="@_isSyncing">
                        @if (_isSyncing) { <span class="spinner-border spinner-border-sm me-2"></span> }
                        else { <i class="bi bi-cloud-arrow-up"></i> }
                        @( _isSyncing ? "Syncing Logic..." : "Sync All" )
                    </button>
                </div>
            }
        </div>
    </header>

    @if (_errorMessage != null)
    {
        <div class="alert alert-danger alert-dismissible fade show glass-panel py-3 px-4 mb-4" role="alert">
            <i class="bi bi-exclamation-octagon-fill me-2"></i> @_errorMessage
            <button type="button" class="btn-close" @onclick="() => _errorMessage = null"></button>
        </div>
    }

    @if (_successMessage != null)
    {
        <div class="alert alert-success alert-dismissible fade show glass-panel py-3 px-4 mb-4" role="alert">
            <i class="bi bi-check-circle-fill me-2"></i> @_successMessage
            <button type="button" class="btn-close" @onclick="() => _successMessage = null"></button>
        </div>
    }

    @if (_isLoading)
    {
        <div class="text-center my-5 py-5">
            <div class="spinner-grow text-primary" role="status" style="width: 3rem; height: 3rem;">
                <span class="visually-hidden">Loading...</span>
            </div>
            <p class="mt-3 text-muted">Initialize neural link...</p>
        </div>
    }
    else
    {
        <section class="selection-grid">
            @foreach (var controller in _controllers)
            {
                <div class="controller-card @(_selectedControllerId == controller.Id ? "active" : "")" 
                     @onclick="() => SelectController(controller.Id)">
                    <div class="card-icon">
                        <i class="bi @(controller.IsOnline ? "bi-hdd-network-fill" : "bi-hdd-network")"></i>
                    </div>
                    <div class="card-info">
                        <h3>@controller.Name</h3>
                        <div class="card-status">
                            <span class="status-indicator @(controller.IsOnline ? "status-online" : "status-offline")"></span>
                            <span>@(controller.IsOnline ? "Online" : "Offline")</span>
                        </div>
                    </div>
                    <div class="mt-3 small text-muted">
                        <i class="bi bi-door-open"></i> @controller.Doors.Count Units active
                    </div>
                </div>
            }
            <div class="controller-card add-card" @onclick="ShowAddControllerModal">
                <div class="opacity-50">
                   <i class="bi bi-plus-circle" style="font-size: 2rem;"></i>
                   <p class="mt-2 fw-600">Register Node</p>
                </div>
            </div>
        </section>

        @if (_selectedController != null)
        {
            <div class="dashboard-grid @(_isChangingTab ? "opacity-50 fadeOut" : "fadeIn")">
                <!-- Left Column: Device Context -->
                <div class="details-column">
                    <div class="glass-panel stagger-1">
                        <div class="panel-header">
                            <h2><i class="bi bi-cpu"></i> Node Diagnostics</h2>
                            <span class="door-index">@_selectedController.SerialNumberDisplay</span>
                        </div>
                        
                        <div class="info-grid mt-4">
                            <div class="info-item">
                                <div class="info-label">Address</div>
                                <div class="info-value">@_selectedController.IpAddress</div>
                            </div>
                            <div class="info-item">
                                <div class="info-label">Port</div>
                                <div class="info-value">@_selectedController.Port</div>
                            </div>
                            <div class="info-item">
                                <div class="info-label">Interface</div>
                                <div class="info-value">@(_selectedController.IsSimulated ? "Virtual Proxy" : "TCP/IP Agent")</div>
                            </div>
                            <div class="info-item">
                                <div class="info-label">Health</div>
                                <div class="info-value @(IsHealthy(_selectedController) ? "text-success" : "text-warning")">
                                    @(IsHealthy(_selectedController) ? "Nominal" : "Warning")
                                </div>
                            </div>
                        </div>

                        <div class="mt-4 pt-2">
                             <button class="btn-modern btn-outline-modern w-100" @onclick="RebootController">
                                <i class="bi bi-arrow-clockwise"></i> Request Soft Reboot
                            </button>
                        </div>
                    </div>

                    <!-- Card Reader Configuration -->
                    <div class="glass-panel stagger-2">
                        <div class="panel-header">
                            <h2><i class="bi bi-upc-scan"></i> Scanner Proxy</h2>
                        </div>
                        <p class="small text-muted mb-3">Redirect card capture events to the system manager.</p>
                        
                        <div class="mb-3">
                            <label class="form-label">Active Scanner Node</label>
                            <select class="modern-input" @bind="_cardReaderControllerId" @bind:after="SaveCardReaderConfig">
                                <option value="0">Disabled (Manual Entry)</option>
                                @foreach (var controller in _controllers)
                                {
                                    <option value="@controller.Id">@controller.Name</option>
                                }
                            </select>
                        </div>
                        
                        @if (_cardReaderControllerId > 0)
                        {
                            <div class="p-3 rounded-4 mt-2 proxy-active-banner">
                                <div class="d-flex align-items-center gap-2 text-success fw-bold small">
                                    <i class="bi bi-record-circle-fill animate-pulse"></i>
                                    <span>Proxying events from @_controllers.FirstOrDefault(c => c.Id == _cardReaderControllerId)?.Name</span>
                                </div>
                            </div>
                        }
                    </div>
                </div>

                <!-- Right Column: Control Center -->
                <div class="content-column">
                    <div class="glass-panel stagger-3">
                        <div class="panel-header">
                            <h2>
                                @if (_activeTab == "units") { <i class="bi bi-door-open"></i> }
                                else if (_activeTab == "schedules") { <i class="bi bi-calendar-range"></i> }
                                else { <i class="bi bi-shield-lock"></i> }
                                @GetTabTitle()
                            </h2>
                            <div class="header-actions">
                                @if (_activeTab == "units") {
                                    <button class="btn-modern btn-primary-modern btn-sm" @onclick="ShowAddDoorModal">
                                        <i class="bi bi-plus-lg"></i> Register Unit
                                    </button>
                                } else if (_activeTab == "schedules") {
                                    <button class="btn-modern btn-primary-modern btn-sm" @onclick="ShowAddProfileModal">
                                        <i class="bi bi-plus-lg"></i> New Profile
                                    </button>
                                }
                            </div>
                        </div>

                        <div class="modern-tabs">
                            <button class="tab-btn @(_activeTab == "units" ? "active" : "")" @onclick='() => ChangeTab("units")'>Door Units</button>
                            <button class="tab-btn @(_activeTab == "schedules" ? "active" : "")" @onclick='() => ChangeTab("schedules")'>Time Profiles</button>
                            <button class="tab-btn @(_activeTab == "advanced" ? "active" : "")" @onclick='() => ChangeTab("advanced")'>Auto-Unlock</button>
                        </div>

                        <div class="tab-content mt-4">
                            @if (_activeTab == "units")
                            {
                                @if (!_selectedController.Doors.Any())
                                {
                                    <div class="text-center py-5 glass-panel empty-state-panel">
                                        <div class="opacity-50">
                                            <i class="bi bi-door-closed" style="font-size: 4rem;"></i>
                                            <h3 class="mt-3">No Hardware Units Linked</h3>
                                            <p class="mb-4">Provision a relay unit to this controller to start managing access.</p>
                                        </div>
                                        <button class="btn-modern btn-primary-modern mx-auto" @onclick="ShowAddDoorModal">Add Primary Unit</button>
                                    </div>
                                }
                                else
                                {
                                    <div class="door-grid">
                                        @foreach (var door in _selectedController.Doors.OrderBy(d => d.DoorIndex))
                                        {
                                            <div class="door-card fadeIn">
                                                <div class="door-header">
                                                    <span class="door-index">UNIT_@door.DoorIndex</span>
                                                    <div class="door-actions">
                                                        <button class="btn-icon" title="Edit Logic" @onclick="() => EditDoor(door)"><i class="bi bi-sliders"></i></button>
                                                        <button class="btn-icon delete" title="Unlink" @onclick="() => DeleteDoor(door)"><i class="bi bi-trash3"></i></button>
                                                    </div>
                                                </div>
                                                <div class="door-name">@door.Name</div>
                                                <div class="door-meta mt-3">
                                                    <div class="meta-row">
                                                        <div class="status-indicator @(door.IsEnabled ? "status-online" : "opacity-25")" style="width: 6px; height: 6px;"></div>
                                                        <span class="@(door.IsEnabled ? "text-success" : "text-muted")">@(door.IsEnabled ? "Logic Active" : "Logic Passive")</span>
                                                    </div>
                                                    <div class="meta-row">
                                                        <i class="bi bi-shield-shaded"></i>
                                                        <span class="small">Standard Access Mode</span>
                                                    </div>
                                                </div>
                                            </div>
                                        }
                                    </div>
                                }
                            }
                            else if (_activeTab == "schedules")
                            {
                                <div class="door-grid">
                                    @foreach (var profile in _timeProfiles)
                                    {
                                        <div class="door-card fadeIn">
                                            <div class="door-header">
                                                <span class="door-index">PROFILE</span>
                                                <div class="door-actions">
                                                    <button class="btn-icon" @onclick="() => EditProfile(profile)"><i class="bi bi-pencil"></i></button>
                                                    <button class="btn-icon delete" @onclick="() => DeleteProfile(profile)"><i class="bi bi-trash3"></i></button>
                                                </div>
                                            </div>
                                            <div class="door-name">@profile.Name</div>
                                            <div class="door-meta mt-2">
                                                <div class="meta-row small text-muted">
                                                    <i class="bi bi-calendar3"></i>
                                                    <span>@profile.Intervals.Count Intervals defined</span>
                                                </div>
                                                <div class="meta-row small text-muted">
                                                    <i class="bi bi-link-45deg"></i>
                                                    <span>Used by 4 members</span>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                    @if (!_timeProfiles.Any())
                                    {
                                        <div class="text-center py-5 w-100">
                                            <p class="text-muted">No time profiles found. Create one to manage restricted access.</p>
                                        </div>
                                    }
                                </div>
                            }
                            else if (_activeTab == "advanced")
                            {
                                <div class="alert glass-panel border-info d-flex align-items-start gap-3">
                                    <i class="bi bi-info-circle-fill text-info mt-1"></i>
                                    <div>
                                        <div class="fw-bold fs-5 mb-1">Coming Soon: Automatic Unlock Cycles</div>
                                        <p class="text-muted small mb-0">Configure your doors to unlock automatically during business hours or special events without requiring card swipes.</p>
                                    </div>
                                </div>
                                
                                <div class="d-flex flex-column gap-3 mt-4 opacity-50">
                                    @foreach (var door in _selectedController.Doors.Take(2))
                                    {
                                        <div class="glass-panel py-3 px-4 d-flex justify-content-between align-items-center">
                                            <div class="d-flex align-items-center gap-3">
                                                <div class="bg-primary rounded-circle p-2 text-white">
                                                    <i class="bi bi-door-open"></i>
                                                </div>
                                                <div>
                                                    <div class="fw-bold">@door.Name</div>
                                                    <div class="small">No active unlock schedule</div>
                                                </div>
                                            </div>
                                            <button class="btn-modern btn-outline-modern btn-sm" disabled>Manage Cycle</button>
                                        </div>
                                    }
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
    }
</div>

<!-- Door Modal -->
@if (_showDoorModal)
{
    <div class="modal-overlay" @onclick="CloseDoorModal">
        <div class="modern-modal" @onclick:stopPropagation="true">
            <div class="panel-header mb-4">
                <h2><i class="bi bi-door-open"></i> @(_editingDoor == null ? "Register Unit" : "Device Configuration")</h2>
                <button type="button" class="btn-close" @onclick="CloseDoorModal"></button>
            </div>
            
            <div class="form-group">
                <label class="form-label">Relay Controller Port</label>
                <div class="d-flex gap-2">
                    @for (int i = 1; i <= 4; i++)
                    {
                        var index = i;
                        <button class="tab-btn flex-grow-1 @(_doorForm.DoorIndex == index ? "active" : "")" @onclick="() => _doorForm.DoorIndex = index">
                            #@index
                        </button>
                    }
                </div>
            </div>

            <div class="form-group">
                <label class="form-label">Descriptive Identity</label>
                <input type="text" class="modern-input" @bind="_doorForm.Name" placeholder="Node Name..." />
            </div>

            <div class="form-group py-3">
                <div class="d-flex align-items-center justify-content-between">
                    <div>
                         <div class="fw-bold">Status: @(_doorForm.IsEnabled ? "ACTIVE" : "DISABLED")</div>
                         <div class="small text-muted">Toggle hardware relay execution.</div>
                    </div>
                    <div class="form-check form-switch">
                        <input class="form-check-input" type="checkbox" @bind="_doorForm.IsEnabled" style="width: 2.5rem; height: 1.25rem;" />
                    </div>
                </div>
            </div>

            @if (_doorModalError != null)
            {
                <div class="alert alert-danger py-2 border-0 rounded-4 mb-4 small">
                    <i class="bi bi-exclamation-triangle-fill me-2"></i> @_doorModalError
                </div>
            }

            <div class="d-flex gap-3">
                <button class="btn-modern btn-outline-modern flex-grow-1" @onclick="CloseDoorModal">Dismiss</button>
                <button class="btn-modern btn-primary-modern flex-grow-1" @onclick="SaveDoor" disabled="@_savingDoor">
                    @if (_savingDoor) { <span class="spinner-border spinner-border-sm me-2"></span> }
                    Commit Changes
                </button>
            </div>
        </div>
    </div>
}

<!-- Controller Modal -->
@if (_showControllerModal)
{
    <div class="modal-overlay" @onclick="() => _showControllerModal = false">
        <div class="modern-modal" @onclick:stopPropagation="true">
            <div class="panel-header mb-4">
                <h2><i class="bi bi-cpu"></i> Register Node</h2>
                <button type="button" class="btn-close" @onclick="() => _showControllerModal = false"></button>
            </div>
            
            <div class="form-group">
                <label class="form-label">Friendly Name</label>
                <input type="text" class="modern-input" @bind="_controllerForm.Name" placeholder="Main Entrance, Server Room..." />
            </div>

            <div class="d-flex gap-3">
                <div class="form-group flex-grow-1">
