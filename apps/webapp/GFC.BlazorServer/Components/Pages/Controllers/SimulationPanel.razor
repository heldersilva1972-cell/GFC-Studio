@page "/controllers/simulation"
@attribute [Authorize(Policy = AppPolicies.RequireAdmin)]
@using GFC.BlazorServer.Data
@using GFC.BlazorServer.Data.Entities
@using GFC.BlazorServer.Services
@using GFC.BlazorServer.Services.Simulation
@using GFC.BlazorServer.Services.Controllers
@using Microsoft.AspNetCore.Authorization
@using System.Threading
@inject ISystemSettingsService SystemSettingsService
@inject SimulationPresetService PresetService
@inject ISimulationEngineControlService EngineService
@inject SimControllerStateStore StateStore
@inject ControllerRegistryService RegistryService
@inject GfcDbContext DbContext
@inject NavigationManager Navigation
@inject CustomAuthenticationStateProvider AuthStateProvider
@inject ILogger<SimulationPanel> Logger
@inject IJSRuntime JSRuntime
@implements IDisposable

<PageTitle>Simulation Control Panel - GFC Controllers</PageTitle>

<div class="page-header">
    <div>
        <h1>Simulation Control Panel</h1>
        <p class="text-muted mb-0">Control and monitor simulation mode behavior.</p>
    </div>
    <div class="d-flex gap-2">
        <button class="btn btn-outline-primary" @onclick="NavigateToSettings">
            <i class="bi bi-gear"></i> Settings
        </button>
        <button class="btn btn-outline-secondary" @onclick="NavigateBackToDashboard">
            <i class="bi bi-arrow-left"></i> Back to dashboard
        </button>
    </div>
</div>

@if (!_modeLoaded)
{
    <div class="alert alert-secondary">
        <i class="bi bi-arrow-repeat"></i> Checking controller mode...
    </div>
}
else if (_useRealControllers)
{
    <div class="alert alert-info">
        <h5><i class="bi bi-info-circle"></i> Simulation Disabled</h5>
        <p class="mb-0">
            Simulation mode is currently disabled. The system is running against real controllers.
            To enable simulation mode, go to <a href="/settings">Settings</a> and toggle "Use Real Controllers" off.
        </p>
    </div>
}
else
{
    @if (_errorMessage != null)
    {
        <div class="alert alert-danger">@_errorMessage</div>
    }

    @if (_successMessage != null)
    {
        <div class="alert alert-success">@_successMessage</div>
    }

    <div class="row g-3">
        @* Simulation Time Tile *@
        <div class="col-md-6">
            <div class="data-card">
                <h3>Simulation Time</h3>
                <div class="mb-3">
                    <div class="h4">@_currentSimTime.ToString("yyyy-MM-dd HH:mm:ss") UTC</div>
                    <small class="text-muted">Real time: @DateTime.UtcNow.ToString("yyyy-MM-dd HH:mm:ss") UTC</small>
                </div>
                <div class="d-flex flex-wrap gap-2">
                    <button class="btn btn-sm btn-outline-primary" @onclick="AdvanceTimeToNow" disabled="@_isProcessing">
                        <i class="bi bi-clock"></i> Now
                    </button>
                    <button class="btn btn-sm btn-outline-primary" @onclick="@(() => AdvanceTime(TimeSpan.FromMinutes(10)))" disabled="@_isProcessing">
                        +10 min
                    </button>
                    <button class="btn btn-sm btn-outline-primary" @onclick="@(() => AdvanceTime(TimeSpan.FromHours(1)))" disabled="@_isProcessing">
                        +1 hour
                    </button>
                    <button class="btn btn-sm btn-outline-primary" @onclick="@(() => AdvanceTime(TimeSpan.FromHours(4)))" disabled="@_isProcessing">
                        +4 hours
                    </button>
                </div>
            </div>
        </div>

        @* Controller & Door State Tile *@
        <div class="col-md-6">
            <div class="data-card">
                <h3>Controller & Door State</h3>
                <div class="mb-3">
                    <label class="form-label">Controller</label>
                    <select class="form-select" @bind="_selectedControllerId" @bind:after="OnControllerSelected">
                        <option value="0">Select controller...</option>
                        @foreach (var controller in _controllers)
                        {
                            <option value="@controller.Id">@controller.Name (SN: @controller.SerialNumber)</option>
                        }
                    </select>
                </div>
                @if (_selectedController != null && _doorStates.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-sm">
                            <thead>
                                <tr>
                                    <th>Door</th>
                                    <th>Locked</th>
                                    <th>Open</th>
                                    <th>Alarm</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var doorState in _doorStates)
                                {
                                    <tr>
                                        <td>@doorState.DoorName (Index: @doorState.DoorIndex)</td>
                                        <td>
                                            @if (doorState.IsLocked)
                                            {
                                                <span class="badge bg-danger">Locked</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-success">Unlocked</span>
                                            }
                                        </td>
                                        <td>
                                            @if (doorState.IsDoorOpen)
                                            {
                                                <span class="badge bg-warning text-dark">Open</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary">Closed</span>
                                            }
                                        </td>
                                        <td>
                                            @if (doorState.AlarmActive)
                                            {
                                                <span class="badge bg-danger">Active</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary">None</span>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <button class="btn btn-sm btn-outline-danger mt-2" @onclick="ResetControllerState" disabled="@_isProcessing">
                        <i class="bi bi-arrow-counterclockwise"></i> Reset Controller State
                    </button>
                }
            </div>
        </div>

        @* Simulation Presets Tile *@
        <div class="col-md-6">
            <div class="data-card">
                <h3>Simulation Presets</h3>
                <div class="mb-3">
                    <label class="form-label">Preset Scenario</label>
                    <select class="form-select" @bind="_selectedPresetKey">
                        <option value="">Select preset...</option>
                        @foreach (var preset in _presets)
                        {
                            <option value="@preset.Key">@preset.Name</option>
                        }
                    </select>
                    @if (!string.IsNullOrEmpty(_selectedPresetKey))
                    {
                        var preset = _presets.FirstOrDefault(p => p.Key == _selectedPresetKey);
                        if (preset != null)
                        {
                            <small class="text-muted d-block mt-1">@preset.Description</small>
                        }
                    }
                </div>
                <button class="btn btn-sm btn-primary" @onclick="ApplyPreset" disabled="@(string.IsNullOrEmpty(_selectedPresetKey) || _selectedControllerId == 0 || _isProcessing)">
                    <i class="bi bi-play-circle"></i> Apply Preset
                </button>
            </div>
        </div>

        @* Event Generator Tile *@
        <div class="col-md-6">
            <div class="data-card">
                <h3>Event Generator</h3>
                <div class="mb-3">
                    <label class="form-label">Controller</label>
                    <select class="form-select" @bind="_eventControllerId">
                        <option value="0">Select controller...</option>
                        @foreach (var controller in _controllers)
                        {
                            <option value="@controller.Id">@controller.Name</option>
                        }
                    </select>
                </div>
                <div class="mb-3">
                    <label class="form-label">Door Index</label>
                    <InputNumber class="form-control" @bind-Value="_eventDoorIndex" min="0" max="15" />
                </div>
                <div class="mb-3">
                    <label class="form-label">Card Number (optional)</label>
                    <InputNumber class="form-control" @bind-Value="_eventCardNumber" />
                </div>
                <div class="mb-3">
                    <label class="form-label">Event Type</label>
                    <select class="form-select" @bind="_eventType">
                        <option value="1">Door Open</option>
                        <option value="2">Door Closed</option>
                        <option value="3">Card Granted</option>
                        <option value="4">Card Denied</option>
                        <option value="5">Forced Open Alarm</option>
                        <option value="6">Held Open Alarm</option>
                        <option value="7">Alarm Cleared</option>
                        <option value="8">Auto-Open Activated</option>
                        <option value="9">Auto-Open Deactivated</option>
                    </select>
                </div>
                <div class="mb-3">
                    <label class="form-label">Time Offset</label>
                    <select class="form-select" @bind="_eventTimeOffset">
                        <option value="now">Now</option>
                        <option value="-5min">-5 minutes</option>
                        <option value="-30min">-30 minutes</option>
                    </select>
                </div>
                <button class="btn btn-sm btn-primary" @onclick="InjectEvent" disabled="@(_eventControllerId == 0 || _isProcessing)">
                    <i class="bi bi-plus-circle"></i> Inject Event
                </button>
            </div>
        </div>

        @* Diagnostics Tile *@
        <div class="col-12">
            <div class="data-card">
                <h3>Diagnostics</h3>
                <div class="row g-3">
                    <div class="col-md-3">
                        <div class="text-muted small">Simulated Events Stored</div>
                        <div class="h5">@_totalSimulatedEvents</div>
                    </div>
                    <div class="col-md-3">
                        <div class="text-muted small">Last Simulated Event</div>
                        <div class="h6">@(_lastSimEventTime?.ToString("yyyy-MM-dd HH:mm:ss") ?? "None")</div>
                    </div>
                    <div class="col-md-3">
                        <div class="text-muted small">Last Engine Tick</div>
                        <div class="h6">@_lastEngineTick.ToString("yyyy-MM-dd HH:mm:ss")</div>
                    </div>
                    <div class="col-md-3">
                        <a href="/controllers/events?source=simulated" class="btn btn-sm btn-outline-primary">
                            <i class="bi bi-list-ul"></i> View Simulated Events
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@code {
    private List<ControllerDevice> _controllers = new();
    private ControllerDevice? _selectedController;
    private int _selectedControllerId = 0;
    private int _eventControllerId = 0;
    private int _eventDoorIndex = 0;
    private long? _eventCardNumber;
    private int _eventType = 1;
    private string _eventTimeOffset = "now";
    private string? _selectedPresetKey;
    private List<SimulationPreset> _presets = new();
    private List<DoorStateViewModel> _doorStates = new();
    private DateTime _currentSimTime = DateTime.UtcNow;
    private DateTime _lastEngineTick = DateTime.UtcNow;
    private int _totalSimulatedEvents = 0;
    private DateTime? _lastSimEventTime;
    private bool _isProcessing = false;
    private string? _errorMessage;
    private string? _successMessage;
    private bool _useRealControllers = false;
    private bool _modeLoaded = false;
    private CancellationTokenSource? _refreshLoopCts;

    protected override async Task OnInitializedAsync()
    {
        await CheckAdminAccess();
        await LoadControllerModeAsync();
        if (_useRealControllers)
        {
            return;
        }

        await LoadData();
        _presets = PresetService.GetPresets().ToList();

        StartRefreshLoop();
    }

    private async Task CheckAdminAccess()
    {
        var authState = await AuthStateProvider.GetAuthenticationStateAsync();
        var isAdmin = authState.User.IsInRole(AppRoles.Admin);
        if (!isAdmin)
        {
            var currentUser = AuthStateProvider.GetCurrentUser();
            isAdmin = currentUser?.IsAdmin == true;
        }
        
        if (!isAdmin)
        {
            Navigation.NavigateTo("/controllers");
        }
    }

    private async Task LoadData()
    {
        try
        {
            _controllers = (await RegistryService.GetControllersAsync(includeDoors: true)).ToList();
            await RefreshDiagnostics();
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Failed to load simulation panel data");
            _errorMessage = "Failed to load data: " + ex.Message;
        }
    }

    private async Task RefreshDiagnostics()
    {
        try
        {
            // Get current sim time from first controller state
            var firstController = _controllers.FirstOrDefault();
            if (firstController != null)
            {
                var state = StateStore.Get(firstController.SerialNumberDisplay);
                if (state != null)
                {
                    _currentSimTime = state.SimNowUtc;
                    _totalSimulatedEvents = state.Events.Count;
                    _lastSimEventTime = state.Events.OrderByDescending(e => e.TimestampUtc).FirstOrDefault()?.TimestampUtc;
                }
            }
            _lastEngineTick = DateTime.UtcNow;
        }
        catch (Exception ex)
        {
            Logger.LogWarning(ex, "Error refreshing diagnostics");
        }
    }

    private async Task OnControllerSelected()
    {
        _selectedController = _controllers.FirstOrDefault(c => c.Id == _selectedControllerId);
        _doorStates.Clear();

        if (_selectedController != null)
        {
            var state = StateStore.Get(_selectedController.SerialNumberDisplay);
            if (state != null)
            {
                foreach (var door in _selectedController.Doors.OrderBy(d => d.DoorIndex))
                {
                    var doorState = state.Doors.GetValueOrDefault(door.DoorIndex);
                    if (doorState != null)
                    {
                        _doorStates.Add(new DoorStateViewModel
                        {
                            DoorIndex = door.DoorIndex,
                            DoorName = door.Name,
                            IsLocked = doorState.IsLocked,
                            IsDoorOpen = doorState.IsDoorOpen,
                            AlarmActive = doorState.AlarmActive
                        });
                    }
                }
            }
        }
    }

    private async Task AdvanceTimeToNow()
    {
        await AdvanceTime(DateTime.UtcNow - _currentSimTime);
    }

    private async Task AdvanceTime(TimeSpan delta)
    {
        _isProcessing = true;
        _errorMessage = null;
        _successMessage = null;

        try
        {
            await EngineService.AdvanceTimeAsync(delta);
            _successMessage = $"Advanced simulation time by {delta}";
            await RefreshDiagnostics();
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error advancing time");
            _errorMessage = "Failed to advance time: " + ex.Message;
        }
        finally
        {
            _isProcessing = false;
        }
    }

    private async Task ResetControllerState()
    {
        if (_selectedControllerId == 0)
        {
            _errorMessage = "Please select a controller first.";
            return;
        }

        if (!await JSRuntime.InvokeAsync<bool>("confirm", 
            $"Reset simulation state for controller '{_selectedController?.Name}'?\n\nThis will reset all door states to defaults."))
        {
            return;
        }

        _isProcessing = true;
        _errorMessage = null;
        _successMessage = null;

        try
        {
            await EngineService.ResetControllerStateAsync(_selectedControllerId);
            _successMessage = "Controller state reset successfully.";
            await OnControllerSelected();
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error resetting controller state");
            _errorMessage = "Failed to reset state: " + ex.Message;
        }
        finally
        {
            _isProcessing = false;
        }
    }

    private async Task ApplyPreset()
    {
        if (string.IsNullOrEmpty(_selectedPresetKey) || _selectedControllerId == 0)
        {
            _errorMessage = "Please select a controller and preset.";
            return;
        }

        _isProcessing = true;
        _errorMessage = null;
        _successMessage = null;

        try
        {
            await PresetService.ApplyPresetAsync(_selectedControllerId, _selectedPresetKey);
            _successMessage = $"Preset '{_presets.First(p => p.Key == _selectedPresetKey).Name}' applied successfully.";
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error applying preset");
            _errorMessage = "Failed to apply preset: " + ex.Message;
        }
        finally
        {
            _isProcessing = false;
        }
    }

    private async Task InjectEvent()
    {
        if (_eventControllerId == 0)
        {
            _errorMessage = "Please select a controller.";
            return;
        }

        _isProcessing = true;
        _errorMessage = null;
        _successMessage = null;

        try
        {
            var controller = _controllers.FirstOrDefault(c => c.Id == _eventControllerId);
            if (controller == null)
            {
                _errorMessage = "Controller not found.";
                return;
            }

            DateTime eventTime;
            switch (_eventTimeOffset)
            {
                case "-5min":
                    eventTime = DateTime.UtcNow.AddMinutes(-5);
                    break;
                case "-30min":
                    eventTime = DateTime.UtcNow.AddMinutes(-30);
                    break;
                default:
                    eventTime = DateTime.UtcNow;
                    break;
            }

            await EngineService.InjectEventAsync(_eventControllerId, _eventDoorIndex, _eventCardNumber, _eventType, eventTime);
            _successMessage = "Event injected successfully.";
            await RefreshDiagnostics();
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error injecting event");
            _errorMessage = "Failed to inject event: " + ex.Message;
        }
        finally
        {
            _isProcessing = false;
        }
    }

    private void NavigateToSettings() => Navigation.NavigateTo("/settings");
    private void NavigateBackToDashboard() => Navigation.NavigateTo("/");

    private void StartRefreshLoop()
    {
        _refreshLoopCts?.Cancel();
        _refreshLoopCts?.Dispose();
        _refreshLoopCts = new CancellationTokenSource();
        _ = RefreshLoopAsync(_refreshLoopCts.Token);
    }

    private async Task RefreshLoopAsync(CancellationToken token)
    {
        try
        {
            while (!token.IsCancellationRequested)
            {
                if (_useRealControllers)
                {
                    break;
                }

                await Task.Delay(TimeSpan.FromSeconds(2), token);
                await RefreshDiagnostics();
                await LoadControllerModeAsync();
                await InvokeAsync(StateHasChanged);
            }
        }
        catch (TaskCanceledException)
        {
            // Ignore cancellation when the component is disposed
        }
    }

    private async Task LoadControllerModeAsync()
    {
        try
        {
            var settings = await SystemSettingsService.GetAsync();
            _useRealControllers = settings.UseRealControllers;
        }
        catch (Exception ex)
        {
            Logger.LogWarning(ex, "Failed to load controller mode indicator; defaulting to simulation for UI only");
            _useRealControllers = false;
        }
        finally
        {
            _modeLoaded = true;
        }
    }

    public void Dispose()
    {
        _refreshLoopCts?.Cancel();
        _refreshLoopCts?.Dispose();
    }

    private class DoorStateViewModel
    {
        public int DoorIndex { get; set; }
        public string DoorName { get; set; } = "";
        public bool IsLocked { get; set; }
        public bool IsDoorOpen { get; set; }
        public bool AlarmActive { get; set; }
    }
}
