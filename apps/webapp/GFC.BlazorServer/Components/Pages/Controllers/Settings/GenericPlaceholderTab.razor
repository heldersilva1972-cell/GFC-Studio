@inject NavigationManager Navigation

<div class="glass-panel text-center p-5 fadeIn">
    <div class="mb-4">
        <i class="@IconClass display-4 text-muted opacity-50"></i>
    </div>
    <h3>@Title</h3>
    <p class="text-muted mb-4">@Description</p>
    
    @if (!string.IsNullOrEmpty(LegacyUrl))
    {
        <button class="btn btn-primary-modern" @onclick='() => Navigation.NavigateTo(LegacyUrl)'>
            Open Configuration Page
        </button>
    }
</div>

@code {
    [Parameter] public string Title { get; set; } = "Settings";
    [Parameter] public string Description { get; set; } = "This section is under construction.";
    [Parameter] public string IconClass { get; set; } = "bi-gear";
    [Parameter] public string? LegacyUrl { get; set; }
}
