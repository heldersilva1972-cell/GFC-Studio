@using GFC.BlazorServer.Data.Entities
@using DoorConfigEntity = GFC.BlazorServer.Data.Entities.DoorConfig
@using GFC.BlazorServer.Services
@using GFC.BlazorServer.Services.Controllers
@using GFC.BlazorServer.Data
@using Microsoft.EntityFrameworkCore
@inject IDbContextFactory<GfcDbContext> DbFactory
@inject ControllerRegistryService RegistryService
@inject IDoorConfigService DoorConfigService
@inject DoorConfigSyncService SyncService
@inject IJSRuntime JSRuntime
@inject ILogger<DoorsTab> Logger
@inject IToastService ToastService
@inject IControllerClient ControllerClient

<div class="doors-tab-container fadeIn">
    <div class="row g-4">
        <!-- Door List (Left Sidebar) -->
        <div class="col-md-4 col-lg-3 d-flex flex-column">
            <div class="glass-panel d-flex flex-column p-0 overflow-hidden" style="min-height: 400px;">
                <div class="p-3 border-bottom border-glass bg-surface-subtle">
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <h5 class="mb-0 fw-bold">Doors</h5>
                        <button class="btn btn-sm btn-primary-modern" @onclick="CreateNewDoor" disabled="@(_isLoading)">
                            <i class="bi bi-plus-lg"></i>
                        </button>
                    </div>
                    <div class="text-xs text-muted">
                        @_doors.Count / @(Controller?.DoorCount > 0 ? Controller.DoorCount : 4) slots used
                    </div>
                </div>
                
                <div class="door-list flex-grow-1 overflow-auto custom-scrollbar">
                    @if (_isLoading)
                    {
                        <div class="text-center p-4">
                            <div class="spinner-border spinner-border-sm text-primary"></div>
                        </div>
                    }
                    else if (!_doors.Any())
                    {
                        <div class="text-center p-4 text-muted">
                            <i class="bi bi-door-closed fs-1 mb-2 opacity-50"></i>
                            <p class="small mb-0">No doors found.</p>
                            <button class="btn btn-sm btn-link" @onclick="CreateNewDoor">Add one</button>
                        </div>
                    }
                    else
                    {
                        @foreach (var door in _doors.OrderBy(d => d.DoorIndex))
                        {
                            <div class="door-list-item @(_selectedDoor?.Id == door.Id ? "active" : "")" 
                                 @onclick="() => SelectDoor(door)">
                                <div class="door-icon-small">
                                    <span class="door-idx">#@door.DoorIndex</span>
                                </div>
                                <div class="door-info text-truncate">
                                    <div class="fw-bold text-truncate">@door.Name</div>
                                    <small class="text-muted text-truncate">Port @door.DoorIndex â€¢ @(door.IsEnabled ? "Active" : "Disabled")</small>
                                </div>
                                <i class="bi bi-chevron-right text-muted ms-auto fs-7"></i>
                            </div>
                        }
                    }
                </div>
            </div>
        </div>

        <div class="col-md-8 col-lg-9">
            @if (_selectedDoor != null)
            {
                <div class="glass-panel d-flex flex-column fadeIn">
                    <!-- Header -->
                    <div class="panel-header border-bottom border-glass pb-3 mb-4 d-flex justify-content-between align-items-start">
                        <div>
                            <div class="d-flex align-items-center gap-2">
                                <h2 class="mb-0">@(_selectedDoor.Id == 0 ? "New Door" : _selectedDoor.Name)</h2>
                                @if(_selectedDoor.Id != 0) 
                                {
                                    <span class="badge @(_selectedDoor.IsEnabled ? "bg-success" : "bg-secondary")">
                                        @(_selectedDoor.IsEnabled ? "Active" : "Disabled")
                                    </span>
                                }
                            </div>
                            <p class="text-muted small mb-0 mt-1">Configure implementation and hardware timers.</p>
                        </div>
                        
                        @if(_selectedDoor.Id != 0)
                        {
                            <button class="btn btn-outline-danger btn-sm" @onclick="DeleteDoor">
                                <i class="bi bi-trash"></i> Delete
                            </button>
                        }
                    </div>

                    <!-- Configuration Form -->
                    <EditForm Model="_selectedDoor" class="flex-grow-1 px-1">
                        
                        <div class="row g-4">
                            <!-- Column 1: General Settings -->
                            <div class="col-xl-6">
                                <h5 class="section-title mb-3"><i class="bi bi-gear me-2"></i>General Information</h5>
                                
                                <div class="modern-field mb-3">
                                    <label class="form-label">Door Name</label>
                                    <input type="text" class="modern-input" @bind="_selectedDoor.Name" placeholder="Main Entrance" />
                                </div>

                                <div class="row g-3">
                                    <div class="col-md-6">
                                        <div class="modern-field mb-3">
                                            <label class="form-label">Relay Port</label>
                                            <select class="form-select modern-input" @bind="_selectedDoor.DoorIndex">
                                                @for (int i = 1; i <= (Controller?.DoorCount > 0 ? Controller.DoorCount : 4); i++)
                                                {
                                                    var isTaken = _doors.Any(d => d.DoorIndex == i && d.Id != _selectedDoor.Id);
                                                    <option value="@i" disabled="@isTaken">Port @i @(isTaken ? "(In Use)" : "")</option>
                                                }
                                            </select>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="modern-field mb-3 pt-4">
                                            <div class="form-check form-switch">
                                                <input class="form-check-input" type="checkbox" @bind="_selectedDoor.IsEnabled" id="doorEnabled" />
                                                <label class="form-check-label fw-bold" for="doorEnabled">Enable Door</label>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="modern-field mb-3">
                                    <label class="form-label">Notes / Location</label>
                                    <textarea class="modern-input" @bind="_selectedDoor.Notes" rows="3" placeholder="Building location notes..."></textarea>
                                </div>
                            </div>

                            <!-- Column 2: Advanced Timers -->
                            <div class="col-xl-6">
                                <div class="bg-surface-subtle rounded-3 p-3 border border-glass h-100">
                                    <div class="d-flex justify-content-between align-items-center mb-3">
                                        <h5 class="section-title mb-0 text-primary"><i class="bi bi-stopwatch me-2"></i>Hardware Timers</h5>
                                        @if (_hwDiscovery != null && _selectedDoor != null)
                                        {
                                            var hwMode = _hwDiscovery.DoorModes[_selectedDoor.DoorIndex - 1];
                                            var isInSync = hwMode == _doorConfig?.ControlMode;
                                            <span class="badge @(isInSync ? "bg-success" : "bg-warning") cursor-pointer" title="Hardware Sync Status - Click to Verify Mode (0x94)" @onclick="RefreshHardwareInfo">
                                                <i class="bi @(isInSync ? "bi-cpu-fill" : "bi-exclamation-circle") me-1"></i>
                                                HW Mode: @GetHwModeText(hwMode)
                                                <i class="bi bi-arrow-clockwise ms-2 opacity-50"></i>
                                            </span>
                                        }
                                    </div>
                                    
                                    @if (_doorConfig != null)
                                    {
                                        <div class="modern-field mb-3">
                                            <label class="form-label d-flex justify-content-between">
                                                <span>Unlock Duration</span>
                                                <span class="badge bg-primary">@_doorConfig.OpenTimeSeconds sec</span>
                                            </label>
                                            <input type="range" class="form-range" min="1" max="60" @bind="_doorConfig.OpenTimeSeconds" />
                                            <div class="form-label-desc">How long the door stays unlocked after access.</div>
                                        </div>

                                        <div class="modern-field mb-3">
                                            <label class="form-label">Control Mode</label>
                                            <select class="form-select modern-input" @bind="_doorConfig.ControlMode">
                                                <option value="@((byte)0)">Not Configured (Disabled)</option>
                                                <option value="@((byte)1)">Always Open</option>
                                                <option value="@((byte)2)">Always Closed</option>
                                                <option value="@((byte)3)">Controlled (Card Required)</option>
                                            </select>
                                        </div>

                                        <div class="row g-3">
                                            <div class="col-md-6">
                                                <div class="modern-field mb-3">
                                                    <label class="form-label">Door Sensor</label>
                                                    <select class="form-select modern-input" @bind="_doorConfig.SensorType">
                                                        <option value="@((byte)0)">Not Used</option>
                                                        <option value="@((byte)1)">Normally Closed (NC)</option>
                                                        <option value="@((byte)2)">Normally Open (NO)</option>
                                                    </select>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="modern-field mb-3">
                                                    <label class="form-label">Interlock Group</label>
                                                    <select class="form-select modern-input" @bind="_doorConfig.Interlock">
                                                        <option value="@((byte)0)">None</option>
                                                        <option value="@((byte)1)">2-Door Interlock</option>
                                                        <option value="@((byte)2)">3-Door Interlock</option>
                                                        <option value="@((byte)3)">4-Door Interlock</option>
                                                    </select>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="form-check form-switch mt-3">
                                            <input class="form-check-input" type="checkbox" @bind="_doorConfig.AlarmEnabled" id="alarmEnabled" />
                                            <label class="form-check-label" for="alarmEnabled">
                                                <strong>Hardware Alarm Trigger</strong>
                                            </label>
                                        </div>

                                        <div class="mt-4 pt-3 border-top border-glass d-grid">
                                            <button type="button" class="btn btn-accent-modern w-100" @onclick="SyncToController" disabled="@(_isSyncing || !Controller!.IsEnabled)">
                                                @if (_isSyncing) { <span class="spinner-border spinner-border-sm me-2"></span> }
                                                <i class="bi bi-cpu-fill me-2"></i> Sync Config to Controller
                                            </button>
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="text-center text-muted py-5">
                                            <small>Save door first to configure timers</small>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>

                        <div class="action-footer mt-4 pt-3 border-top border-glass d-flex justify-content-end gap-2">
                            <button class="btn btn-modern btn-outline-secondary" @onclick="() => _selectedDoor = null">Cancel</button>
                            <button class="btn btn-modern btn-primary-modern px-4" @onclick="SaveCurrentDoor" disabled="@(_isSaving)">
                                @if (_isSaving) { <span class="spinner-border spinner-border-sm me-2"></span> }
                                <i class="bi bi-check-lg me-1"></i> Save Changes
                            </button>
                        </div>
                    </EditForm>
                </div>
            }
            else
            {
                <div class="glass-panel h-100 d-flex flex-column align-items-center justify-content-center text-center p-5 text-muted fadeIn">
                    <div class="bg-surface-subtle p-4 rounded-circle mb-3">
                        <i class="bi bi-door-open fs-1 text-primary opacity-50"></i>
                    </div>
                    <h3>Select a Door</h3>
                    <p class="mb-4">Select a door from the list to edit, or add a new one.</p>
                    <button class="btn btn-primary-modern" @onclick="CreateNewDoor">
                        <i class="bi bi-plus-lg me-2"></i> Add New Door
                    </button>
                </div>
            }
        </div>
    </div>
</div>

<style>
    .door-list-item {
        padding: 1rem;
        border-bottom: 1px solid var(--glass-border);
        cursor: pointer;
        display: flex;
        align-items: center;
        gap: 1rem;
        transition: all 0.2s;
    }
    .door-list-item:hover { background: rgba(var(--accent-primary-rgb), 0.05); }
    .door-list-item.active { 
        background: rgba(var(--accent-primary-rgb), 0.1); 
        border-left: 3px solid var(--accent-primary);
    }
    .door-icon-small {
        width: 32px; height: 32px;
        background: var(--bg-surface);
        border: 1px solid var(--glass-border);
        border-radius: 8px;
        display: flex; align-items: center; justify-content: center;
        font-weight: bold; font-size: 0.8rem;
        color: var(--accent-primary);
    }
    .text-xs { font-size: 0.75rem; }
    .custom-scrollbar::-webkit-scrollbar { width: 6px; }
    .custom-scrollbar::-webkit-scrollbar-thumb { background: rgba(128,128,128,0.2); border-radius: 3px; }
</style>

@code {
    [Parameter] public ControllerDevice? Controller { get; set; }
    [Parameter] public EventCallback OnDoorsUpdated { get; set; }

    private List<Door> _doors = new();
    private Door? _selectedDoor;
    private DoorConfigEntity? _doorConfig;
    private bool _isLoading = false;
    private bool _isSaving = false;
    private bool _isSyncing = false;
    private GFC.BlazorServer.Connectors.Mengqi.Models.DiscoveryResult? _hwDiscovery;

    private int _lastControllerId;

    protected override async Task OnParametersSetAsync()
    {
        if (Controller != null && Controller.Id != _lastControllerId)
        {
            _lastControllerId = Controller.Id;
            _selectedDoor = null; // Clear selection when changing controllers
            _doorConfig = null;
            _hwDiscovery = null;
            await LoadDoors();
            await RefreshHardwareInfo();
        }
    }

    private async Task RefreshHardwareInfo()
    {
        if (Controller == null || !Controller.IsEnabled) return;
        try 
        {
            _hwDiscovery = await ControllerClient.GetHardwareInfoAsync(Controller.SerialNumberDisplay);
        }
        catch { }
    }

    private async Task LoadDoors()
    {
        if (Controller == null) return;
        _isLoading = true;
        try
        {
            _doors = (await RegistryService.GetDoorsAsync(Controller.Id)).ToList();
            if (_selectedDoor != null)
            {
                // Refresh selected door instance
                _selectedDoor = _doors.FirstOrDefault(d => d.Id == _selectedDoor.Id);
                // If it was deleted, clear selection
                if (_selectedDoor == null) _doorConfig = null;
            }
        }
        finally { _isLoading = false; }
    }

    private void CreateNewDoor()
    {
        _selectedDoor = new Door 
        { 
            ControllerId = Controller?.Id ?? 0,
            Name = "New Door",
            IsEnabled = true,
            DoorIndex = GetNextAvailablePort()
        };
        // Use default config for UI binding
        _doorConfig = new DoorConfigEntity { OpenTimeSeconds = 5, LockDelaySeconds = 0 };
    }

    private async Task SelectDoor(Door door)
    {
        _selectedDoor = door; // Make a copy ideally if supporting cancel, but simplistic binding for now
        // Load config
        var configs = await DoorConfigService.GetConfigsForControllerAsync(Controller!.Id);
        var existing = configs.FirstOrDefault(c => c.DoorId == door.Id);
        
        if (existing != null) 
            _doorConfig = (DoorConfigEntity)existing;
        else 
            _doorConfig = (DoorConfigEntity)DoorConfigService.CreateDefaultForDoor(door);

        // Auto-refresh HW info when selecting a door to ensure sync status is fresh
        _ = RefreshHardwareInfo();
    }

    private async Task SaveCurrentDoor()
    {
        if (_selectedDoor == null || Controller == null) return;
        _isSaving = true;

        try
        {
            await using var db = await DbFactory.CreateDbContextAsync();
            
            // 1. Save Door Entity
            if (_selectedDoor.Id == 0)
            {
                db.Doors.Add(_selectedDoor);
            }
            else
            {
                db.Doors.Update(_selectedDoor);
            }
            await db.SaveChangesAsync();

            // 2. Save Config Entity
            if (_doorConfig != null)
            {
                _doorConfig.DoorId = _selectedDoor.Id;
                await DoorConfigService.SaveConfigsAsync(Controller.Id, new[] { _doorConfig });

                // 3. Automatically sync to hardware on save if enabled
                if (Controller.IsEnabled)
                {
                    await PerformHardwareSync();
                    // Give controller a moment to process before verifying
                    await Task.Delay(500);
                }
            }

            await LoadDoors();
            await RefreshHardwareInfo();
            // Re-select to refresh state
            var savedDoor = _doors.FirstOrDefault(d => d.Id == _selectedDoor.Id);
            if(savedDoor != null) await SelectDoor(savedDoor);
            
            ToastService.ShowSuccess($"Door {_selectedDoor.Name} saved and synced to hardware.");

            // Notify parent to refresh
            await OnDoorsUpdated.InvokeAsync();
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Failed to save door");
            ToastService.ShowError($"Failed to save door: {ex.Message}");
        }
        finally { _isSaving = false; }
    }

    private async Task SyncToController()
    {
        _isSyncing = true;
        try
        {
            await PerformHardwareSync();
            ToastService.ShowSuccess("Config synced to hardware.");
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Hardware sync failed");
            ToastService.ShowError($"Sync failed: {ex.Message}");
        }
        finally { _isSyncing = false; }
    }

    private async Task PerformHardwareSync()
    {
        if (_selectedDoor == null || _doorConfig == null || Controller == null) return;
        
        // The protocol is: 0x8E (142), Door Index, Control Mode, Relay Delay, Door Sensor, Interlock
        await ControllerClient.SetDoorConfigAsync(
            Controller.SerialNumberDisplay, 
            _selectedDoor.DoorIndex,
            _doorConfig.ControlMode,
            (byte)_doorConfig.OpenTimeSeconds,
            _doorConfig.SensorType,
            _doorConfig.Interlock
        );
    }

    private async Task DeleteDoor()
    {
        if (_selectedDoor == null) return;
        
        bool confirmed = await JSRuntime.InvokeAsync<bool>("confirm", $"Are you sure you want to delete '{_selectedDoor.Name}'?");
        if (!confirmed) return;

        try
        {
            await using var db = await DbFactory.CreateDbContextAsync();
            db.Doors.Remove(_selectedDoor);
            await db.SaveChangesAsync();
            
            _selectedDoor = null;
            _doorConfig = null;
            await LoadDoors();
            
            // Notify parent to refresh
            await OnDoorsUpdated.InvokeAsync();
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Failed to delete door");
        }
    }

    private int GetNextAvailablePort()
    {
        var maxDoors = Controller?.DoorCount > 0 ? Controller.DoorCount : 4;
        for (int i = 1; i <= maxDoors; i++)
            if (!_doors.Any(d => d.DoorIndex == i)) return i;
        return 1;
    }

    private string GetHwModeText(byte mode) => mode switch
    {
        1 => "Always Open",
        2 => "Always Closed",
        3 => "Controlled",
        _ => "Not Configured"
    };
}
