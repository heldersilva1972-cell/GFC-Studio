        color: #475569;
    }

    .animate-shake { animation: shake 0.5s cubic-bezier(.36,.07,.19,.97) both; }
    @@keyframes shake {
        10%, 90% { transform: translate3d(-1px, 0, 0); }
        20%, 80% { transform: translate3d(2px, 0, 0); }
        30%, 50%, 70% { transform: translate3d(-4px, 0, 0); }
        40%, 60% { transform: translate3d(4px, 0, 0); }
    }
</style>

@code {
    [Parameter] public int ControllerId { get; set; }

    private class SlotData
    {
        public string RawHex { get; set; } = "";
        public string? LastResponse { get; set; }
    }

    private SlotData[] _slots = Enumerable.Range(0, 8).Select(_ => new SlotData()).ToArray();
    private int _activeSlot = 0;
    private string? _error;
    private bool _isTransmitting = false;

    // Readback View State
    private bool _hasReadback = false;
    private ParseResult? _parseResult;
    private string _commandName = "Unknown";
    private string _badgeClass = "bg-secondary";
    private int _packetLength = 0;
    private List<BreakdownLine> _breakdownLines = new();
    private List<byte> _payloadBytes = new();
    private string _currentReadbackHex = "";

    private class ParseResult { }
    private class BreakdownLine { public string Label { get; set; } = ""; public string Value { get; set; } = ""; }

    private void SelectSlot(int index)
    {
        _activeSlot = index;
        if (!string.IsNullOrWhiteSpace(_slots[index].LastResponse))
        {
            DecodeResponse(_slots[index].LastResponse);
        }
        else
        {
            _parseResult = null;
        }
    }

    private void ClearSlot(int index)
    {
        _slots[index].RawHex = "";
        _slots[index].LastResponse = null;
        if (_activeSlot == index) _parseResult = null;
    }

    private void ClearAll()
    {
        for (int i = 0; i < 8; i++) ClearSlot(i);
        _error = null;
    }

    private async Task TransmitSlot(int index)
    {
        _activeSlot = index;
        _error = null;
        var hex = _slots[index].RawHex;

        if (string.IsNullOrWhiteSpace(hex)) return;
        if (ControllerId <= 0) { _error = "Please select a controller above."; return; }

        _isTransmitting = true;
        try
        {
            string clean = hex.Replace(" ", "").Replace("-", "").Replace("\n", "").Replace("\r", "").Replace(":", "");
            if (clean.Length % 2 != 0) { throw new Exception("Invalid hex (odd length)."); }

            var response = await ControllerClient.SendRawAsync(ControllerId, hex);
            _slots[index].LastResponse = response;
            DecodeResponse(response);
        }
        catch (Exception ex)
        {
            _error = $"Slot {index + 1} Error: {ex.Message}";
            Logger.LogError(ex, "Failed to transmit slot {Index}", index);
        }
        finally
        {
            _isTransmitting = false;
        }
    }

    private async Task CopyReadback()
    {
        if (!string.IsNullOrWhiteSpace(_currentReadbackHex))
        {
            await JSRuntime.InvokeVoidAsync("navigator.clipboard.writeText", _currentReadbackHex);
        }
    }

    private void DecodeResponse(string responseHex)
    {
        _currentReadbackHex = responseHex;
        _breakdownLines.Clear();
        _payloadBytes.Clear();
        _error = null;

        try
        {
            string clean = responseHex.Replace(" ", "").Replace("-", "").Replace("\n", "").Replace("\r", "").Replace(":", "");
            byte[] bytes = new byte[clean.Length / 2];
            for (int i = 0; i < clean.Length; i += 2) bytes[i / 2] = Convert.ToByte(clean.Substring(i, 2), 16);

            _packetLength = bytes.Length;
            byte cmd = bytes[1];
            
            _commandName = cmd switch {
                0x20 => "Status", 0x30 => "Open", 0xB0 => "Record", 0x94 => "Search", 0x5A => "Params", _ => $"0x{cmd:X2}"
            };
            _badgeClass = cmd switch {
                0x20 => "bg-primary", 0x30 => "bg-success", 0xB0 => "bg-warning text-dark", 0x94 => "bg-info", _ => "bg-dark"
            };

            _breakdownLines.Add(new BreakdownLine { Label = "Command", Value = _commandName });
            _breakdownLines.Add(new BreakdownLine { Label = "SN", Value = BitConverter.ToUInt32(bytes, 4).ToString() });

            var span = new ReadOnlySpan<byte>(bytes);
            if (cmd == 0x20) {
                var s = WgResponseParser.ParseRunStatus(span);
                _breakdownLines.Add(new BreakdownLine { Label = "Time", Value = s.ControllerTime?.ToString("HH:mm:ss") ?? "N/A" });
                _breakdownLines.Add(new BreakdownLine { Label = "Events", Value = s.TotalEvents.ToString() });
            }
            else if (cmd == 0xB0) {
                var (evs, last) = WgResponseParser.ParseEvents(span);
                if (evs.Any()) _breakdownLines.Add(new BreakdownLine { Label = "Card", Value = evs[0].CardNumber.ToString() });
                _breakdownLines.Add(new BreakdownLine { Label = "GlobalIdx", Value = last.ToString() });
            }

            if (_packetLength > 8) _payloadBytes = bytes.Skip(8).ToList();
            _parseResult = new ParseResult();
        }
        catch { _parseResult = null; }
    }
}
