@page "/keycards"
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize]
@using System.Linq
@using Microsoft.AspNetCore.Components.Forms
@using GFC.Core.Interfaces
@using GFC.Core.Models
@inject IKeyCardDashboardRepository KeyCardDashboardRepository
@inject NavigationManager NavManager
@inject ILogger<KeyCards> Logger

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <div>
            <h1 class="mb-0">Key Cards</h1>
            <div class="text-muted small">
                Manage member access cards, status, and controller privileges.
            </div>
        </div>
        <div class="d-flex gap-2">
            <button class="btn btn-primary" type="button" @onclick="NavigateToAssign">Assign New Card</button>
            <button class="btn btn-outline-secondary" type="button" disabled>Export</button>
        </div>
    </div>

    <div class="card mb-3 shadow-sm rounded">
        <div class="card-body py-2">
            <div class="filters-bar">
                <div class="filters-primary">
                    <label class="form-label mb-1 small text-muted fw-semibold" for="keycard-search">Search key cards</label>
                    <div class="input-group input-group-sm search-input">
                        <span class="input-group-text">
                            <i class="bi bi-search" aria-hidden="true"></i>
                        </span>
                        <InputText @bind-Value="SearchTerm"
                                   id="keycard-search"
                                   class="form-control"
                                   placeholder="Search by name, card number, or member #"
                                   aria-label="Search key cards"
                                   disabled="@_loading" />
                        @if (!string.IsNullOrWhiteSpace(SearchTerm))
                        {
                            <button type="button"
                                    class="btn btn-outline-secondary"
                                    @onclick="ClearSearch"
                                    disabled="@_loading">
                                <i class="bi bi-x-circle me-1"></i> Clear
                            </button>
                        }
                    </div>
                </div>

                <div class="filters-secondary">
                    <div class="filter-row">
                        <div class="d-flex align-items-center gap-2 flex-wrap">
                            <span class="text-muted small fw-semibold">Status</span>
                            <div class="pill-tabs flex-wrap">
                                @foreach (var option in _statusFilterOptions)
                                {
                                    <button class="pill-tab @(option.Filter == _activeStatus ? "active" : string.Empty)"
                                            type="button"
                                            @onclick="() => SetStatusFilter(option.Filter)"
                                            disabled="@_loading">
                                        @option.Label
                                    </button>
                                }
                            </div>
                        </div>

                        <div class="d-flex align-items-center gap-2">
                            <label class="text-muted small mb-0" for="keycard-sort">Sort by</label>
                            <select class="form-select form-select-sm"
                                    id="keycard-sort"
                                    @onchange="OnSortChanged"
                                    value="@_sortOption"
                                    aria-label="Sort key cards"
                                    disabled="@_loading">
                                <option value="@SortOption.CardNumber">Card number</option>
                                <option value="@SortOption.MemberName">Member name</option>
                                <option value="@SortOption.IssuedDate">Issued date</option>
                                <option value="@SortOption.Status">Status</option>
                            </select>
                        </div>
                    </div>

                    @if (HasActiveFilters)
                    {
                        <span class="badge rounded-pill active-filters-badge">
                            <span class="badge-dot"></span>
                            Filters active
                        </span>
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="card shadow-sm rounded">
        <div class="card-body p-0">
            <div class="keycard-list">
                @if (_loading)
                {
                    <div class="state-panel">
                        <div class="spinner-border spinner-border-sm text-info" role="status"></div>
                        <div class="text-muted small">Loading key cards...</div>
                    </div>
                }
                else if (!string.IsNullOrWhiteSpace(_errorMessage))
                {
                    <div class="state-panel error-state">
                        <div class="text-danger fw-semibold">@_errorMessage</div>
                        <div class="text-muted small">Please try again.</div>
                        <button class="btn btn-sm btn-outline-primary"
                                type="button"
                                @onclick="RetryLoadAsync"
                                disabled="@_loading">
                            Retry
                        </button>
                    </div>
                }
                else if (FilteredKeyCards != null && FilteredKeyCards.Any())
                {
                    @foreach (var card in FilteredKeyCards)
                    {
                        <div class="keycard-row @(card.CardId == _selectedCardId ? "selected" : string.Empty)"
                             role="button"
                             tabindex="0"
                             aria-label="@($"Key card {card.CardNumber} for {(string.IsNullOrWhiteSpace(card.MemberName) ? "unassigned member" : card.MemberName)}")"
                             @onclick="() => SelectAndNavigate(card)">
                            <div class="keycard-content">
                                <div class="keycard-header">
                                    <div class="keycard-cardnumber">@card.CardNumber</div>
                                    @{
                                        var statusText = GetStatusLabel(card);
                                        var statusClass = GetStatusClass(statusText);
                                    }
                                    <span class="status-badge @statusClass">@statusText</span>
                                </div>
                                <div class="keycard-secondary">
                                    <div class="keycard-member text-muted">
                                        @if (!string.IsNullOrWhiteSpace(card.MemberName))
                                        {
                                            <span>@card.MemberName</span>
                                        }
                                        else
                                        {
                                            <span>Unassigned</span>
                                        }
                                    </div>
                                    <span class="keycard-date text-muted">
                                        Issued @(card.IssuedDate?.ToShortDateString() ?? "â€”")
                                    </span>
                                </div>
                            </div>
                            <div class="keycard-actions">
                                <div class="keycard-id text-muted">Member #@card.MemberId</div>
                            <button class="btn btn-sm btn-outline-primary"
                                        @onclick:stopPropagation="true"
                                    @onclick="() => SelectAndNavigate(card)">
                                    View
                                </button>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="state-panel empty-state">
                        <div class="fw-semibold">No keycards found</div>
                        <div class="text-muted small">Try clearing filters/search.</div>
                        @if (HasActiveFilters)
                        {
                            <button class="btn btn-sm btn-outline-secondary"
                                    type="button"
                                    @onclick="ClearFilters"
                                    disabled="@_loading">
                                Clear filters
                            </button>
                        }
                    </div>
                }
            </div>
        </div>
    </div>
</div>

