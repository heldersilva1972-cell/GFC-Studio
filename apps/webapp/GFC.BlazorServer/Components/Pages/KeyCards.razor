                    _cardScanned = true;
                    StopScanning();
                    await InvokeAsync(StateHasChanged);
                    break;
                }

                await Task.Delay(1000, token);
            }
        }
        catch (TaskCanceledException) { }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error polling for network card read");
