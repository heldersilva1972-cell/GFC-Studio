@code {
    private enum StatusFilter
    {
        All,
        Active,
        Inactive
    }

    private enum SortOption
    {
        CardNumber,
        MemberName,
        IssuedDate,
        Status
    }

    private sealed record StatusOption(StatusFilter Filter, string Label);

    private sealed record KeyCardListItem(
        int CardId,
        string CardNumber,
        int MemberId,
        string MemberName,
        bool IsActive,
        DateTime? IssuedDate,
        bool HasNotes);

    private readonly List<StatusOption> _statusFilterOptions = new()
    {
        new(StatusFilter.All, "All"),
        new(StatusFilter.Active, "Active"),
        new(StatusFilter.Inactive, "Inactive")
    };

    private readonly List<KeyCardListItem> _allCards = new();
    private List<KeyCardListItem> _filteredCards = new();
    private string _searchText = string.Empty;
    private StatusFilter _activeStatus = StatusFilter.All;
    private SortOption _sortOption = SortOption.CardNumber;
    private bool _loading = true;
    private string? _errorMessage;
    private int? _selectedCardId;
    private bool HasActiveFilters => !string.IsNullOrWhiteSpace(_searchText) || _activeStatus != StatusFilter.All;

    private string? SearchTerm
    {
        get => _searchText;
        set
        {
            _searchText = value ?? string.Empty;
            ApplyFilters();
        }
    }

    private IEnumerable<KeyCardListItem> FilteredKeyCards => _filteredCards;

    protected override async Task OnInitializedAsync()
    {
        await LoadKeyCardsAsync();
        ApplyFilters();
    }

    private async Task LoadKeyCardsAsync()
    {
        _loading = true;
        _errorMessage = null;

        try
        {
            var data = await Task.Run(() => KeyCardDashboardRepository.GetMembersForYear(DateTime.Today.Year));
            _allCards.Clear();

            foreach (var row in data.Where(r => r.KeyCardId.HasValue))
            {
                _allCards.Add(new KeyCardListItem(
                    row.KeyCardId!.Value,
                    string.IsNullOrWhiteSpace(row.KeyCardNumber) ? $"#{row.KeyCardId}" : row.KeyCardNumber!,
                    row.MemberId,
                    row.DisplayName,
                    row.HasActiveAssignment,
                    null,
                    false));
            }
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Failed to load key cards");
            _errorMessage = "Unable to load key cards.";
        }
        finally
        {
            _loading = false;
            ApplyFilters();
        }
    }

    private async Task RetryLoadAsync()
    {
        await LoadKeyCardsAsync();
    }

    private void ApplyFilters()
    {
        IEnumerable<KeyCardListItem> query = _allCards;

        if (!string.IsNullOrWhiteSpace(_searchText))
        {
            var term = _searchText.Trim();
            query = query.Where(card =>
                card.CardNumber.Contains(term, StringComparison.OrdinalIgnoreCase) ||
                card.MemberName.Contains(term, StringComparison.OrdinalIgnoreCase) ||
                card.MemberId.ToString().Contains(term, StringComparison.OrdinalIgnoreCase));
        }

        query = _activeStatus switch
        {
            StatusFilter.Active => query.Where(card => card.IsActive),
            StatusFilter.Inactive => query.Where(card => !card.IsActive),
            _ => query
        };

        query = _sortOption switch
        {
            SortOption.MemberName => query.OrderBy(card => card.MemberName),
            SortOption.IssuedDate => query.OrderByDescending(card => card.IssuedDate ?? DateTime.MinValue),
            SortOption.Status => query.OrderByDescending(card => card.IsActive).ThenBy(card => card.CardNumber),
            _ => query.OrderBy(card => card.CardNumber)
        };

        _filteredCards = query.ToList();
        StateHasChanged();
    }

    private void ClearSearch()
    {
        SearchTerm = string.Empty;
    }

    private void ClearFilters()
    {
        _searchText = string.Empty;
        _activeStatus = StatusFilter.All;
        ApplyFilters();
    }

    private void SetStatusFilter(StatusFilter filter)
    {
        if (_activeStatus == filter)
        {
            return;
        }

        _activeStatus = filter;
        ApplyFilters();
    }

    private void OnSortChanged(ChangeEventArgs args)
    {
        if (Enum.TryParse<SortOption>(args.Value?.ToString(), out var selected))
        {
            _sortOption = selected;
            ApplyFilters();
        }
    }

    private static string GetStatusLabel(KeyCardListItem card) => card.IsActive ? "Active" : "Inactive";

    private static string GetStatusClass(string statusText)
    {
        return statusText.ToLowerInvariant() switch
        {
            "active" => "status-active",
            "disabled" => "status-disabled",
            "replaced" => "status-replaced",
            "lost" => "status-lost",
            "inactive" => "status-inactive",
            _ => "status-unknown"
        };
    }

    private void NavigateToCard(KeyCardListItem card)
    {
        NavManager.NavigateTo($"/keycards/{card.CardId}");
    }

    private void SelectAndNavigate(KeyCardListItem card)
    {
        _selectedCardId = card.CardId;
        NavigateToCard(card);
    }

    private void NavigateToAssign()
    {
        NavManager.NavigateTo("/keycards/assign");
    }
}
