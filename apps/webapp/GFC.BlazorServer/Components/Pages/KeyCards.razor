@page "/keycards"
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize]
@using GFC.Core.Interfaces
@using GFC.Core.Models
@using GFC.BlazorServer.Data.Entities
@using GFC.BlazorServer.Components.Pages.KeyCardTabs
@inject IKeyCardRepository KeyCardRepository
@inject IMemberRepository MemberRepository
@inject NavigationManager NavManager
@inject ILogger<KeyCards> Logger
@inject IControllerSyncQueueRepository SyncQueueRepository
@inject IDuesYearSettingsRepository DuesYearSettingsRepository
@inject ControllerHealthService ControllerHealthService
@inject ControllerFullSyncService ControllerFullSyncService
@inject IJSRuntime JSRuntime
@inject IDuesInsightService DuesInsightService
@inject KeyCardLifecycleService KeyCardLifecycleService

<PageTitle>Key Card Management - GFC</PageTitle>

<!-- Page Header with Animation -->
<div class="page-header-modern fade-in">
    <div class="header-content">
        <div class="header-icon-wrapper">
            <div class="header-icon pulse">
                <i class="bi bi-credit-card-2-front"></i>
            </div>
        </div>
        <div>
            <h1 class="page-title-modern">Key Card Management</h1>
            <p class="page-subtitle">Manage member access cards, monitor activity, and configure permissions</p>
        </div>
    </div>
    <div class="header-actions">
        <button class="btn btn-primary btn-modern" @onclick="OpenAssignCardModal">
            <div class="btn-shine"></div>
            <i class="bi bi-plus-lg"></i>
            <span>Assign New Card</span>
        </button>
    </div>
</div>

@* Grace Period Configuration - NEW *@
<div class="info-card-modern mb-4 fade-in" style="animation-delay: 0.1s;">
    <div class="d-flex align-items-center justify-content-between">
        <div class="d-flex align-items-center gap-3">
            <div class="info-icon bg-success-subtle">
                <i class="bi bi-calendar-check text-success"></i>
            </div>
            <div>
                <h6 class="mb-1">Grace Period Configuration 
                    <span class="badge bg-success ms-2" style="font-size: 0.7rem;">
                        <i class="bi bi-circle-fill me-1" style="font-size: 0.4rem;"></i>NEW
                    </span>
                </h6>
                @if (_graceEndDate.HasValue)
                {
                    var daysRemaining = (_graceEndDate.Value - DateTime.Today).Days;
                    var statusClass = daysRemaining > 30 ? "success" : daysRemaining > 7 ? "warning" : "danger";
                    <p class="mb-0 text-muted small">
                        Grace End Date: <strong>@_graceEndDate.Value.ToString("MMMM d, yyyy")</strong>
                        <span class="badge bg-@statusClass-subtle text-@statusClass ms-2">
                            @daysRemaining days remaining
                        </span>
                        @if (_membersAtRiskCount > 0)
                        {
                            <span class="text-warning ms-2">⚠️ @_membersAtRiskCount member@(_membersAtRiskCount == 1 ? "" : "s") at risk</span>
                        }
                    </p>
                }
                else
                {
                    <p class="mb-0 text-muted small">No grace period configured for current year</p>
                }
            </div>
        </div>
        <button class="btn btn-outline-primary btn-sm" @onclick="EditGracePeriod">
            <i class="bi bi-pencil"></i> Edit
        </button>
    </div>
</div>

@* Controller Sync Status - NEW *@
<div class="info-card-modern mb-4 fade-in" style="animation-delay: 0.2s;">
    <div class="d-flex align-items-center justify-content-between">
        <div class="d-flex align-items-center gap-3">
            <div class="info-icon @(_controllerOnline ? "bg-success-subtle" : "bg-danger-subtle")">
                <i class="bi @(_controllerOnline ? "bi-hdd-network" : "bi-hdd-network-fill") @(_controllerOnline ? "text-success" : "text-danger")"></i>
            </div>
            <div class="flex-grow-1">
                <h6 class="mb-1">Controller Sync Status
                    <span class="badge bg-success ms-2" style="font-size: 0.7rem;">
                        <i class="bi bi-circle-fill me-1" style="font-size: 0.4rem;"></i>NEW
                    </span>
                </h6>
                <div class="d-flex gap-4 text-muted small">
                    <span>
                        Controller: 
                        @if (_controllerOnline)
                        {
                            <span class="text-success fw-bold">✅ Online</span>
                        }
                        else
                        {
                            <span class="text-danger fw-bold">❌ Offline</span>
                        }
                    </span>
                    <span>Pending: <strong class="@(_pendingSyncCount > 0 ? "text-warning" : "text-success")">@_pendingSyncCount</strong></span>
                    <span>Last Sync: <strong>@(_lastSyncTime?.ToString("h:mm tt") ?? "Unknown")</strong></span>
                </div>
            </div>
        </div>
        <div class="btn-group btn-group-sm">
            <button class="btn btn-outline-info" @onclick="ViewSyncQueue">
                <i class="bi bi-list-ul"></i> View Queue
            </button>
            <button class="btn btn-info" @onclick="RetryAllSync" disabled="@(_pendingSyncCount == 0)">
                <i class="bi bi-arrow-repeat"></i> Retry All
            </button>
            <button class="btn btn-warning" @onclick="ForceFullSync">
                <i class="bi bi-arrow-clockwise"></i> Force Full Sync
            </button>
        </div>
    </div>
</div>

<!-- Tab Navigation with Slide Animation -->
<div class="tab-navigation-modern slide-in-up">
    <div class="tab-nav-container">
        <button class="tab-nav-item @(_activeTab == "assignments" ? "active" : "")" 
                @onclick="@(() => SetActiveTab("assignments"))">
            <i class="bi bi-credit-card"></i>
            <span>Card Assignments</span>
            <div class="tab-indicator"></div>
        </button>
        <button class="tab-nav-item @(_activeTab == "activity" ? "active" : "")" 
                @onclick="@(() => SetActiveTab("activity"))">
            <i class="bi bi-activity"></i>
            <span>Door Activity</span>
            <div class="tab-indicator"></div>
        </button>
        <button class="tab-nav-item @(_activeTab == "pending" ? "active" : "")" 
                @onclick="@(() => SetActiveTab("pending"))">
            <i class="bi bi-person-plus"></i>
            <span>Needing Cards</span>
            @if (_paidMembersWithoutCardsCount > 0)
            {
                <span class="badge bg-danger ms-2 rounded-pill">@_paidMembersWithoutCardsCount</span>
            }
            <div class="tab-indicator"></div>
        </button>
    </div>
</div>

