<!-- Assign Card Modal -->
@if (_showAssignModal)
{
    <div class="modal-backdrop-modern fade-in" @onclick="CloseAssignCardModal"></div>
    <div class="modal-modern-container fade-in scale-in">
        <div class="modal-modern">
            <div class="modal-header-modern">
                <div>
                    <h3 class="modal-title-modern">
                        <i class="bi bi-credit-card-2-front text-primary"></i>
                        Assign New Key Card
                    </h3>
                    <p class="modal-subtitle">Scan a card and assign it to a member</p>
                </div>
                <button class="btn-close-modern" @onclick="CloseAssignCardModal">
                    <i class="bi bi-x-lg"></i>
                </button>
            </div>
            
            <div class="modal-body-modern">
                <div class="assign-card-content">
                    <!-- Step Indicator -->
                    <div class="steps-indicator">
                        <div class="step @(_assignStep >= 1 ? "active" : "") @(_assignStep > 1 ? "completed" : "")">
                            <div class="step-number">
                                @if (_assignStep > 1)
                                {
                                    <i class="bi bi-check"></i>
                                }
                                else
                                {
                                    <span>1</span>
                                }
                            </div>
                            <div class="step-label">Scan Card</div>
                        </div>
                        <div class="step-line @(_assignStep > 1 ? "completed" : "")"></div>
                        <div class="step @(_assignStep >= 2 ? "active" : "") @(_assignStep > 2 ? "completed" : "")">
                            <div class="step-number">
                                @if (_assignStep > 2)
                                {
                                    <i class="bi bi-check"></i>
                                }
                                else
                                {
                                    <span>2</span>
                                }
                            </div>
                            <div class="step-label">Select Member</div>
                        </div>
                        <div class="step-line @(_assignStep > 2 ? "completed" : "")"></div>
                        <div class="step @(_assignStep >= 3 ? "active" : "")">
                            <div class="step-number">3</div>
                            <div class="step-label">Confirm</div>
                        </div>
                    </div>

                    <!-- Step 1: Scan Card -->
                    @if (_assignStep == 1)
                    {
                        <div class="step-content fade-in">
                            <div class="card-scanner-visual">
                                @if (!_cardScanned)
                                {
                                    <div class="scanner-animation">
                                        <div class="scanner-icon pulse-slow">
                                            <i class="bi bi-upc-scan"></i>
                                        </div>
                                        <div class="scanner-waves">
                                            <div class="wave wave-1"></div>
                                            <div class="wave wave-2"></div>
                                            <div class="wave wave-3"></div>
                                        </div>
                                    </div>
                                    <p class="scanner-instruction">Click the button below and tap your card</p>
                                    <button class="btn btn-primary btn-lg btn-scan" @onclick="EnableScanning" disabled="@_scanningEnabled">
                                        <i class="bi bi-upc-scan"></i>
                                        @(_scanningEnabled ? "Waiting for card..." : "Start Scanning")
                                    </button>
                                }
                                else
                                {
                                    <div class="scan-success bounce-in">
                                        <div class="success-checkmark">
                                            <svg class="checkmark" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 52 52">
                                                <circle class="checkmark-circle" cx="26" cy="26" r="25" fill="none"/>
                                                <path class="checkmark-check" fill="none" d="M14.1 27.2l7.1 7.2 16.7-16.8"/>
                                            </svg>
                                        </div>
                                        <h4 class="status-title-success mt-3">Card Scanned!</h4>
                                        <div class="card-number-display">
                                            <code>@_scannedCardNumber</code>
                                        </div>
                                        <button class="btn btn-primary btn-lg mt-3" @onclick="() => _assignStep = 2">
                                            Continue <i class="bi bi-arrow-right"></i>
                                        </button>
                                    </div>
                                }
                            </div>
                            
                            <!-- Hidden input for card reader -->
                            @if (_scanningEnabled && !_cardScanned)
                            {
                                 <input type="text" 
                                       @bind="_scannedCardNumber"
                                       @bind:event="oninput"
                                       @onkeydown="HandleCardScan"
                                       autofocus
                                       class="hidden-scanner-input" />
                            }
                        </div>
                    }

                    <!-- Step 2: Select Member -->
                    @if (_assignStep == 2)
                    {
                        <div class="step-content fade-in">
                            <div class="member-selection">
                                <label class="form-label-modern">Select Member</label>
                                <div class="search-box-modern mb-3">
                                    <i class="bi bi-search"></i>
                                    <input type="text" 
                                           class="form-control" 
                                           placeholder="Search members by name or ID..."
                                           @bind="_memberSearch"
                                           @bind:event="oninput" />
                                </div>
                                
                                <div class="member-list">
                                    @foreach (var member in FilteredMembers.Take(10))
                                    {
                                        <div class="member-card @(_selectedMemberId == member.MemberID ? "selected" : "")"
                                             @onclick="() => SelectMember(member)">
                                            <div class="member-avatar">
                                                <i class="bi bi-person-circle"></i>
                                            </div>
                                            <div class="member-info">
                                                <div class="member-name">@member.FirstName @member.LastName</div>
                                                <div class="member-details">
                                                     <span class="badge-chip">ID: @member.MemberID</span>
                                                    <span class="badge-chip badge-@GetStatusClass(member.Status)">@member.Status</span>
                                                </div>
                                            </div>
                                            @if (_selectedMemberId == member.MemberID)
                                            {
                                                <div class="member-check">
                                                    <i class="bi bi-check-circle-fill"></i>
                                                </div>
                                            }
                                        </div>
                                    }
                                </div>

                                <div class="step-actions">
                                    <button class="btn btn-outline-secondary" @onclick="() => _assignStep = 1">
                                        <i class="bi bi-arrow-left"></i> Back
                                    </button>
                                    <button class="btn btn-primary" @onclick="() => _assignStep = 3" disabled="@(_selectedMemberId == 0)">
                                        Continue <i class="bi bi-arrow-right"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                    }

                    <!-- Step 3: Confirm -->
                    @if (_assignStep == 3)
                    {
                        <div class="step-content fade-in">
                            <div class="confirmation-summary">
                                <div class="summary-card">
                                    <h5>Assignment Summary</h5>
                                    <div class="summary-row">
                                        <span class="summary-label">Card Number:</span>
                                        <span class="summary-value"><code>@_scannedCardNumber</code></span>
                                    </div>
                                    <div class="summary-row">
                                        <span class="summary-label">Member:</span>
                                        <span class="summary-value">@_selectedMemberName</span>
                                    </div>
                                    <div class="summary-row">
                                        <span class="summary-label">Issued Date:</span>
                                        <span class="summary-value">@DateTime.Today.ToString("MMMM dd, yyyy")</span>
                                    </div>
                                </div>

                                <div class="form-group-modern">
                                    <label class="form-label-modern">Notes (Optional)</label>
                                    <textarea class="form-control" rows="3" @bind="_assignNotes" placeholder="Add any notes about this assignment..."></textarea>
                                </div>

                                @if (!string.IsNullOrEmpty(_assignError))
                                {
                                    <div class="alert alert-danger slide-in-down">
                                        <i class="bi bi-exclamation-triangle"></i> @_assignError
                                    </div>
                                }

                                <div class="step-actions">
                                    <button class="btn btn-outline-secondary" @onclick="() => _assignStep = 2" disabled="@_assigning">
                                        <i class="bi bi-arrow-left"></i> Back
                                    </button>
                                    <button class="btn btn-success btn-lg" @onclick="ConfirmAssignment" disabled="@_assigning">
                                        @if (_assigning)
                                        {
                                            <span class="spinner-border spinner-border-sm me-2"></span>
                                            <span>Assigning...</span>
                                        }
                                        else
                                        {
                                            <i class="bi bi-check-circle"></i>
                                            <span>Assign & Activate Card</span>
                                        }
                                    </button>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
}

<!-- Grace Period Edit Modal - NEW -->
@if (_showGracePeriodModal)
{
    <div class="modal-backdrop-modern fade-in" @onclick="CloseGracePeriodModal"></div>
    <div class="modal-modern-container fade-in scale-in">
        <div class="modal-modern">
            <div class="modal-header-modern">
                <div>
                    <h3 class="modal-title-modern">
                        <i class="bi bi-calendar-check text-success"></i>
                        Configure Grace Period
                    </h3>
                    <p class="modal-subtitle">Set the grace end date for @DateTime.Today.Year dues</p>
                </div>
                <button class="btn-close-modern" @onclick="CloseGracePeriodModal">
                    <i class="bi bi-x-lg"></i>
                </button>
            </div>
            
            <div class="modal-body-modern">
                <div class="grace-period-config">
                    <div class="alert alert-info mb-4">
                        <i class="bi bi-info-circle"></i>
                        <div>
                            <strong>About Grace Period:</strong>
                            <p class="mb-0 small">Members who paid dues last year can continue using their key cards until this date, even if they haven't paid for the current year.</p>
                        </div>
                    </div>

                    <div class="form-group-modern mb-4">
                        <label class="form-label-modern">
                            Grace End Date <span class="text-danger">*</span>
                        </label>
                        <input type="date" 
                               class="form-control form-control-lg" 
                               @bind="_gracePeriodEditDate"
                               min="@DateTime.Today.ToString("yyyy-MM-dd")" />
                        <small class="text-muted">
                            Cards will be automatically deactivated after this date if dues are unpaid
                        </small>
                    </div>

                    @if (_gracePeriodEditDate.HasValue)
                    {
                        var daysFromNow = (_gracePeriodEditDate.Value - DateTime.Today).Days;
                        var statusClass = daysFromNow > 30 ? "success" : daysFromNow > 7 ? "warning" : "danger";
                        
                        <div class="summary-card mb-4">
                            <h6 class="mb-3">Summary</h6>
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <span class="text-muted">Selected Date:</span>
                                <strong>@_gracePeriodEditDate.Value.ToString("MMMM d, yyyy")</strong>
                            </div>
                            <div class="d-flex justify-content-between align-items-center">
                                <span class="text-muted">Days from Today:</span>
                                <span class="badge bg-@statusClass">@daysFromNow days</span>
                            </div>
                        </div>
                    }

                    @if (!string.IsNullOrEmpty(_gracePeriodError))
                    {
                        <div class="alert alert-danger">
                            <i class="bi bi-exclamation-triangle"></i> @_gracePeriodError
                        </div>
                    }

                    <div class="modal-actions">
                        <button class="btn btn-outline-secondary" 
                                @onclick="CloseGracePeriodModal" 
                                disabled="@_savingGracePeriod">
                            Cancel
                        </button>
                        <button class="btn btn-success btn-lg" 
                                @onclick="SaveGracePeriod" 
                                disabled="@(!_gracePeriodEditDate.HasValue || _savingGracePeriod)">
                            @if (_savingGracePeriod)
                            {
                                <span class="spinner-border spinner-border-sm me-2"></span>
                                <span>Saving...</span>
                            }
                            else
                            {
                                <i class="bi bi-check-circle"></i>
                                <span>Save Grace Period</span>
                            }
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@code {
    private string _activeTab = "assignments";
    private bool _showAssignModal = false;
    private int _assignStep = 1;
    private bool _scanningEnabled = false;
    private bool _cardScanned = false;
    private string _scannedCardNumber = string.Empty;
    private int _selectedMemberId = 0;
    private string _selectedMemberName = string.Empty;
    private string _memberSearch = string.Empty;
    private string _assignNotes = string.Empty;
    private bool _assigning = false;
    private string _assignError = string.Empty;
    
    private List<Member> _allMembers = new();
    
    // Grace Period & Sync Status - NEW
    private DateTime? _graceEndDate;
    private int _membersAtRiskCount = 0;
    private int _pendingSyncCount = 0;
    private DateTime? _lastSyncTime;
    private bool _controllerOnline = true;
    
    // Grace Period Modal - NEW
    private bool _showGracePeriodModal = false;
    private DateTime? _gracePeriodEditDate;
    private bool _savingGracePeriod = false;
    private string _gracePeriodError = string.Empty;
    
    private int _paidMembersWithoutCardsCount = 0;
    
    protected override async Task OnInitializedAsync()
    {
        await LoadMembersAsync();
        await LoadGracePeriodAndSyncStatusAsync();
    }
    
    private async Task LoadGracePeriodAndSyncStatusAsync()
    {
        try
        {
            // Load grace period
            var currentYear = DateTime.Today.Year;
            var settings = await Task.Run(() => DuesYearSettingsRepository.GetSettingsForYear(currentYear));
            _graceEndDate = settings?.GraceEndDate;
            
            // Calculate members at risk
            // Members who are unpaid AND have an active card
            var dues = await DuesInsightService.GetDuesAsync(currentYear, false); // Get unpaid
            if (dues != null)
            {
                 // We need to know who has an active card. Ideally we'd map this efficiently.
                 // For now, let's fetch all active cards.
                 var allActiveCards = (await Task.Run(() => KeyCardRepository.GetAll()))
                                     .Where(c => c.IsActive)
                                     .Select(c => c.MemberId)
                                     .Distinct()
                                     .ToHashSet();
                                     
                 _membersAtRiskCount = dues.Count(d => allActiveCards.Contains(d.MemberId) && d.Amount > 0);
            }
            
            // Load sync status
            _pendingSyncCount = await SyncQueueRepository.GetPendingCountAsync();
            
            // Get last sync time from completed items
            var completedSyncs = await SyncQueueRepository.GetByStatusAsync("COMPLETED");
            if (completedSyncs.Any())
            {
                _lastSyncTime = completedSyncs.Max(x => x.CompletedDate ?? x.QueuedDate);
            }
            else
            {
                _lastSyncTime = null; 
            }
            
            // Get real controller health status
            var healthStatus = ControllerHealthService.GetHealthStatus();
            _controllerOnline = healthStatus.IsOnline;

            // Calculate members needing cards
            var paid = await DuesInsightService.GetDuesAsync(currentYear, true);
            var waived = await DuesInsightService.GetDuesAsync(currentYear, false);
            var activeCardMemberIds = (await Task.Run(() => KeyCardRepository.GetAll()))
                                        .Where(c => c.IsActive)
                                        .Select(c => c.MemberId)
                                        .ToHashSet();
            
            _paidMembersWithoutCardsCount = paid.Count(m => !activeCardMemberIds.Contains(m.MemberId)) 
                                            + waived.Count(m => m.IsWaived && !activeCardMemberIds.Contains(m.MemberId));
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error loading grace period and sync status");
        }
    }
    
    private async Task LoadMembersAsync()
    {
        try
        {
            var members = await Task.Run(() => MemberRepository.GetAllMembers());
            _allMembers = members
                .Where(m => !m.Status.Equals("DECEASED", StringComparison.OrdinalIgnoreCase))
                .OrderBy(m => m.LastName)
                .ThenBy(m => m.FirstName)
                .ToList();
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error loading members");
        }
    }
    
    private IEnumerable<Member> FilteredMembers
    {
        get
        {
            if (_allMembers == null)
                return Enumerable.Empty<Member>();

            if (string.IsNullOrWhiteSpace(_memberSearch))
                return _allMembers;
            
            var search = _memberSearch.ToLower();
            return _allMembers.Where(m =>
                (m.FirstName != null && m.FirstName.ToLower().Contains(search)) ||
                (m.LastName != null && m.LastName.ToLower().Contains(search)) ||
                m.MemberID.ToString().Contains(search));
        }
    }
    
    private void SetActiveTab(string tab)
    {
        _activeTab = tab;
    }
    
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            var uri = NavManager.ToAbsoluteUri(NavManager.Uri);
            if (Microsoft.AspNetCore.WebUtilities.QueryHelpers.ParseQuery(uri.Query).TryGetValue("assignTo", out var memberIdVal))
            {
                if (int.TryParse(memberIdVal, out var mid))
                {
                    // Wait for members to load if needed (though they should load fast in OnInitialized)
                    // If _allMembers is empty, we might miss it. 
                    // Let's ensure we find it.
                    var member = _allMembers.FirstOrDefault(m => m.MemberID == mid);
                    if (member == null)
                    {
                        // Reload if not found (lazy safety)
                        await LoadMembersAsync();
                        member = _allMembers.FirstOrDefault(m => m.MemberID == mid);
                    }

                    if (member != null)
                    {
                        OpenAssignCardModalForMember(member);
                        StateHasChanged();
                    }
                }
            }
        }
    }

    private void OpenAssignCardModal()
    {
        _showAssignModal = true;
        _assignStep = 1;
        _cardScanned = false;
        _scannedCardNumber = string.Empty;
        _selectedMemberId = 0;
        _selectedMemberName = string.Empty;
        _memberSearch = string.Empty;
        _assignNotes = string.Empty;
        _assignError = string.Empty;
    }

    private void OpenAssignCardModalForMember(Member member)
    {
        OpenAssignCardModal();
        _selectedMemberId = member.MemberID;
        _selectedMemberName = $"{member.FirstName} {member.LastName}";
        _memberSearch = member.MemberID.ToString(); // Pre-filter the list so they see the selection clearly
        // Optional: Could set specific message or note
    }
    
    private void CloseAssignCardModal()
    {
        _showAssignModal = false;
    }
    
    private void EnableScanning()
    {
        _scanningEnabled = true;
        _cardScanned = false;
