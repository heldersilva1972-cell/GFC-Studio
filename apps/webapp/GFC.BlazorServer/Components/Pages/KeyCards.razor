    private async Task SaveGracePeriod()
    {
        if (!_gracePeriodEditDate.HasValue)
        {
            _gracePeriodError = "Please select a grace end date";
            return;
        }
        
        if (_gracePeriodEditDate.Value < DateTime.Today)
        {
            _gracePeriodError = "Grace end date must be in the future";
            return;
        }
        
        _savingGracePeriod = true;
        _gracePeriodError = string.Empty;
        
        try
        {
            var currentYear = DateTime.Today.Year;
            var settings = await Task.Run(() => DuesYearSettingsRepository.GetSettingsForYear(currentYear));
            
            if (settings == null)
            {
                // Create new settings for this year
                settings = new DuesYearSettings
                {
                    Year = currentYear,
                    StandardDues = 250, // Default baseline dues
                    GraceEndApplied = true,
                    GraceEndDate = _gracePeriodEditDate.Value
                };
                await Task.Run(() => DuesYearSettingsRepository.UpsertSettings(settings));
            }
            else
            {
                // Update existing settings
                settings.GraceEndDate = _gracePeriodEditDate.Value;
                settings.GraceEndApplied = true;
                await Task.Run(() => DuesYearSettingsRepository.UpsertSettings(settings));
            }
            
            Logger.LogInformation("Updated grace period end date to {Date} for year {Year}", 
                _gracePeriodEditDate.Value, currentYear);
            
            // Reload data
            await LoadGracePeriodAndSyncStatusAsync();
            
            // Close modal
            _showGracePeriodModal = false;
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error saving grace period");
            _gracePeriodError = "Failed to save grace period. Please try again.";
        }
        finally
        {
            _savingGracePeriod = false;
        }
    }
    
