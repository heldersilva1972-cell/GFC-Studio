    @if (_activeTab == "assignments")
    {
        <div class="tab-pane fade-in" key="assignments">
            <CardAssignmentsTab OnReplaceCard="HandleReplaceCard" OnNeedingCardsClick="@(() => SetActiveTab("pending"))" />
        </div>
    }
    else if (_activeTab == "activity")
    {
        <div class="tab-pane fade-in" key="activity">
