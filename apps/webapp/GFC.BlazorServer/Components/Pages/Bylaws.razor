    private void SetActiveTab(string tab)
    {
        _activeTab = tab;
        // The editor initialization is handled in OnAfterRenderAsync
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (_activeTab == "edit")
        {
            await JS.InvokeVoidAsync("quillInterop.init", "quill-editor", _editContent);
        }
    }
    
    private async Task PrepareSave()
    {
        // Get content from Quill
        _editContent = await JS.InvokeAsync<string>("quillInterop.getContent", "quill-editor");
        _showSaveConfirmation = true;
    }

    private void CancelSave()
    {
        _showSaveConfirmation = false;
    }

    private async Task SaveBylaws()
    {
        if (_document == null) return;
        
        _isSaving = true;
        await Task.Delay(500); // UI feel
        
        await BylawService.UpdateBylawsAsync(_document.Id, _editContent, _changeReason, _currentUser);
        
        await LoadData();
        _activeTab = "read"; // Switch back to view
        _changeReason = ""; // Clear
        _showSaveConfirmation = false;
        _isSaving = false;
    }

    private void ViewRevision(BylawRevision rev)
    {
        _selectedRevision = rev;
        _showRevisionModal = true;
    }

    private void RestoreRevision(BylawRevision rev)
    {
        if (rev == null) return;
        
        _editContent = rev.Content;
        _changeReason = $"Restored from Version {rev.Version} ({rev.RevisionDate.ToShortDateString()})";
        _showRevisionModal = false;
        SetActiveTab("edit");
    }
