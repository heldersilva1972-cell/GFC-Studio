@page "/studio"

<div style="padding: 40px; background: #1a1a2e; min-height: 100vh; color: white; font-family: Arial;">
    <h1>GFC Studio - Direct Test (No Layout)</h1>
    <p>If you see this message, the /studio route is working.</p>
    <p>Current Time: @DateTime.Now.ToString("HH:mm:ss")</p>
    
    <div style="margin-top: 20px; padding: 20px; background: rgba(255,255,255,0.1); border-radius: 8px;">
        <h3>Status Check:</h3>
        <ul>
            <li>✅ Studio page loaded successfully</li>
            <li>✅ Blazor rendering working</li>
            <li>⚠️ Layout bypassed for testing</li>
        </ul>
    </div>
    
    <button style="margin-top: 20px; padding: 10px 20px; background: #4ade80; border: none; border-radius: 4px; color: black; cursor: pointer;" @onclick="TestClick">Test Button</button>
    @if (_clicked)
    {
        <p style="color: #4ade80; margin-top: 10px;">✅ Button click works! Blazor interactivity confirmed.</p>
    }
</div>

@code {
    private bool _clicked = false;
    
    private void TestClick()
    {
        _clicked = true;
    }
}
