        if (componentType == "Button") newSection.Data = JsonSerializer.Serialize(new { text = "Click Me" });
        if (componentType == "Image") newSection.Data = JsonSerializer.Serialize(new { src = "https://via.placeholder.com/150" });

        newSection.SyncDataToProperties();

        if (string.IsNullOrEmpty(closestId) || closestId == "null")
        {
            // Append to end
            newSection.PageIndex = sections.Count;
            sections.Add(newSection);
        }
        else
        {
            // Find insertion point
            var targetIndex = sections.FindIndex(s => s.ClientId.ToString() == closestId);
            if (targetIndex >= 0)
            {
                var insertIndex = insertAfter ? targetIndex + 1 : targetIndex;
                sections.Insert(insertIndex, newSection);
                
                // Re-index all
                for(int i=0; i<sections.Count; i++) sections[i].PageIndex = i;
            }
            else
            {
                 sections.Add(newSection);
            }
        }

        // Save and Update
        MarkAsDirty();
        StateHasChanged();
        await SendSectionsToPreview();
    }

