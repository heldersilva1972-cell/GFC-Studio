@page "/cameras/grid"
@using GFC.BlazorServer.Components.Shared

<div class="camera-grid-header">
    <h3>
        <i class="bi bi-grid-3x3-gap-fill me-2"></i>
        Multi-Camera Grid
    </h3>
    <p class="text-muted">Live view of all security cameras.</p>
</div>

<div class="camera-grid">
    <div class="camera-grid-cell">
        <CameraFeed CameraId="1" />
    </div>
    <div class="camera-grid-cell">
        <CameraFeed CameraId="2" />
    </div>
    <div class="camera-grid-cell">
        <CameraFeed CameraId="3" />
    </div>
    <div class="camera-grid-cell">
        <CameraFeed CameraId="4" />
    </div>
</div>

<style>
    .camera-grid-header {
        margin-bottom: 20px;
    }

    .camera-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(400px, 1fr));
        gap: 20px;
    }

    .camera-grid-cell {
        min-width: 0;
    }
</style>
