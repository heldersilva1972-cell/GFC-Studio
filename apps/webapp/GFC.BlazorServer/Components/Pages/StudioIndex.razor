@page "/studio"
@using GFC.Core.Models
@using GFC.BlazorServer.Services
@inject IStudioService StudioService
@inject NavigationManager NavigationManager

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h3>Studio Pages <span class="badge bg-info gfc-new-tag">[NEW]</span></h3>
        <button class="btn btn-primary" @onclick="CreateNewPage">
            <i class="bi bi-plus-lg me-1"></i> New Page
        </button>
    </div>

    @if (_pages == null)
    {
        <div class="text-center py-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
            <p class="mt-2">Loading pages...</p>
        </div>
    }
    else if (!_pages.Any())
    {
        <div class="card shadow-sm border-0 rounded-4 p-5 text-center">
            <div class="mb-3">
                <i class="bi bi-file-earmark-plus text-muted" style="font-size: 3rem;"></i>
            </div>
            <h4>No Studio pages yet</h4>
            <p class="text-muted">Create your first website page using the Visual Editor.</p>
            <button class="btn btn-primary mt-2" @onclick="CreateNewPage">Create First Page</button>
        </div>
    }
    else
    {
        <div class="row g-4">
            @foreach (var page in _pages)
            {
                <div class="col-md-4">
                    <div class="card h-100 shadow-sm border-0 rounded-4 studio-card">
                        <div class="card-body">
                            <h5 class="card-title">@page.Title</h5>
                            <p class="card-text text-muted small">
                                @(page.Sections?.Count ?? 0) Sections
                                @if (page.IsPublished)
                                {
                                    <span class="badge bg-success ms-2">Published</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary ms-2">Draft</span>
                                }
                            </p>
                            <div class="d-flex gap-2">
                                <button class="btn btn-outline-primary btn-sm flex-grow-1" @onclick="() => EditPage(page.Id)">
                                    <i class="bi bi-pencil-square me-1"></i> Edit
                                </button>
                                <button class="btn btn-outline-danger btn-sm" @onclick="() => DeletePage(page.Id)">
                                    <i class="bi bi-trash"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

@if (_showCreateModal)
{
    <div class="modal fade show" style="display: block; background: rgba(0,0,0,0.5);" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content border-0 shadow rounded-4">
                <div class="modal-header border-0">
                    <h5 class="modal-title fw-bold">Create New Page</h5>
                    <button type="button" class="btn-close" @onclick="() => _showCreateModal = false"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">Page Title</label>
                        <input type="text" class="form-control" @bind="_newPageTitle" placeholder="e.g. Home, About Us..." />
                    </div>
                </div>
                <div class="modal-footer border-0">
                    <button type="button" class="btn btn-light" @onclick="() => _showCreateModal = false">Cancel</button>
                    <button type="button" class="btn btn-primary px-4" @onclick="HandleCreatePage" disabled="@string.IsNullOrWhiteSpace(_newPageTitle)">Create</button>
                </div>
            </div>
        </div>
    </div>
}

<style>
    .studio-card {
        transition: transform 0.2s, box-shadow 0.2s;
    }
    .studio-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 20px rgba(0,0,0,0.1) !important;
    }
    .gfc-new-tag {
        font-size: 0.7rem;
        vertical-align: middle;
    }
</style>

@code {
    private IEnumerable<StudioPage> _pages;
    private bool _showCreateModal = false;
    private string _newPageTitle = "";

    protected override async Task OnInitializedAsync()
    {
        await LoadPages();
    }

    private async Task LoadPages()
    {
        _pages = await StudioService.GetAllPagesAsync();
    }

    private void CreateNewPage()
    {
        _newPageTitle = "";
        _showCreateModal = true;
    }

    private async Task HandleCreatePage()
    {
        if (string.IsNullOrWhiteSpace(_newPageTitle)) return;

        var newPage = new StudioPage
        {
            Title = _newPageTitle,
            IsPublished = false
        };

        var created = await StudioService.CreatePageAsync(newPage);
        _showCreateModal = false;
        NavigationManager.NavigateTo($"/studio/{created.Id}");
    }

    private void EditPage(int id)
    {
        NavigationManager.NavigateTo($"/studio/{id}");
    }

    private async Task DeletePage(int id)
    {
        // Simple confirmation
        // In a real app we'd use a better modal
        await StudioService.DeletePageAsync(id);
        await LoadPages();
    }
}
