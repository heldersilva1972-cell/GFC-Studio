    }

    .info-value {
        font-size: 0.95rem;
        color: #0f172a;
    }

    .table-wrapper {
        border: 1px solid #edf1f7;
        border-radius: 10px;
        overflow: hidden;
    }

    .table th,
    .table td {
        vertical-align: middle;
    }

    .span-2 {
        grid-column: 1 / -1;
    }

    .history-panel {
        display: flex;
        flex-direction: column;
        gap: 0.75rem;
    }

    .history-state {
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: 0.75rem;
        padding: 0.75rem 0.85rem;
        border: 1px dashed #e5e7eb;
        border-radius: 10px;
        background: #f8fafc;
    }

    .history-state-error {
        border-color: #fecdd3;
        background: #fff1f2;
    }

    .visually-hidden {
        position: absolute;
        width: 1px;
        height: 1px;
        padding: 0;
        margin: -1px;
        overflow: hidden;
        clip: rect(0, 0, 0, 0);
        white-space: nowrap;
        border: 0;
    }

    .keycard-detail .btn:focus-visible,
    .keycard-detail button:focus-visible,
    .keycard-detail a:focus-visible {
        outline: 2px solid #2563eb;
        outline-offset: 2px;
        box-shadow: 0 0 0 3px rgba(37, 99, 235, 0.25);
    }

    @@media (max-width: 768px) {
        .detail-header {
            flex-direction: column;
            align-items: flex-start;
        }

        .header-actions {
            width: 100%;
            justify-content: flex-start;
        }
    }

    @@media (min-width: 768px) {
        .info-grid {
            grid-template-columns: repeat(2, minmax(0, 1fr));
        }
    }

    @@media (min-width: 992px) {
        .detail-grid {
            grid-template-columns: repeat(2, minmax(0, 1fr));
        }
    }
</style>