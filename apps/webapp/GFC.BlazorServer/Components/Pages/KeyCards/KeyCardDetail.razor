        gap: 1rem;
        flex-wrap: wrap;
    }

    .header-info {
        display: flex;
        flex-direction: column;
        gap: 0.35rem;
        min-width: 0;
    }

    .identifier-row {
        display: flex;
        align-items: baseline;
        gap: 0.5rem;
        flex-wrap: wrap;
    }

    .identifier-label {
        font-weight: 600;
        letter-spacing: 0.02em;
        text-transform: uppercase;
        font-size: 0.85rem;
    }

    .card-number {
        font-size: 1.5rem;
        font-weight: 800;
        color: #0f172a;
    }

    .header-meta {
        display: flex;
        align-items: center;
        gap: 0.6rem;
        flex-wrap: wrap;
        min-width: 0;
    }

    .badge-row {
        display: flex;
        align-items: center;
        gap: 0.4rem;
        flex-wrap: wrap;
    }

    .header-actions {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        flex-wrap: wrap;
        justify-content: flex-end;
    }

    .header-actions .btn {
        white-space: nowrap;
    }

    .state-header {
        background: #f8fafc;
        border-style: dashed;
        justify-content: space-between;
    }

    .status-badge {
        display: inline-flex;
        align-items: center;
        padding: 0.3rem 0.6rem;
        border-radius: 999px;
        font-weight: 600;
        font-size: 0.85rem;
        line-height: 1.1;
        gap: 0.25rem;
        border: 1px solid transparent;
    }

    .status-active {
        background: #e6f4ea;
        color: #137333;
        border-color: #c4e3cc;
    }

    .status-disabled,
    .status-inactive {
        background: #f0f1f3;
        color: #475467;
        border-color: #e3e4e6;
    }

    .status-replaced {
        background: #e8f1ff;
        color: #1d4ed8;
        border-color: #cddffe;
    }

    .status-lost {
        background: #fff4ed;
        color: #c2410c;
        border-color: #ffd7ba;
    }

    .status-unknown {
        background: #f6f7fb;
        color: #6b7280;
        border-color: #e5e7eb;
    }

    .keycard-detail {
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }

    .detail-shell {
        display: flex;
        flex-direction: column;
        gap: 1rem;
        padding-block: 0.25rem 1rem;
    }

    .detail-grid {
        display: grid;
        gap: 1rem;
        grid-template-columns: 1fr;
    }

    .section-card {
        background: #fff;
        border: 1px solid #e5e7eb;
        border-radius: 12px;
        padding: 1rem 1.25rem;
        box-shadow: 0 4px 12px rgba(15, 23, 42, 0.04);
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }

    .section-header {
        display: flex;
        align-items: flex-start;
        justify-content: space-between;
        gap: 0.75rem;
        flex-wrap: wrap;
    }

    .section-eyebrow {
        font-size: 0.85rem;
        text-transform: uppercase;
        letter-spacing: 0.04em;
        color: #6b7280;
        font-weight: 700;
    }

    .section-title {
        font-size: 1.05rem;
        font-weight: 700;
        color: #0f172a;
        margin: 0;
    }

    .section-subtitle {
        color: #6b7280;
        font-size: 0.9rem;
    }

    .info-grid {
        display: grid;
        grid-template-columns: 1fr;
        gap: 0.75rem 1rem;
    }

    .info-block {
        display: flex;
        flex-direction: column;
        gap: 0.25rem;
        background: #f9fafb;
        border: 1px solid #edf1f7;
