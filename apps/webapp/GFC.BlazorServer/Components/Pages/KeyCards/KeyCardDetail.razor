@page "/keycards/{Id:int}"
@using Microsoft.AspNetCore.Authorization
@using GFC.Core.Models
@using GFC.Core.BusinessRules
@using GFC.BlazorServer.Data.Entities
@namespace GFC.BlazorServer.Components.Pages.KeyCardDetails
@attribute [Authorize]

@if (_loading)
{
    <div class="container-fluid">
        <div class="detail-header state-header">
            <div class="d-flex align-items-center gap-2">
                <div class="spinner-border spinner-border-sm text-info" role="status"></div>
                <span class="text-muted">Loading key card details...</span>
            </div>
        </div>
    </div>
}
else if (_notFound)
{
    <div class="container-fluid">
        <div class="detail-header state-header">
            <div>
                <div class="fw-semibold text-warning">Key card not found.</div>
                <div class="text-muted small">It may have been removed or reassigned.</div>
            </div>
            <div class="header-actions">
                <button class="btn btn-outline-secondary" type="button" @onclick="NavigateBack">Back to Key Cards</button>
            </div>
        </div>
    </div>
}
else if (!string.IsNullOrWhiteSpace(_error))
{
    <div class="container-fluid">
        <div class="detail-header state-header">
            <div>
                <div class="fw-semibold text-danger">@_error</div>
                <div class="text-muted small">Please try again.</div>
            </div>
            <div class="header-actions">
                <button class="btn btn-outline-secondary" type="button" @onclick="NavigateBack">Back to Key Cards</button>
            </div>
        </div>
    </div>
}
else if (_card is not null)
{
    var displayNumber = !string.IsNullOrWhiteSpace(_card.CardNumber) ? _card.CardNumber : _card.KeyCardId.ToString();
    var memberLabel = _member is null ? "Unassigned key card" : $"Assigned to {GetMemberName()} ({_member.MemberID})";
    var cardStatusText = _card.IsActive ? "Active" : "Inactive";
    var cardStatusClass = cardStatusText.ToLowerInvariant() switch
    {
        "active" => "status-active",
        "inactive" => "status-inactive",
        "disabled" => "status-disabled",
        "lost" => "status-lost",
        _ => "status-unknown"
    };
    var headerAccessStatusText = _card.IsActive ? "Enabled" : "Disabled";
    var headerAccessStatusClass = headerAccessStatusText.ToLowerInvariant() switch
    {
        "enabled" => "status-active",
        "disabled" => "status-disabled",
        _ => "status-unknown"
    };

    <div class="container-fluid keycard-detail">
        <div class="detail-header shadow-sm">
            <div class="header-info">
                <div class="identifier-row">
                    <span class="identifier-label text-muted">Key Card</span>
                    <span class="card-number">#@displayNumber</span>
                </div>
                <div class="header-meta">
                    <span class="text-muted small">@memberLabel</span>
                    <div class="badge-row">
                        <span class="status-badge @cardStatusClass">@cardStatusText</span>
                        <span class="status-badge @headerAccessStatusClass">@headerAccessStatusText</span>
                    </div>
                </div>
            </div>
            <div class="header-actions">
                <button class="btn btn-outline-secondary" type="button" @onclick="NavigateBack">Back to Key Cards</button>
                @if (_member is not null)
                {
                    <button class="btn btn-outline-primary" type="button" @onclick="NavigateToMember">Member Profile</button>
                }
                <button class="btn btn-outline-danger" type="button" @onclick="NavigateToDisable" disabled="@(!_card.IsActive)">Disable Card</button>
                <button class="btn btn-success" type="button" @onclick="NavigateToEnable" disabled="@_card.IsActive">Enable Card</button>
                <button class="btn btn-primary" type="button" @onclick="NavigateToReplace">Replace Card</button>
            </div>
        </div>

        <div class="detail-shell">
            <div class="detail-grid">
                <section class="section-card overview-section">
                    <div class="section-header">
                        <div>
                            <div class="section-eyebrow">Card Overview</div>
                            <h2 class="section-title">Status, assignment, and identifiers</h2>
                        </div>
                    </div>
                    <div class="info-grid">
                        <div class="info-block">
                            <div class="info-label">Card Number</div>
                            <div class="info-value">@_card.CardNumber</div>
                        </div>
                        <div class="info-block">
                            <div class="info-label">Card Status</div>
                            <div class="info-value">
                                @{
                                    var statusText = _card.IsActive ? "Active" : "Inactive";
                                    var statusClass = statusText switch
                                    {
                                        "Active" => "badge bg-success-subtle text-success",
                                        "Disabled" or "Inactive" => "badge bg-secondary-subtle text-secondary",
                                        "Lost" => "badge bg-danger-subtle text-danger",
                                        _ => "badge bg-light text-muted"
                                    };
                                }
                                <span class="@statusClass">@statusText</span>
                            </div>
                        </div>
                        <div class="info-block">
                            <div class="info-label">Assigned Member</div>
                            <div class="info-value">
                                @if (_member is null)
                                {
                                    <span class="text-muted">No member assigned</span>
                                }
                                else
                                {
                                    <span>@GetMemberName() (@_member.MemberID)</span>
                                }
                            </div>
                        </div>
                        <div class="info-block">
                            <div class="info-label">Member Status</div>
                            <div class="info-value">
                                @if (_member is null)
                                {
                                    <span class="text-muted">—</span>
                                }
                                else
                                {
                                    <span>@GetMemberStatusLabel()</span>
                                }
                            </div>
                        </div>
                        <div class="info-block">
                            <div class="info-label">Access State</div>
                            <div class="info-value">
                                <span class="status-badge @headerAccessStatusClass">@headerAccessStatusText</span>
                            </div>
                        </div>
                        <div class="info-block">
                            <div class="info-label">Dues</div>
                            <div class="info-value text-muted">Not available</div>
                        </div>
                    </div>
                </section>

                <section class="section-card history-section" aria-live="polite" aria-busy="@IsHistoryLoading">
                    <div class="section-header">
                        <div>
                            <div class="section-eyebrow">History</div>
                            <h2 class="section-title">Key history and actions</h2>
                        </div>
                        <span class="section-subtitle">Replacements, status changes, and important actions</span>
                    </div>

                    <div class="history-panel">
                        @if (IsHistoryLoading)
                        {
                            <div class="history-state" role="status">
                                <div class="spinner-border spinner-border-sm text-info" aria-hidden="true"></div>
                                <span>Loading history...</span>
                            </div>
                        }
                        else if (HistoryLoadErrored)
                        {
                            <div class="history-state history-state-error">
                                <div>
                                    <div class="fw-semibold text-danger">We could not load history for this card.</div>
                                    <div class="text-muted small">Check the card number and try again.</div>
                                </div>
                                <button class="btn btn-outline-secondary" type="button" @onclick="LoadAsync">Retry</button>
                            </div>
                        }
                        else if (!_historyAvailable)
                        {
                            <div class="history-state text-muted">
                                History is not available for this card.
                            </div>
                        }
                        else if (HistoryEntries.Any())
                        {
                            <div class="table-wrapper">
                                <div class="table-responsive">
                                    <table class="table table-sm table-striped mb-0 align-middle">
                                        <caption class="visually-hidden">Recent key card history</caption>
                                        <thead class="table-light">
                                            <tr>
                                                <th scope="col">Date</th>
                                                <th scope="col">Action</th>
                                                <th scope="col">Card</th>
                                                <th scope="col">Reason</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var history in HistoryEntries)
                                            {
                                                <tr>
                                                    <td class="small text-muted">@history.Date.ToLocalTime().ToString("g")</td>
                                                    <td>@history.Action</td>
                                                    <td>@history.CardNumber</td>
                                                    <td class="small">@history.Reason</td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        }
                        else
                        {
                            <div class="history-state text-muted">
                                No key history has been recorded for this card yet.
                            </div>
                        }
                    </div>
                </section>

                <section class="section-card access-section span-2">
                    <div class="section-header">
                        <div>
                            <div class="section-eyebrow">Access / Privileges</div>
                            <h2 class="section-title">Controller and door privileges</h2>
                        </div>
                        <span class="section-subtitle">Access paths and sync status</span>
                    </div>
                    <div class="table-wrapper">
                        <div class="table-responsive">
                            <table class="table table-sm table-hover mb-0 align-middle">
                                <thead class="table-light">
                                    <tr>
                                        <th>Controller</th>
                                        <th>Door</th>
                                        <th>Time Profile</th>
                                        <th>Status</th>
                                        <th>Last Synced</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (AccessEntries != null && AccessEntries.Any())
                                    {
                                        @foreach (var access in AccessEntries)
                                        {
                                            <tr>
                                                <td>
                                                    <span class="small text-muted">Controller</span>
                                                </td>
                                                <td>
                                                    <div class="small">Door @access.DoorId</div>
                                                </td>
                                                <td>@(access.TimeProfile?.Name ?? (access.TimeProfileId.HasValue ? $"Profile {access.TimeProfileId}" : "Not set"))</td>
                                                <td>
                                                    @{
                                                        var accessStatusText = access.IsEnabled ? "Enabled" : "Disabled";
                                                        var accessStatusClass = access.IsEnabled
                                                            ? "badge bg-success-subtle text-success"
                                                            : "badge bg-secondary-subtle text-secondary";
                                                    }
                                                    <span class="@accessStatusClass">@accessStatusText</span>
                                                </td>
                                                <td class="small text-muted">
                                                    @access.LastSyncedAt?.ToLocalTime().ToString("g")
                                                </td>
                                            </tr>
                                        }
                                    }
                                    else
                                    {
                                        <tr>
                                            <td colspan="5" class="text-center text-muted py-3">
                                                No access privileges have been recorded for this key card.
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </section>

                <section class="section-card metadata-section">
                    <div class="section-header">
                        <div>
                            <div class="section-eyebrow">Notes / Metadata</div>
                            <h2 class="section-title">Key card lifecycle details</h2>
                        </div>
                    </div>
                    <div class="info-grid">
                        <div class="info-block">
                            <div class="info-label">Issued</div>
                            <div class="info-value">
                                @_assignment?.FromDate is DateTime issuedDate
                                    ? FormatDate(issuedDate)
                                    : "—"
                            </div>
                        </div>
                        <div class="info-block">
                            <div class="info-label">Last Updated</div>
                            <div class="info-value">
                                @_card.CreatedDate.ToLocalTime().ToString("g")
                            </div>
                        </div>
                        <div class="info-block span-2">
                            <div class="info-label">Notes</div>
                            <div class="info-value text-muted">No notes recorded for this card.</div>
                        </div>
                    </div>
                </section>
            </div>
        </div>
    </div>
}

@code {
    private bool IsHistoryLoading => _loading;

    private bool HistoryLoadErrored =>
        !_loading
        && _card is not null
        && !string.IsNullOrWhiteSpace(_card.CardNumber)
        && !_historyAvailable;
}

<style>
