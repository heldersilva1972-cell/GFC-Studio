@page "/admin/review-moderation"
@using GFC.Core.Models
@inject HttpClient Http

<h3>Review Moderation</h3>

@if (reviews == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Rating</th>
                <th>Comment</th>
                <th>Approved</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var review in reviews)
            {
                <tr>
                    <td>@review.DisplayName</td>
                    <td>@review.Rating</td>
                    <td>@review.Content</td>
                    <td><input type="checkbox" @bind="review.IsApproved" /></td>
                    <td>
                        <button class="btn btn-primary" @onclick="() => Save(review)">Save</button>
                        <button class="btn btn-danger" @onclick="() => Delete(review.Id)">Delete</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private List<PublicReview> reviews;

    protected override async Task OnInitializedAsync()
    {
        reviews = await Http.GetFromJsonAsync<List<PublicReview>>("api/Reviews/all");
    }

    private async Task Save(PublicReview review)
    {
        await Http.PutAsJsonAsync($"api/Reviews/{review.Id}", review);
    }

    private async Task Delete(int id)
    {
        await Http.DeleteAsync($"api/Reviews/{id}");
        reviews.RemoveAll(r => r.Id == id);
    }
}
