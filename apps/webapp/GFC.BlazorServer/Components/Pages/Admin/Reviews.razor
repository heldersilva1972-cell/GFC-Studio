@page "/admin/reviews"
@using GFC.Core.Models
@using GFC.Core.Interfaces
@inject IPublicReviewService ReviewService
@inject IJSRuntime JSRuntime

<h3>Review Moderation <span class="badge bg-success gfc-new-tag">[NEW]</span></h3>

@if (_reviews == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Display Name</th>
                <th>Event Type</th>
                <th>Content</th>
                <th>Status</th>
                <th>Featured</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var review in _reviews)
            {
                <tr>
                    <td>@review.DisplayName</td>
                    <td>@review.EventType</td>
                    <td>@review.Content</td>
                    <td>
                        @if (review.IsApproved)
                        {
                            <span class="badge bg-success">Approved</span>
                        }
                        else
                        {
                            <span class="badge bg-warning">Pending</span>
                        }
                    </td>
                    <td>
                        <InputCheckbox @bind-Value="review.IsFeatured" @onchange="() => ToggleFeatured(review)" />
                    </td>
                    <td>
                        @if (!review.IsApproved)
                        {
                            <button class="btn btn-sm btn-success" @onclick="() => ApproveReview(review)">Approve</button>
                        }
                        <button class="btn btn-sm btn-danger" @onclick="() => DeleteReview(review)">Delete</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private List<PublicReview> _reviews;

    protected override async Task OnInitializedAsync()
    {
        await LoadReviews();
    }

    private async Task LoadReviews()
    {
        _reviews = await ReviewService.GetAllReviewsAsync();
    }

    private async Task ApproveReview(PublicReview review)
    {
        review.IsApproved = true;
        await ReviewService.UpdateReviewAsync(review);
        await LoadReviews();
    }

    private async Task ToggleFeatured(PublicReview review)
    {
        await ReviewService.UpdateReviewAsync(review);
        await LoadReviews();
    }

    private async Task DeleteReview(PublicReview review)
    {
        var confirmed = await JSRuntime.InvokeAsync<bool>("confirm", "Are you sure you want to delete this review?");
        if (confirmed)
        {
            await ReviewService.DeleteReviewAsync(review.Id);
            await LoadReviews();
        }
    }
}
