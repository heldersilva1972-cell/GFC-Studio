@page "/admin/staff-shifts"
@using GFC.Core.Models
@using GFC.BlazorServer.Services
@inject IShiftService ShiftService

<h3>Staff Shifts <span class="badge bg-info gfc-new-tag">[NEW]</span></h3>

@if (_shifts == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Staff Name</th>
                <th>Start Time</th>
                <th>End Time</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var shift in _shifts)
            {
                <tr>
                    <td>@shift.StaffName</td>
                    <td>@shift.StartTime.ToString("g")</td>
                    <td>@shift.EndTime.ToString("g")</td>
                    <td>
                        <button class="btn btn-primary btn-sm" @onclick="() => ViewShiftReport(shift)">View Report</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private IEnumerable<StaffShift> _shifts;

    protected override async Task OnInitializedAsync()
    {
        _shifts = await ShiftService.GetStaffShiftsAsync();
    }

    private void ViewShiftReport(StaffShift shift)
    {
        // TODO: Implement a modal to display the shift report
    }
}
