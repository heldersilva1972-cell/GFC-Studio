@using GFC.BlazorServer.Services.NetworkMigration
@using NetworkMigrationResult = GFC.BlazorServer.Services.NetworkMigration.MigrationResult

<div>
    <h5 class="mb-4">Migrating Controller...</h5>

    @if (Result == null)
    {
        <div class="text-center py-5">
            <div class="spinner-border text-primary mb-3" style="width: 3rem; height: 3rem;"></div>
            <h6>Migration in progress</h6>
            <p class="text-muted">Please wait while we update the controller configuration...</p>
            
            <div class="progress mt-4" style="height: 30px;">
                <div class="progress-bar progress-bar-striped progress-bar-animated" 
                     role="progressbar" style="width: 100%">
                    Processing...
                </div>
            </div>
        </div>
    }
    else if (!Result.Success)
    {
        <div class="alert alert-danger">
            <h5><i class="bi bi-x-circle-fill me-2"></i>Migration Failed</h5>
            <p class="mb-0">@Result.ErrorMessage</p>
        </div>

        <div class="alert alert-info">
            <i class="bi bi-info-circle me-2"></i>
            Your controller configuration has not been changed. It's still using the original settings.
        </div>

        <div class="mt-4">
            <button class="btn btn-primary" @onclick="OnRetry">
                <i class="bi bi-arrow-left"></i> Go Back and Try Again
            </button>
            <button class="btn btn-secondary ms-2" @onclick="OnCancel">
                Cancel Migration
            </button>
        </div>
    }
</div>

@code {
    [Parameter] public NetworkMigrationResult? Result { get; set; }
    [Parameter] public EventCallback OnRetry { get; set; }
    [Parameter] public EventCallback OnCancel { get; set; }
}
