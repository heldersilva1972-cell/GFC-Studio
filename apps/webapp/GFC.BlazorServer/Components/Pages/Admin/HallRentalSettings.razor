@page "/admin/hall-rental-settings"
@attribute [Microsoft.AspNetCore.Authorization.Authorize(Policy = "RequireAdmin")]
@using GFC.Core.Models
@using GFC.BlazorServer.Services
@inject GFC.Core.Interfaces.IWebsiteSettingsService WebsiteSettingsService

<div class="settings-page">
    <div class="page-header">
        <h2><i class="bi bi-building-gear"></i> Hall Rental Settings</h2>
        <p class="text-muted">Configure pricing, payments, and policies for hall rentals</p>
    </div>

    @if (!string.IsNullOrEmpty(_errorMessage))
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle-fill"></i> @_errorMessage
            <button type="button" class="btn-close" @onclick="() => _errorMessage = null"></button>
        </div>
    }

    @if (_successMessage != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle-fill"></i> @_successMessage
            <button type="button" class="btn-close" @onclick="() => _successMessage = null"></button>
        </div>
    }

    @if (_settings == null)
    {
        @if (string.IsNullOrEmpty(_errorMessage))
        {
            <div class="text-center py-5">
                <div class="spinner-border text-primary" role="status">
                    <span class="visually-hidden">Loading...</span>
                </div>
                <p class="mt-3 text-muted">Loading settings...</p>
            </div>
        }
    }
    else
    {
        <EditForm Model="@_settings" OnValidSubmit="SaveChanges">
            <DataAnnotationsValidator />

            <!-- Hall Rental Pricing Matrix -->
            <div class="settings-section">
                <div class="section-header">
                    <div class="section-icon bg-success">
                        <i class="bi bi-cash-stack"></i>
                    </div>
                    <div>
                        <h4>Hall Rental Pricing Matrix</h4>
                        <p class="text-muted mb-0">Configure rates for different hall types and membership status</p>
                    </div>
                </div>
                <div class="section-body">
                    <div class="pricing-matrix">
                        <table class="table table-bordered pricing-table">
                            <thead>
                                <tr>
                                    <th class="hall-type-header"></th>
                                    <th class="member-header bg-success bg-opacity-10">
                                        <i class="bi bi-person-fill text-success"></i> Non-Member
                                    </th>
                                    <th class="member-header bg-primary bg-opacity-10">
                                        <i class="bi bi-person-check-fill text-primary"></i> Member
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td class="hall-type-cell">
                                        <strong>Function Hall</strong>
                                        <br/><small class="text-muted">Does not include Bartender</small>
                                    </td>
                                    <td class="price-cell">
                                        <div class="input-group">
                                            <span class="input-group-text">$</span>
                                            <InputNumber class="form-control form-control-lg text-center fw-bold" @bind-Value="FunctionHallNonMemberRateProxy" />
                                        </div>
                                    </td>
                                    <td class="price-cell">
                                        <div class="input-group">
                                            <span class="input-group-text">$</span>
                                            <InputNumber class="form-control form-control-lg text-center fw-bold" @bind-Value="FunctionHallMemberRateProxy" />
                                        </div>
                                    </td>
                                </tr>
                                <tr>
                                    <td class="hall-type-cell">
                                        <strong>Coalition</strong>
                                        <br/><small class="text-muted">Does not include Bartender</small>
                                    </td>
                                    <td class="price-cell">
                                        <div class="input-group">
                                            <span class="input-group-text">$</span>
                                            <InputNumber class="form-control form-control-lg text-center fw-bold" @bind-Value="CoalitionNonMemberRateProxy" />
                                        </div>
                                    </td>
                                    <td class="price-cell">
                                        <div class="input-group">
                                            <span class="input-group-text">$</span>
                                            <InputNumber class="form-control form-control-lg text-center fw-bold" @bind-Value="CoalitionMemberRateProxy" />
                                        </div>
                                    </td>
                                </tr>
                                <tr>
                                    <td class="hall-type-cell">
                                        <strong>Youth Organizations</strong>
                                        <br/><small class="text-muted">Does not include Bartender</small>
                                    </td>
                                    <td class="price-cell">
                                        <div class="input-group">
                                            <span class="input-group-text">$</span>
                                            <InputNumber class="form-control form-control-lg text-center fw-bold" @bind-Value="YouthOrganizationNonMemberRateProxy" />
                                        </div>
                                    </td>
                                    <td class="price-cell">
                                        <div class="input-group">
                                            <span class="input-group-text">$</span>
                                            <InputNumber class="form-control form-control-lg text-center fw-bold" @bind-Value="YouthOrganizationMemberRateProxy" />
                                        </div>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    
                    <!-- Add-on Services Section -->
                    <div class="mt-4">
                        <h5 class="mb-3"><i class="bi bi-plus-circle text-info"></i> Add-on Services</h5>
                        <div class="row g-3">
                            <div class="col-md-6">
                                <div class="pricing-card h-100 border-info">
                                    <div class="pricing-header bg-info bg-opacity-10">
                                        <i class="bi bi-cup-straw text-info fs-2"></i>
                                        <h5 class="mt-2 mb-0">Add on Bar</h5>
                                    </div>
                                    <div class="pricing-body">
                                        <div class="input-group input-group-lg">
                                            <span class="input-group-text">$</span>
                                            <InputNumber class="form-control text-center fw-bold" @bind-Value="BartenderServiceFeeProxy" />
                                            <span class="input-group-text">.00</span>
                                        </div>
                                        <small class="form-text text-muted mt-2 d-block">
                                            <i class="bi bi-info-circle"></i> Includes Bartender
                                        </small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Additional Fees -->
            <div class="settings-section">
                <div class="section-header">
                    <div class="section-icon bg-info">
                        <i class="bi bi-plus-circle-fill"></i>
                    </div>
                    <div>
                        <h4>Additional Pricing Options</h4>
                        <p class="text-muted mb-0">Configure fees for add-on services and equipment</p>
                    </div>
                </div>
                <div class="section-body">
                    <div class="row g-4">
                        <div class="col-md-4">
                            <div class="pricing-card h-100">
                                <div class="pricing-header bg-danger bg-opacity-10">
                                    <i class="bi bi-fire text-danger fs-2"></i>
                                    <h5 class="mt-2 mb-0">Kitchen Usage Fee</h5>
                                </div>
                                <div class="pricing-body">
                                    <div class="input-group">
                                        <span class="input-group-text">$</span>
                                        <InputNumber class="form-control" @bind-Value="KitchenFeeProxy" />
                                        <span class="input-group-text">.00</span>
                                    </div>
                                    <small class="form-text text-muted mt-2 d-block">
                                        Flat fee for kitchen access and usage
                                    </small>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="pricing-card h-100">
                                <div class="pricing-header bg-primary bg-opacity-10">
                                    <i class="bi bi-mic-fill text-primary fs-2"></i>
                                    <h5 class="mt-2 mb-0">Special Equipment Fee</h5>
                                </div>
                                <div class="pricing-body">
                                    <div class="input-group">
                                        <span class="input-group-text">$</span>
                                        <InputNumber class="form-control" @bind-Value="AvEquipmentFeeProxy" />
                                        <span class="input-group-text">.00</span>
                                    </div>
                                    <small class="form-text text-muted mt-2 d-block">
                                        Fee for A/V equipment, projectors, or sound systems
                                    </small>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="pricing-card h-100">
                                <div class="pricing-header bg-warning bg-opacity-10">
                                    <i class="bi bi-shield-lock-fill text-warning fs-2"></i>
                                    <h5 class="mt-2 mb-0">Security Deposit</h5>
                                </div>
                                <div class="pricing-body">
                                    <div class="input-group">
                                        <span class="input-group-text">$</span>
                                        <InputNumber class="form-control" @bind-Value="SecurityDepositAmountProxy" />
                                        <span class="input-group-text">.00</span>
                                    </div>
                                    <small class="form-text text-muted mt-2 d-block">
                                        Refundable deposit required to secure any rental date
                                    </small>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row g-4 mt-3">
                        <div class="col-md-6">
                            <div class="pricing-card h-100 border-success">
                                <div class="pricing-header bg-success bg-opacity-10">
                                    <i class="bi bi-clock-history text-success fs-2"></i>
                                    <h5 class="mt-2 mb-0">Base Function Hours</h5>
                                </div>
                                <div class="pricing-body">
                                    <div class="input-group input-group-lg">
                                        <InputNumber class="form-control" @bind-Value="BaseFunctionHoursProxy" />
                                        <span class="input-group-text">hours</span>
                                    </div>
                                    <small class="form-text text-muted mt-2 d-block">
                                        <i class="bi bi-info-circle"></i> Standard function time included in rental (Baseline: 5 hours)
                                    </small>
                                    <div class="alert alert-warning mt-3 mb-0 py-2 px-3">
                                        <small><strong>Note:</strong> Setup and cleanup time are NOT included in function hours</small>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="pricing-card h-100 border-success">
                                <div class="pricing-header bg-success bg-opacity-10">
                                    <i class="bi bi-plus-circle text-success fs-2"></i>
                                    <h5 class="mt-2 mb-0">Additional Hour Rate</h5>
                                </div>
                                <div class="pricing-body">
                                    <div class="input-group input-group-lg">
                                        <span class="input-group-text">$</span>
                                        <InputNumber class="form-control" @bind-Value="AdditionalHourRateProxy" />
                                        <span class="input-group-text">.00 / hour</span>
                                    </div>
                                    <small class="form-text text-muted mt-2 d-block">
                                        <i class="bi bi-info-circle"></i> Cost per hour beyond base function time (Baseline: $50)
                                    </small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Payment Settings -->
            <div class="settings-section">
                <div class="section-header">
                    <div class="section-icon bg-warning">
                        <i class="bi bi-credit-card-fill"></i>
                    </div>
                    <div>
                        <h4>Online Payments</h4>
                        <p class="text-muted mb-0">Configure online payment processing</p>
                    </div>
                </div>
                <div class="section-body">
                    <div class="status-toggle mb-4">
                        <div class="d-flex align-items-center justify-content-between p-4 bg-light rounded-3">
                            <div>
                                <h5 class="mb-1">
                                    <i class="bi bi-toggle-on text-warning"></i> Enable Online Payments
                                </h5>
                                <p class="text-muted mb-0">
                                    Allow customers to pay for hall rentals online via payment gateway
                                </p>
                            </div>
                            <div class="form-check form-switch">
                                <InputCheckbox id="enableOnlinePayment" class="form-check-input" style="width: 3.5rem; height: 1.75rem;" @bind-Value="EnableOnlineRentalsPaymentProxy" />
                                <label for="enableOnlinePayment" class="form-check-label ms-2 fw-bold fs-5">
                                    @if (EnableOnlineRentalsPaymentProxy)
                                    {
                                        <span class="text-success">ENABLED</span>
                                    }
                                    else
                                    {
                                        <span class="text-secondary">DISABLED</span>
                                    }
                                </label>
                            </div>
                        </div>
                    </div>

                    @if (EnableOnlineRentalsPaymentProxy)
                    {
                        <div class="alert alert-info border-info">
                            <div class="d-flex align-items-start">
                                <i class="bi bi-info-circle-fill fs-4 me-3"></i>
                                <div>
                                    <h6 class="alert-heading mb-2">Payment Gateway Configuration</h6>
                                    <p class="mb-0">
                                        Enter your payment processor credentials below. These are securely stored and encrypted in the database.
                                        Never share your API keys publicly.
                                    </p>
                                </div>
                            </div>
                        </div>
                        
                        <div class="row g-3 mt-2">
                            <div class="col-md-6">
                                <label class="form-label fw-bold">
                                    <i class="bi bi-link-45deg text-warning"></i> Gateway URL
                                </label>
                                <InputText class="form-control form-control-lg" @bind-Value="_settings.PaymentGatewayUrl" placeholder="https://api.paymentgateway.com" />
                                <small class="form-text text-muted">
                                    Your payment processor's API endpoint (e.g., Stripe, Square, PayPal)
                                </small>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label fw-bold">
                                    <i class="bi bi-key-fill text-warning"></i> API Key
                                </label>
                                <div class="input-group input-group-lg">
                                    <InputText type="password" class="form-control" @bind-Value="_settings.PaymentGatewayApiKey" placeholder="sk_live_..." />
                                    <button class="btn btn-outline-secondary" type="button" title="API keys are masked for security">
                                        <i class="bi bi-eye-slash"></i>
                                    </button>
                                </div>
                                <small class="form-text text-muted">
                                    <i class="bi bi-shield-lock-fill text-danger"></i> Keep this secure - never share publicly
                                </small>
                            </div>
                        </div>

                        <div class="alert alert-warning border-warning mt-3">
                            <i class="bi bi-exclamation-triangle-fill"></i>
                            <strong>Important:</strong> Test your payment gateway in a sandbox environment before going live.
                        </div>
                    }
                </div>
            </div>

            <!-- Save Button -->
            <div class="sticky-bottom bg-white border-top p-3 shadow-sm">
                <div class="d-flex justify-content-between align-items-center">
                    <div class="text-muted">
                        <i class="bi bi-info-circle"></i> Changes are saved to the database
                    </div>
                    <button type="submit" class="btn btn-primary btn-lg px-5" disabled="@_isSaving">
                        @if (_isSaving)
                        {
                            <span class="spinner-border spinner-border-sm me-2"></span>
                            <span>Saving...</span>
                        }
                        else
                        {
                            <i class="bi bi-check-circle-fill me-2"></i>
                            <span>Save Changes</span>
                        }
                    </button>
                </div>
            </div>
        </EditForm>
    }
</div>

