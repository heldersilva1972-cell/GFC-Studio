@code {
    private GFC.Core.Models.WebsiteSettings _settings;
    private string _errorMessage;
    private string _successMessage;
    private bool _isSaving = false;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            _settings = await WebsiteSettingsService.GetWebsiteSettingsAsync();
            if (_settings == null)
            {
               _settings = new GFC.Core.Models.WebsiteSettings();
            }
        }
        catch (Exception ex)
        {
            _errorMessage = $"Error loading settings: {ex.Message}. Using default settings.";
            _settings = new GFC.Core.Models.WebsiteSettings();
        }
    }

    private async Task SaveChanges()
    {
        _isSaving = true;
        _errorMessage = null;
        _successMessage = null;
        
        try
        {
            await WebsiteSettingsService.UpdateWebsiteSettingsAsync(_settings);
            _successMessage = "Hall rental settings saved successfully!";
        }
        catch (Exception ex)
        {
            _errorMessage = $"Error saving settings: {ex.Message}";
        }
        finally
        {
            _isSaving = false;
        }
    }

    // Proxy properties
    public decimal MemberRateProxy
    {
        get => _settings?.MemberRate ?? 0;
        set { if (_settings != null) _settings.MemberRate = value; }
    }

    public decimal NonMemberRateProxy
    {
        get => _settings?.NonMemberRate ?? 0;
        set { if (_settings != null) _settings.NonMemberRate = value; }
    }

    public decimal NonProfitRateProxy
    {
        get => _settings?.NonProfitRate ?? 0;
        set { if (_settings != null) _settings.NonProfitRate = value; }
    }

    public decimal KitchenFeeProxy
    {
        get => _settings?.KitchenFee ?? 0;
        set { if (_settings != null) _settings.KitchenFee = value; }
    }

    public decimal AvEquipmentFeeProxy
    {
        get => _settings?.AvEquipmentFee ?? 0;
        set { if (_settings != null) _settings.AvEquipmentFee = value; }
    }

    public decimal SecurityDepositAmountProxy
    {
        get => _settings?.SecurityDepositAmount ?? 0;
        set { if (_settings != null) _settings.SecurityDepositAmount = value; }
    }

    public bool EnableOnlineRentalsPaymentProxy
    {
        get => _settings?.EnableOnlineRentalsPayment ?? false;
        set { if (_settings != null) _settings.EnableOnlineRentalsPayment = value; }
    }

    public int BaseFunctionHoursProxy
    {
        get => _settings?.BaseFunctionHours ?? 5;
        set { if (_settings != null) _settings.BaseFunctionHours = value; }
    }

    public decimal AdditionalHourRateProxy
    {
        get => _settings?.AdditionalHourRate ?? 50;
        set { if (_settings != null) _settings.AdditionalHourRate = value; }
    }
    
    // New Pricing Matrix Proxies
    public decimal FunctionHallNonMemberRateProxy
    {
        get => _settings?.FunctionHallNonMemberRate ?? 400;
        set { if (_settings != null) _settings.FunctionHallNonMemberRate = value; }
    }
    
    public decimal FunctionHallMemberRateProxy
    {
        get => _settings?.FunctionHallMemberRate ?? 300;
        set { if (_settings != null) _settings.FunctionHallMemberRate = value; }
    }
    
    public decimal CoalitionNonMemberRateProxy
    {
        get => _settings?.CoalitionNonMemberRate ?? 200;
        set { if (_settings != null) _settings.CoalitionNonMemberRate = value; }
    }
    
    public decimal CoalitionMemberRateProxy
    {
        get => _settings?.CoalitionMemberRate ?? 100;
        set { if (_settings != null) _settings.CoalitionMemberRate = value; }
    }
    
    public decimal YouthOrganizationNonMemberRateProxy
    {
        get => _settings?.YouthOrganizationNonMemberRate ?? 100;
        set { if (_settings != null) _settings.YouthOrganizationNonMemberRate = value; }
    }
    
    public decimal YouthOrganizationMemberRateProxy
    {
        get => _settings?.YouthOrganizationMemberRate ?? 100;
        set { if (_settings != null) _settings.YouthOrganizationMemberRate = value; }
    }
    
    public decimal BartenderServiceFeeProxy
    {
        get => _settings?.BartenderServiceFee ?? 100;
        set { if (_settings != null) _settings.BartenderServiceFee = value; }
    }
}
