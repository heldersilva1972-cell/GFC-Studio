@page "/admin/event-promotions"
@using GFC.Core.Models
@using GFC.BlazorServer.Services
@inject IEventPromotionService EventPromotionService

<h3>Event Promotion Manager <span class="badge bg-info gfc-new-tag">[NEW]</span></h3>

@if (_promotions == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Title</th>
                <th>Event Date</th>
                <th>Skin</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var promo in _promotions)
            {
                <tr>
                    <td>@promo.Title</td>
                    <td>@promo.EventDate.ToShortDateString()</td>
                    <td>@promo.Skin</td>
                    <td>
                        <button class="btn btn-primary btn-sm" @onclick="() => EditPromotion(promo)">Edit</button>
                        <button class="btn btn-danger btn-sm" @onclick="() => DeletePromotion(promo.Id)">Delete</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

<hr />

<h4>@(_isEditing ? "Edit Promotion" : "Create Promotion")</h4>

<EditForm Model="@_editedPromotion" OnValidSubmit="@HandleValidSubmit">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <InputText id="title" class="form-control" @bind-Value="_editedPromotion.Title" />
    </div>

    <div class="mb-3">
        <label for="eventDate" class="form-label">Event Date</label>
        <InputDate id="eventDate" class="form-control" @bind-Value="_editedPromotion.EventDate" />
    </div>

    <div class="mb-3">
        <label for="imageUrl" class="form-label">Image URL</label>
        <InputText id="imageUrl" class="form-control" @bind-Value="_editedPromotion.ImageUrl" />
    </div>

    <div class="mb-3">
        <label for="skin" class="form-label">Skin</label>
        <InputText id="skin" class="form-control" @bind-Value="_editedPromotion.Skin" />
    </div>

    <button type="submit" class="btn btn-success">@(_isEditing ? "Update" : "Create")</button>
    @if (_isEditing)
    {
        <button type="button" class="btn btn-secondary" @onclick="CancelEdit">Cancel</button>
    }
</EditForm>

@code {
    private IEnumerable<EventPromotion> _promotions;
    private EventPromotion _editedPromotion = new();
    private bool _isEditing = false;

    protected override async Task OnInitializedAsync()
    {
        await LoadPromotions();
    }

    private async Task LoadPromotions()
    {
        _promotions = await EventPromotionService.GetEventPromotionsAsync();
    }

    private void EditPromotion(EventPromotion promotion)
    {
        _editedPromotion = promotion;
        _isEditing = true;
    }

    private void CancelEdit()
    {
        _editedPromotion = new();
        _isEditing = false;
    }

    private async Task HandleValidSubmit()
    {
        if (_isEditing)
        {
            await EventPromotionService.UpdateEventPromotionAsync(_editedPromotion);
        }
        else
        {
            await EventPromotionService.CreateEventPromotionAsync(_editedPromotion);
        }

        CancelEdit();
        await LoadPromotions();
    }

    private async Task DeletePromotion(int id)
    {
        await EventPromotionService.DeleteEventPromotionAsync(id);
        await LoadPromotions();
    }
}
