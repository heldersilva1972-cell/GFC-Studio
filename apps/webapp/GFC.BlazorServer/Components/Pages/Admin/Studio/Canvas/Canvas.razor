@using GFC.BlazorServer.Components.Pages.Admin.Studio.TopBar

<div class="canvas-container">
    <iframe src="http://localhost:3000" class="preview-iframe @currentViewCssClass"></iframe>
</div>

@code {
    private string currentViewCssClass = "desktop-view";

    public void SetDeviceView(TopBar.DeviceView view)
    {
        currentViewCssClass = view switch
        {
            TopBar.DeviceView.Desktop => "desktop-view",
            TopBar.DeviceView.Tablet => "tablet-view",
            TopBar.DeviceView.Mobile => "mobile-view",
            _ => "desktop-view"
        };
        StateHasChanged();
    }
}
