@page "/my-devices"
@using GFC.BlazorServer.Services.Vpn
@using GFC.Core.Models
@using GFC.BlazorServer.Auth
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize(Roles = AppRoles.Admin + "," + AppRoles.Director)]
@inject IVpnConfigurationService VpnService
@inject CustomAuthenticationStateProvider AuthStateProvider
@inject NavigationManager Navigation
@inject IJSRuntime JSRuntime
@inject ILogger<DeviceSetup> Logger

<div class="device-setup-container">
    <div class="page-header">
        <div class="header-content">
            <i class="bi bi-shield-lock-fill header-icon"></i>
            <div>
                <h1>Secure Access & Devices</h1>
                <p class="subtitle">
                    @if (_isAdmin)
                    {
                        <span>Administrator View - Manage all access and devices</span>
                    }
                    else if (_profiles.Count > 0)
                    {
                        <span>Manage your VPN profiles and security credentials</span>
                    }
                    else
                    {
                        <span>Request secure access to the GFC network</span>
                    }
                </p>
            </div>
        </div>
        
        @* Access State Indicator *@
        <div class="access-state-badge">
            @if (_isAdmin)
            {
                <span class="badge badge-admin">
                    <i class="bi bi-shield-fill-check me-1"></i>
                    Administrator
                </span>
            }
            else if (_profiles.Count > 0)
            {
                <span class="badge badge-active">
                    <i class="bi bi-check-circle-fill me-1"></i>
                    Active Access (@_profiles.Count @(_profiles.Count == 1 ? "Device" : "Devices"))
                </span>
            }
            else
            {
                <span class="badge badge-pending">
                    <i class="bi bi-hourglass-split me-1"></i>
                    No Access
                </span>
            }
        </div>
    </div>
    
    @* Admin-Only Actions *@
    @if (_isAdmin)
    {
        <div class="admin-actions-bar">
            <h3><i class="bi bi-tools me-2"></i>Admin Tools</h3>
            <div class="admin-buttons">
                <button class="btn btn-primary" @onclick="ShowGenerateInviteModal">
                    <i class="bi bi-envelope-plus me-2"></i>
                    Generate Invite Link
                </button>
                <button class="btn btn-outline-secondary" @onclick="NavigateToAuditLog">
                    <i class="bi bi-list-check me-2"></i>
                    View Audit Log
                </button>
                <button class="btn btn-outline-secondary" @onclick="NavigateToVpnManagement">
                    <i class="bi bi-diagram-3 me-2"></i>
                    VPN Management
                </button>
            </div>
        </div>
    }

    @if (_loading)
    {
        <div class="loading-state">
            <div class="spinner"></div>
            <p>Loading your secure profiles...</p>
        </div>
    }
    else
    {
        @* PWA Install Prompt - Show after successful setup *@
        @if (_profiles.Count > 0 && !_pwaInstallDismissed)
        {
            <PwaInstallPrompt 
                Title="Quick Access to GFC"
                Description="Install the GFC app for instant, secure access from your home screen"
                ButtonText="Install GFC App"
                ShowDismiss="true"
                OnInstalled="HandlePwaInstalled"
                OnDismissed="HandlePwaDismissed" />
        }
        
        <div class="profiles-grid">
            @if (_profiles.Count == 0)
            {
                <div class="empty-state">
                    <i class="bi bi-shield-lock-fill"></i>
                    <h3>No Secure Access Configured</h3>
                    <p class="primary-message">You don't have any VPN profiles associated with your account yet.</p>
                    
                    <div class="access-info-card">
                        <div class="info-section">
                            <i class="bi bi-info-circle-fill text-primary"></i>
                            <div>
                                <h4>First-Time Access</h4>
                                <p>Initial secure access is set up by an administrator through a personalized invite link sent to your email.</p>
                                <p class="mb-0"><strong>Haven't received your invite?</strong> Contact an administrator to request access.</p>
                            </div>
                        </div>
                        
                        <div class="info-section">
                            <i class="bi bi-gear-fill text-secondary"></i>
                            <div>
                                <h4>This Page Is For</h4>
                                <ul class="feature-list">
                                    <li>Managing existing VPN profiles</li>
                                    <li>Downloading configs for additional devices</li>
                                    <li>Rotating security keys</li>
                                    <li>Revoking lost or compromised devices</li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    
                    <div class="help-actions">
                        <a href="mailto:admin@gfc.local" class="btn btn-primary">
                            <i class="bi bi-envelope-fill me-2"></i>
                            Contact Administrator
                        </a>
                    </div>
                </div>
            }
            else
            {
                @foreach (var profile in _profiles)
                {
                    <div class="device-card">
                        <div class="card-status @(profile.LastUsedAt.HasValue && (DateTime.UtcNow - profile.LastUsedAt.Value).TotalDays < 1 ? "status-online" : "status-offline")">
                            @(profile.LastUsedAt.HasValue && (DateTime.UtcNow - profile.LastUsedAt.Value).TotalDays < 1 ? "Connected recently" : "Inactive")
                        </div>
                        <div class="card-header">
                            <div class="device-type-icon">
                                @if (profile.DeviceType?.Contains("iOS") == true || profile.DeviceType?.Contains("Apple") == true)
                                {
                                    <i class="bi bi-apple"></i>
                                }
                                else if (profile.DeviceType?.Contains("Windows") == true)
                                {
                                    <i class="bi bi-windows"></i>
                                }
                                else if (profile.DeviceType?.Contains("Android") == true)
                                {
                                    <i class="bi bi-phone"></i>
                                }
                                else
                                {
                                    <i class="bi bi-pc-display"></i>
                                }
                            </div>
                            <div class="device-info">
                                <h3>@profile.DeviceName</h3>
                                <span class="assigned-ip">@profile.AssignedIP</span>
                            </div>
                        </div>

                        <div class="card-body">
                            <div class="info-row">
                                <span class="label">Public Key</span>
                                <span class="value code">@TruncateKey(profile.PublicKey)</span>
                            </div>
                            <div class="info-row">
                                <span class="label">Created</span>
                                <span class="value">@profile.CreatedAt.ToLocalTime().ToString("MMM dd, yyyy")</span>
                            </div>
                            <div class="info-row">
                                <span class="label">Last Seen</span>
                                <span class="value">@(profile.LastUsedAt?.ToLocalTime().ToString("g") ?? "Never")</span>
                            </div>
                        </div>

                        <div class="card-actions">
                            <div class="dropdown-group">
                                <button class="btn btn-download" @onclick="() => DownloadConfig(profile)">
                                    <i class="bi bi-download"></i> Download Config
                                </button>
                                <div class="action-menu">
                                    <button class="btn btn-icon" title="Rotate Keys" @onclick="() => ConfirmRotateKeys(profile)">
                                        <i class="bi bi-arrow-repeat"></i>
                                    </button>
                                    <button class="btn btn-icon btn-danger" title="Revoke Device" @onclick="() => ConfirmRevoke(profile)">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                }
                
                @* Phase 2: Device Management Help *@
                <div class="management-help-card">
                    <h4><i class="bi bi-question-circle-fill me-2"></i>Need Help?</h4>
                    <div class="help-grid">
                        <div class="help-item">
                            <strong>Add Another Device</strong>
                            <p>Contact an administrator to generate a new invite link for additional devices.</p>
                        </div>
                        <div class="help-item">
                            <strong>Lost Device</strong>
                            <p>Use the revoke button (trash icon) to immediately disable access from a lost or stolen device.</p>
                        </div>
                        <div class="help-item">
                            <strong>Connection Issues</strong>
                            <p>Try rotating your keys or downloading a fresh config file.</p>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

