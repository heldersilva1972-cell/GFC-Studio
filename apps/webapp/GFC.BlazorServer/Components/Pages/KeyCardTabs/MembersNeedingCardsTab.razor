@using GFC.Core.Interfaces
@using GFC.Core.BusinessRules
@using GFC.Core.Models
@using GFC.Core.DTOs
@inject IKeyCardRepository KeyCardRepository
@inject IMemberRepository MemberRepository
@inject IDuesInsightService DuesInsightService
@inject NavigationManager NavManager
@inject ILogger<MembersNeedingCardsTab> Logger
@using GFC.Core.Services
@inject IDuesRepository DuesRepository
@inject IBoardRepository BoardRepository
@inject IDuesYearSettingsRepository DuesYearSettingsRepository
@inject KeyCardService KeyCardService

<div class="pending-assignments-container">
    <!-- No local toggle, using parent filter bar -->

    @if (_loading)
    {
        <div class="loading-state">
            <div class="spinner-modern">
                <div class="spinner-ring"></div>
                <div class="spinner-ring"></div>
                <div class="spinner-ring"></div>
            </div>
            <p>Identifying members...</p>
        </div>
    }
    else if (_membersNeedingCards.Count == 0)
    {
        <div class="empty-state">
            <div class="empty-icon success">
                <i class="bi bi-check-all"></i>
            </div>
            <h3>All Caught Up!</h3>
            <p>All currently eligible members have an active key card assigned.</p>
        </div>
    }
    else
    {
        @if (ViewMode == "grid")
        {
            <div class="members-grid">
                @foreach (var memberId in FilteredMemberIds)
                {
                    var member = _memberLookup.GetValueOrDefault(memberId);
                    if (member == null) continue;

                    <div class="member-need-card fade-in">
                        <div class="member-info">
                            <div class="member-avatar">
                                @GetInitials(member.FullName)
                            </div>
                            <div class="member-details">
                                <div class="member-name">@member.FullName</div>
                                <div class="member-meta">
                                    <span class="badge bg-light text-dark">ID: @member.MemberId</span>
                                    <span class="badge bg-success-subtle text-success">@member.Status</span>
                                    @if (member.IsBoardMember)
                                    {
                                        <span class="badge bg-danger text-white">DIRECTOR</span>
                                    }
                                </div>
                            </div>
                        </div>
                        <div class="member-action">
                            <button class="btn-assign-modern" @onclick="() => AssignTo(member.MemberId)">
                                <i class="bi bi-plus-lg"></i> Assign Card
                            </button>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="table-container fade-in">
                <table class="table table-hover table-modern mb-0">
                    <thead>
                        <tr>
                            <th>Member</th>
                            <th>Status/Badges</th>
                            <th class="text-end">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var memberId in FilteredMemberIds)
                        {
                            var member = _memberLookup.GetValueOrDefault(memberId);
                            if (member == null) continue;
                            <tr>
                                <td>
                                    <div class="d-flex align-items-center gap-3">
                                        <div class="member-avatar-mini">
                                            @GetInitials(member.FullName)
                                        </div>
                                        <div>
                                            <div class="member-name-table">@member.FullName</div>
                                            <div class="member-id-table">ID: @member.MemberId</div>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <div class="d-flex align-items-center gap-2">
                                        <span class="badge bg-success-subtle text-success border border-success border-opacity-25">@member.Status</span>
                                        @if (member.IsBoardMember)
                                        {
                                            <span class="badge bg-danger">DIRECTOR</span>
                                        }
                                    </div>
                                </td>
                                <td class="text-end">
                                    <button class="btn btn-primary btn-sm rounded-pill px-3 fw-bold" @onclick="() => AssignTo(member.MemberId)">
                                        <i class="bi bi-plus-lg"></i> Assign
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    }
</div>

@code {
    [Parameter] public string SearchTerm { get; set; } = string.Empty;
    [Parameter] public string ViewMode { get; set; } = "grid";
    [Parameter] public EventCallback<int> OnAssignMember { get; set; }

    private bool _loading = true;
    private List<int> _membersNeedingCards = new();
    
    private IEnumerable<int> FilteredMemberIds
    {
        get
        {
            if (string.IsNullOrWhiteSpace(SearchTerm)) return _membersNeedingCards;
            var search = SearchTerm.ToLower();
            return _membersNeedingCards.Where(id => 
                _memberLookup.TryGetValue(id, out var m) && 
                (m.FullName.ToLower().Contains(search) || m.MemberId.ToString().Contains(search)));
        }
    }
    private Dictionary<int, DuesListItemDto> _memberLookup = new();

    public async Task RefreshAsync()
    {
        await LoadDataAsync();
        StateHasChanged();
    }

    protected override async Task OnInitializedAsync()
    {
        await LoadDataAsync();
    }


    private async Task LoadDataAsync()
    {
        _loading = true;
        try
        {
            var year = DateTime.Today.Year;
            
            // Parallel Load for Performance (same as CardAssignmentsTab)
            var tasks = new List<Task>();
            
            var t1 = Task.Run(() => MemberRepository.GetAllMembers());
            var t2 = Task.Run(() => KeyCardRepository.GetAll());
            var t3 = Task.Run(() => DuesRepository.GetDuesForYear(year));
            var t4 = Task.Run(() => DuesRepository.GetDuesForYear(year - 1));
            var t5 = Task.Run(() => BoardRepository.GetAssignmentsByYear(year));
            var t6 = Task.Run(() => BoardRepository.GetAssignmentsByYear(year - 1));
            var t7 = Task.Run(() => DuesYearSettingsRepository.GetSettingsForYear(year));

            // Wait for all data
            await Task.WhenAll(t1, t2, t3, t4, t5, t6, t7);

            var membersList = t1.Result;
            var allCards = t2.Result;
            var duesCurrent = t3.Result;
            var duesPrev = t4.Result;
            var boardCurrent = t5.Result.Select(a => a.MemberID).ToHashSet();
            var boardPrev = t6.Result.Select(a => a.MemberID).ToHashSet();
            var settings = t7.Result;

            // Create Maps - Use safe grouping to handle potential multiple records (e.g. payment + waiver)
            var duesCurrentMap = duesCurrent.ToDictionary(d => d.MemberID);
            var duesPrevMap = duesPrev.ToDictionary(d => d.MemberID);
            var cardMemberIds = allCards.Where(c => c.IsActive).Select(c => c.MemberId).ToHashSet();

            _membersNeedingCards = new List<int>();
            _memberLookup = new Dictionary<int, DuesListItemDto>();

            foreach (var member in membersList)
            {
                // Skip if they already have a card
                if (cardMemberIds.Contains(member.MemberID)) continue;

                // Check Eligibility
                bool currentSatisfied = boardCurrent.Contains(member.MemberID) || 
                                       MemberStatusHelper.IsNewlyAccepted(member, year) ||
                                       (duesCurrentMap.TryGetValue(member.MemberID, out var dc) && KeyCardService.IsDuesSatisfied(dc.PaymentType, dc.PaidDate));
                bool prevSatisfied = boardPrev.Contains(member.MemberID) || (duesPrevMap.TryGetValue(member.MemberID, out var dp) && KeyCardService.IsDuesSatisfied(dp.PaymentType, dp.PaidDate));
                
                var eligibility = KeyCardService.GetEligibilityBulk(member, year, settings, currentSatisfied, prevSatisfied);

                if (eligibility.Eligible)
                {
                    _membersNeedingCards.Add(member.MemberID);
                    
                    // Parse Enum safely
                    GFC.Core.Enums.MemberStatus memberStatusEnum = GFC.Core.Enums.MemberStatus.Unknown;
                    if (Enum.TryParse<GFC.Core.Enums.MemberStatus>(member.Status, true, out var parsed))
                    {
                        memberStatusEnum = parsed;
                    }
                    
                    // Determine Waiver Status
                    duesCurrentMap.TryGetValue(member.MemberID, out var duesCurrentRecord);
                    bool isWaived = duesCurrentRecord != null && string.Equals(duesCurrentRecord.PaymentType, "WAIVED", StringComparison.OrdinalIgnoreCase);
                    string? waiverReason = isWaived ? duesCurrentRecord?.Notes : null;

                    // Construct DuesListItemDto (Positional Record)
                    _memberLookup[member.MemberID] = new DuesListItemDto(
                        member.MemberID,
                        $"{member.LastName}, {member.FirstName}", // FullName
                        memberStatusEnum,                         // Status
                        year,                                     // Year
                        null,                                     // Amount
                        null,                                     // PaidDate
                        currentSatisfied ? "Paid" : "",           // PaymentType
                        0,                                        // MonthsOverdue
                        currentSatisfied,                         // Satisfied
                        isWaived,                                 // IsWaived
                        waiverReason,                             // WaiverReason
                        string.Empty,                             // Notes
                        boardCurrent.Contains(member.MemberID)    // IsBoardMember
                    );
                }
            }
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error loading members needing cards");
        }
        finally
        {
            _loading = false;
        }
    }

    private async Task AssignTo(int memberId)
    {
        if (OnAssignMember.HasDelegate)
        {
            await OnAssignMember.InvokeAsync(memberId);
        }
        else
        {
            // Fallback to URL method
            NavManager.NavigateTo($"/keycards?assignTo={memberId}");
        }
    }

    private string GetInitials(string name)
    {
        if (string.IsNullOrEmpty(name)) return "?";
        var parts = name.Split(' ', StringSplitOptions.RemoveEmptyEntries);
        if (parts.Length == 1) return parts[0][0].ToString().ToUpper();
        return $"{parts[0][0]}{parts[^1][0]}".ToUpper();
    }
}

