@using GFC.Core.Interfaces
@using GFC.Core.Models
@using GFC.Core.DTOs
@inject IKeyCardRepository KeyCardRepository
@inject IMemberRepository MemberRepository
@inject IDuesInsightService DuesInsightService
@inject NavigationManager NavManager
@inject ILogger<MembersNeedingCardsTab> Logger

<div class="pending-assignments-container">
    <div class="d-flex align-items-center justify-content-between mb-4">
        <div class="info-alert mb-0">
            <i class="bi bi-info-circle"></i>
            <div>
                <strong>Members Needing Cards</strong>
                <p class="mb-0 small">Paid for @DateTime.Today.Year but no active key card.</p>
            </div>
        </div>
        
        <div class="view-toggle">
            <button class="btn-toggle @(_viewMode == "grid" ? "active" : "")" @onclick='() => SetViewMode("grid")' title="Grid View">
                <i class="bi bi-grid-3x3-gap-fill"></i>
            </button>
            <button class="btn-toggle @(_viewMode == "list" ? "active" : "")" @onclick='() => SetViewMode("list")' title="List View">
                <i class="bi bi-list-ul"></i>
            </button>
        </div>
    </div>

    @if (_loading)
    {
        <div class="loading-state">
            <div class="spinner-modern">
                <div class="spinner-ring"></div>
                <div class="spinner-ring"></div>
                <div class="spinner-ring"></div>
            </div>
            <p>Identifying members...</p>
        </div>
    }
    else if (_membersNeedingCards.Count == 0)
    {
        <div class="empty-state">
            <div class="empty-icon success">
                <i class="bi bi-check-all"></i>
            </div>
            <h3>All Caught Up!</h3>
            <p>All currently paid members have an active key card.</p>
        </div>
    }
    else
    {
        @if (_viewMode == "grid")
        {
            <div class="members-grid">
                @foreach (var memberId in _membersNeedingCards)
                {
                    var member = _memberLookup.GetValueOrDefault(memberId);
                    if (member == null) continue;

                    <div class="member-need-card fade-in">
                        <div class="member-info">
                            <div class="member-avatar">
                                @GetInitials(member.FullName)
                            </div>
                            <div class="member-details">
                                <div class="member-name">@member.FullName</div>
                                <div class="member-meta">
                                    <span class="badge bg-light text-dark">ID: @member.MemberId</span>
                                    <span class="badge bg-success-subtle text-success">@member.Status</span>
                                    @if (member.IsBoardMember)
                                    {
                                        <span class="badge bg-danger text-white">DIRECTOR</span>
                                    }
                                </div>
                            </div>
                        </div>
                        <div class="member-action">
                            <button class="btn-assign-modern" @onclick="() => AssignTo(member.MemberId)">
                                <i class="bi bi-plus-lg"></i> Assign Card
                            </button>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="table-container fade-in">
                <table class="table table-hover table-modern mb-0">
                    <thead>
                        <tr>
                            <th>Member</th>
                            <th>Status/Badges</th>
                            <th class="text-end">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var memberId in _membersNeedingCards)
                        {
                            var member = _memberLookup.GetValueOrDefault(memberId);
                            if (member == null) continue;
                            <tr>
                                <td>
                                    <div class="d-flex align-items-center gap-3">
                                        <div class="member-avatar-mini">
                                            @GetInitials(member.FullName)
                                        </div>
                                        <div>
                                            <div class="member-name-table">@member.FullName</div>
                                            <div class="member-id-table">ID: @member.MemberId</div>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <div class="d-flex align-items-center gap-2">
                                        <span class="badge bg-success-subtle text-success border border-success border-opacity-25">@member.Status</span>
                                        @if (member.IsBoardMember)
                                        {
                                            <span class="badge bg-danger">DIRECTOR</span>
                                        }
                                    </div>
                                </td>
                                <td class="text-end">
                                    <button class="btn btn-primary btn-sm rounded-pill px-3 fw-bold" @onclick="() => AssignTo(member.MemberId)">
                                        <i class="bi bi-plus-lg"></i> Assign
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    }
</div>

@code {
    [Parameter] public EventCallback<int> OnAssignMember { get; set; }

    private bool _loading = true;
    private string _viewMode = "grid";
    private List<int> _membersNeedingCards = new();
    private Dictionary<int, DuesListItemDto> _memberLookup = new();

    private void SetViewMode(string mode)
    {
        _viewMode = mode;
        StateHasChanged();
    }

    public async Task RefreshAsync()
    {
        await LoadDataAsync();
        StateHasChanged();
    }

    protected override async Task OnInitializedAsync()
    {
        await LoadDataAsync();
    }

    private async Task LoadDataAsync()
    {
        _loading = true;
        try
        {
            var year = DateTime.Today.Year;
            // 1. Get all paid members
            var paidMembers = await DuesInsightService.GetDuesAsync(year, true);
            // 2. Get waived members (Exempt/Life/Board)
            var waivedMembers = await DuesInsightService.GetDuesAsync(year, false);
            var exemptMembers = waivedMembers.Where(m => m.IsWaived).ToList();

            // 3. Get all active cards
            var activeCards = (await Task.Run(() => KeyCardRepository.GetAll()))
                                .Where(c => c.IsActive)
                                .Select(c => c.MemberId)
                                .ToHashSet();

            // 4. Combine Paid, Exempt, and Directors (ensure no duplicates)
            var eligibleMembersList = paidMembers
                                        .Concat(waivedMembers.Where(m => m.IsWaived || m.IsBoardMember))
                                        .ToList();
            _memberLookup = new Dictionary<int, DuesListItemDto>();
            foreach (var m in eligibleMembersList)
            {
                // Ensure directors take precedence if they show up in multiple lists
                if (!_memberLookup.ContainsKey(m.MemberId) || m.IsBoardMember)
                {
                    _memberLookup[m.MemberId] = m;
                }
            }
            
            var uniqueEligibleIds = _memberLookup.Keys.ToList();

            // 5. Filter for those without cards
            _membersNeedingCards = uniqueEligibleIds
                                    .Where(id => !activeCards.Contains(id))
                                    .ToList();
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error loading members needing cards");
        }
        finally
        {
            _loading = false;
        }
    }

    private async Task AssignTo(int memberId)
    {
        if (OnAssignMember.HasDelegate)
        {
            await OnAssignMember.InvokeAsync(memberId);
        }
        else
        {
            // Fallback to URL method
            NavManager.NavigateTo($"/keycards?assignTo={memberId}");
        }
    }

    private string GetInitials(string name)
    {
        if (string.IsNullOrEmpty(name)) return "?";
        var parts = name.Split(' ', StringSplitOptions.RemoveEmptyEntries);
        if (parts.Length == 1) return parts[0][0].ToString().ToUpper();
        return $"{parts[0][0]}{parts[^1][0]}".ToUpper();
    }
}

