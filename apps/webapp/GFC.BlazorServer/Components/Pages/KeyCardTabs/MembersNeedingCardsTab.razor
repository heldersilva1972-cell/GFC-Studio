@using GFC.Core.Interfaces
@using GFC.Core.BusinessRules
@using GFC.Core.Models
@using GFC.Core.DTOs
@inject IKeyCardRepository KeyCardRepository
@inject IMemberRepository MemberRepository
@inject IDuesInsightService DuesInsightService
@inject NavigationManager NavManager
@inject ILogger<MembersNeedingCardsTab> Logger
@using GFC.Core.Services
@inject IKeyCardDashboardRepository KeyCardDashboardRepository
@inject IDuesRepository DuesRepository
@inject IBoardRepository BoardRepository
@inject IDuesYearSettingsRepository DuesYearSettingsRepository
@inject KeyCardService KeyCardService

<div class="pending-assignments-container">
    <!-- No local toggle, using parent filter bar -->

    @if (_loading)
    {
        <div class="loading-state">
            <div class="spinner-modern">
                <div class="spinner-ring"></div>
                <div class="spinner-ring"></div>
                <div class="spinner-ring"></div>
            </div>
            <p>Identifying members...</p>
        </div>
    }
    else if (_membersNeedingCards.Count == 0)
    {
        <div class="empty-state">
            <div class="empty-icon success">
                <i class="bi bi-check-all"></i>
            </div>
            <h3>All Caught Up!</h3>
            <p>All currently eligible members have an active key card assigned.</p>
        </div>
    }
    else
    {
        @if (ViewMode == "grid")
        {
            <div class="members-grid">
                @foreach (var memberId in FilteredMemberIds)
                {
                    var member = _memberLookup.GetValueOrDefault(memberId);
                    if (member == null) continue;

                    <div class="member-need-card fade-in">
                        <div class="member-info">
                            <div class="member-avatar">
                                @GetInitials(member.FullName)
                            </div>
                            <div class="member-details">
                                <div class="member-name">@member.FullName</div>
                                <div class="member-meta">
                                    <span class="badge bg-light text-dark">ID: @member.MemberId</span>
                                    <span class="badge bg-success-subtle text-success">
                                        @member.Status @(member.Status == GFC.Core.Enums.MemberStatus.Regular && member.IsNonPortugueseOrigin ? "(NP)" : "")
                                    </span>
                                    @if (member.IsBoardMember)
                                    {
                                        <span class="badge bg-danger text-white">DIRECTOR</span>
                                    }
                                </div>
                            </div>
                        </div>
                        <div class="member-action">
                            <button class="btn-assign-modern" @onclick="() => AssignTo(member.MemberId)">
                                <i class="bi bi-plus-lg"></i> Assign Card
                            </button>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="table-container fade-in">
                <table class="table table-hover table-modern mb-0">
                    <thead>
                        <tr>
                            <th>Member</th>
                            <th>Status/Badges</th>
                            <th class="text-end">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var memberId in FilteredMemberIds)
                        {
                            var member = _memberLookup.GetValueOrDefault(memberId);
                            if (member == null) continue;
                            <tr>
                                <td>
                                    <div class="d-flex align-items-center gap-3">
                                        <div class="member-avatar-mini">
                                            @GetInitials(member.FullName)
                                        </div>
                                        <div>
                                            <div class="member-name-table">@member.FullName</div>
                                            <div class="member-id-table">ID: @member.MemberId</div>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <div class="d-flex align-items-center gap-2">
                                        <span class="badge bg-success-subtle text-success border border-success border-opacity-25">
                                            @member.Status @(member.Status == GFC.Core.Enums.MemberStatus.Regular && member.IsNonPortugueseOrigin ? "(NP)" : "")
                                        </span>
                                        @if (member.IsBoardMember)
                                        {
                                            <span class="badge bg-danger">DIRECTOR</span>
                                        }
                                    </div>
                                </td>
                                <td class="text-end">
                                    <button class="btn btn-primary btn-sm rounded-pill px-3 fw-bold" @onclick="() => AssignTo(member.MemberId)">
                                        <i class="bi bi-plus-lg"></i> Assign
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    }
</div>

@code {
    [Parameter] public string SearchTerm { get; set; } = string.Empty;
    [Parameter] public string ViewMode { get; set; } = "grid";
    [Parameter] public EventCallback<int> OnAssignMember { get; set; }

    private bool _loading = true;
    private List<int> _membersNeedingCards = new();
    
    private IEnumerable<int> FilteredMemberIds
    {
        get
        {
            if (string.IsNullOrWhiteSpace(SearchTerm)) return _membersNeedingCards;
            var search = SearchTerm.ToLower();
            return _membersNeedingCards.Where(id => 
                _memberLookup.TryGetValue(id, out var m) && 
                (m.FullName.ToLower().Contains(search) || m.MemberId.ToString().Contains(search)));
        }
    }
    private Dictionary<int, DuesListItemDto> _memberLookup = new();

    public async Task RefreshAsync()
    {
        await LoadDataAsync();
        StateHasChanged();
    }

    protected override async Task OnInitializedAsync()
    {
        await LoadDataAsync();
    }


    private async Task LoadDataAsync()
    {
        _loading = true;
        try
        {
            var year = DateTime.Today.Year;
            
            // 1. Fetch data from the robust KeyCardDashboardRepository
            // This repository handles the merged Waiver tables and missing legacy table gracefully
            var dashboardRows = await Task.Run(() => KeyCardDashboardRepository.GetMembersForYear(year));
            
            Logger.LogInformation($"LoadDataAsync: Retrieved {dashboardRows.Count} rows from KeyCardDashboardRepository for year {year}");
            
            // 2. Fetch Grace Settings
            var settings = await Task.Run(() => DuesYearSettingsRepository.GetSettingsForYear(year));
            var graceDate = settings?.GraceEndDate?.Date;

            _membersNeedingCards = new List<int>();
            _memberLookup = new Dictionary<int, DuesListItemDto>();

            foreach (var row in dashboardRows)
            {
                // DIAGNOSTIC: Log member 3 specifically
                if (row.MemberId == 3)
                {
                    Logger.LogWarning($"Member 3 (Fialho): Status={row.MemberStatus}, PaymentType={row.DuesPaymentType}, AssignmentId={row.AssignmentId}, KeyCardId={row.KeyCardId}");
                }
                
                // Skip logic: If they have an assignment (AssignmentId is not null), they don't need a card
                if (row.AssignmentId.HasValue)
                {
                    if (row.MemberId == 3) Logger.LogWarning($"Member 3 SKIPPED: Has AssignmentId={row.AssignmentId}");
                    continue;
                }

                // Evaluate Eligibility using the centralized KeyCardService logic
                var eligibility = KeyCardService.EvaluateEligibilityForRow(row, year, graceDate);

                if (row.MemberId == 3)
                {
                    Logger.LogWarning($"Member 3 Eligibility: Eligible={eligibility.Eligible}, StatusAllowed={eligibility.StatusAllowed}, CurrentYearSatisfied={eligibility.CurrentYearSatisfied}, PreviousYearSatisfied={eligibility.PreviousYearSatisfied}, GracePeriodActive={eligibility.GracePeriodActive}");
                }

                if (eligibility.Eligible)
                {
                    _membersNeedingCards.Add(row.MemberId);
                    
                    // Parse Enum safely
                    GFC.Core.Enums.MemberStatus memberStatusEnum = GFC.Core.Enums.MemberStatus.Unknown;
                    if (Enum.TryParse<GFC.Core.Enums.MemberStatus>(row.MemberStatus, true, out var parsed))
                    {
                        memberStatusEnum = parsed;
                    }
                    
                    // Determine Waiver Status from the dashboard row directly
                    bool isWaived = string.Equals(row.DuesPaymentType, "WAIVED", StringComparison.OrdinalIgnoreCase);

                    // Map to DuesListItemDto (using data from the Row)
                    _memberLookup[row.MemberId] = new DuesListItemDto(
                        row.MemberId,
                        row.DisplayName,
                        memberStatusEnum,
                        year,
                        null, // Amount
                        row.DuesPaidDate,
                        row.DuesPaymentType ?? "",
                        0, // MonthsOverdue (Could calculate but not critical for this view)
                        eligibility.CurrentYearSatisfied,
                        isWaived,
                        isWaived ? "Waived" : null,
                        string.Empty,
                        false, // IsBoardMember (dashboard row optimizes this away, logic handled in Eligibility)
                        eligibility.GracePeriodActive,
                        row.IsNonPortugueseOrigin
                    );
                    
                    if (row.MemberId == 3) Logger.LogWarning($"Member 3 ADDED to needing cards list");
                }
                else if (row.MemberId == 3)
                {
                    Logger.LogWarning($"Member 3 NOT ELIGIBLE - excluded from needing cards list");
                }
            }
            
            Logger.LogInformation($"LoadDataAsync: Final count of members needing cards: {_membersNeedingCards.Count}");
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error loading members needing cards");
        }
        finally
        {
            _loading = false;
        }
    }

    private async Task AssignTo(int memberId)
    {
        if (OnAssignMember.HasDelegate)
        {
            await OnAssignMember.InvokeAsync(memberId);
        }
        else
        {
            // Fallback to URL method
            NavManager.NavigateTo($"/keycards?assignTo={memberId}");
        }
    }

    private string GetInitials(string name)
    {
        if (string.IsNullOrEmpty(name)) return "?";
        var parts = name.Split(' ', StringSplitOptions.RemoveEmptyEntries);
        if (parts.Length == 1) return parts[0][0].ToString().ToUpper();
        return $"{parts[0][0]}{parts[^1][0]}".ToUpper();
    }
}

