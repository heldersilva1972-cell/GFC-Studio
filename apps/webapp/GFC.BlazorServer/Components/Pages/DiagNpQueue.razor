@page "/diag-np-queue"
@using GFC.Core.Interfaces
@using GFC.Core.Models
@inject IMemberRepository MemberRepository

<h3>NP Queue Diagnostics</h3>

@if (_items == null)
{
    <p>Loading...</p>
}
else
{
    <div class="alert alert-info">
        Found @_items.Count members in GetNonPortugueseGuestQueue.
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>MemberID</th>
                <th>Name</th>
                <th>AcceptedDate (Nullable)</th>
                <th>AcceptedDate.HasValue</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in _items)
            {
                <tr>
                    <td>@item.MemberID</td>
                    <td>@item.LastName, @item.FirstName</td>
                    <td>@(item.AcceptedDate?.ToString("yyyy-MM-dd HH:mm:ss") ?? "NULL")</td>
                    <td>@item.AcceptedDate.HasValue</td>
                    <td>GUEST</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private List<MemberQueueItem>? _items;

    protected override void OnInitialized()
    {
        _items = MemberRepository.GetNonPortugueseGuestQueue();
    }
}
