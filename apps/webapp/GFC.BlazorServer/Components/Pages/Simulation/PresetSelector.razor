@using GFC.BlazorServer.Data.Entities
@using GFC.BlazorServer.Services.Simulation
@inject SimulationPresetService PresetService
@inject ILogger<PresetSelector> Logger

<div class="card shadow-sm">
    <div class="card-header bg-light">
        <h5 class="card-title mb-0">
            <i class="bi bi-collection"></i> Simulation Presets
        </h5>
    </div>
    <div class="card-body">
        @if (!Controllers.Any())
        {
            <div class="text-center text-muted py-3">
                <i class="bi bi-info-circle"></i>
                <div class="small mt-2">No controllers available</div>
            </div>
        }
        else
        {
            <!-- Controller Selection -->
            <div class="mb-3">
                <label class="form-label small">Select Controller</label>
                <select class="form-select form-select-sm" @bind="_selectedControllerId">
                    <option value="0">Choose a controller...</option>
                    @foreach (var controller in Controllers)
                    {
                        <option value="@controller.Id">@controller.Name</option>
                    }
                </select>
            </div>

            <!-- Preset Cards -->
            <div class="preset-grid">
                @foreach (var preset in _presets)
                {
                    <div class="preset-card @(_activePresetKey == preset.Key ? "preset-card-active" : "")"
                         @onclick="@(() => ApplyPreset(preset.Key))">
                        <div class="preset-card-header">
                            <div class="preset-card-icon">
                                <i class="bi bi-@GetPresetIcon(preset.Key)"></i>
                            </div>
                            <div class="preset-card-title">@preset.Name</div>
                        </div>
                        <div class="preset-card-description">
                            @preset.Description
                        </div>
                        @if (_activePresetKey == preset.Key)
                        {
                            <div class="preset-card-badge">
                                <span class="badge bg-success">Active</span>
                            </div>
                        }
                    </div>
                }
            </div>

            <!-- Stop Scenario Button -->
            @if (!string.IsNullOrEmpty(_activePresetKey))
            {
                <div class="d-grid mt-3">
                    <button class="btn btn-sm btn-outline-danger" 
                            @onclick="StopScenario"
                            disabled="@IsProcessing">
                        <i class="bi bi-stop-circle"></i> Stop Active Scenario
                    </button>
                </div>
            }

            <!-- Status Message -->
            @if (!string.IsNullOrEmpty(_statusMessage))
            {
                <div class="alert alert-@_statusClass mt-3 mb-0 small">
                    @_statusMessage
                </div>
            }
        }
    </div>
</div>

<style>
    .preset-grid {
        display: grid;
        grid-template-columns: 1fr;
        gap: 0.75rem;
    }

    .preset-card {
        position: relative;
        border: 2px solid #dee2e6;
        border-radius: 0.5rem;
        padding: 1rem;
        cursor: pointer;
        transition: all 0.2s ease;
        background: #fff;
    }

    .preset-card:hover {
        border-color: #0d6efd;
        box-shadow: 0 0.25rem 0.5rem rgba(0,0,0,0.1);
        transform: translateY(-2px);
    }

    .preset-card-active {
        border-color: #28a745;
        background: #f0fff4;
    }

    .preset-card-header {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        margin-bottom: 0.5rem;
    }

    .preset-card-icon {
        width: 36px;
        height: 36px;
        border-radius: 0.5rem;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-size: 1.25rem;
    }

    .preset-card-title {
        font-weight: 600;
        font-size: 0.95rem;
        color: #212529;
    }

    .preset-card-description {
        font-size: 0.85rem;
        color: #6c757d;
        line-height: 1.4;
    }

    .preset-card-badge {
        position: absolute;
        top: 0.5rem;
        right: 0.5rem;
    }
</style>

@code {
    [Parameter] public List<ControllerDevice> Controllers { get; set; } = new();
    [Parameter] public bool IsProcessing { get; set; }
    [Parameter] public EventCallback<string> OnPresetApplied { get; set; }
    [Parameter] public EventCallback OnScenarioStopped { get; set; }

    private List<SimulationPreset> _presets = new();
    private int _selectedControllerId = 0;
    private string _activePresetKey = string.Empty;
    private string _statusMessage = string.Empty;
    private string _statusClass = "info";

    protected override void OnInitialized()
    {
        _presets = PresetService.GetPresets().ToList();
    }

    private async Task ApplyPreset(string presetKey)
    {
        if (_selectedControllerId == 0)
        {
            ShowStatus("Please select a controller first", "warning");
            return;
        }

        try
        {
            await PresetService.ApplyPresetAsync(_selectedControllerId, presetKey);
            _activePresetKey = presetKey;
            
            var presetName = _presets.FirstOrDefault(p => p.Key == presetKey)?.Name ?? presetKey;
            ShowStatus($"âœ“ Applied preset: {presetName}", "success");
            
            await OnPresetApplied.InvokeAsync(presetKey);
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Failed to apply preset {PresetKey}", presetKey);
            ShowStatus($"Failed to apply preset: {ex.Message}", "danger");
        }
    }

    private async Task StopScenario()
    {
        try
        {
            await PresetService.StopCurrentScenarioAsync();
            _activePresetKey = string.Empty;
            ShowStatus("Scenario stopped", "info");
            
            await OnScenarioStopped.InvokeAsync();
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Failed to stop scenario");
            ShowStatus($"Failed to stop scenario: {ex.Message}", "danger");
        }
    }

    private void ShowStatus(string message, string alertClass)
    {
        _statusMessage = message;
        _statusClass = alertClass;
        StateHasChanged();
        
        // Auto-clear after 5 seconds
        _ = Task.Run(async () =>
        {
            await Task.Delay(5000);
            await InvokeAsync(() =>
            {
                _statusMessage = string.Empty;
                StateHasChanged();
            });
        });
    }

    private string GetPresetIcon(string presetKey)
    {
        return presetKey switch
        {
            "quiet-weekday" => "moon-stars",
            "busy-friday-night" => "lightning-charge",
            "door-held-open" => "door-open",
            _ => "gear"
        };
    }
}
