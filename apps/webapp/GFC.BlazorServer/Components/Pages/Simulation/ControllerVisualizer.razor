@using GFC.BlazorServer.Data.Entities
@using GFC.BlazorServer.Services.Controllers

<div class="card shadow-sm">
    <div class="card-header bg-light">
        <h5 class="card-title mb-0">
            <i class="bi bi-cpu"></i> Controller State
        </h5>
    </div>
    <div class="card-body">
        <select class="form-select mb-3" @bind="SelectedControllerId" @bind:after="OnControllerChanged">
            <option value="0">Select Controller to Inspect...</option>
            @foreach (var controller in Controllers)
            {
                <option value="@controller.Id">@controller.Name</option>
            }
        </select>

        @if (SelectedController != null && DoorStates.Any())
        {
            <!-- Visual Door Tiles -->
            <div class="door-grid mb-3">
                @foreach (var doorState in DoorStates)
                {
                    <div class="door-tile @GetDoorStateClass(doorState)" 
                         title="@doorState.DoorName">
                        <div class="door-tile-header">
                            <div class="door-tile-name">@doorState.DoorName</div>
                            <div class="door-tile-index">D@doorState.DoorIndex</div>
                        </div>
                        <div class="door-tile-body">
                            <!-- Lock LED -->
                            <div class="led-indicator">
                                <div class="led @(doorState.IsLocked ? "led-red" : "led-green")"></div>
                                <div class="led-label">@(doorState.IsLocked ? "Locked" : "Unlocked")</div>
                            </div>
                            <!-- Door State LED -->
                            <div class="led-indicator">
                                <div class="led @(doorState.IsDoorOpen ? "led-yellow" : "led-gray")"></div>
                                <div class="led-label">@(doorState.IsDoorOpen ? "Open" : "Closed")</div>
                            </div>
                        </div>
                    </div>
                }
            </div>

            <!-- Reset Button -->
            <div class="d-grid">
                <button class="btn btn-sm btn-outline-danger" 
                        @onclick="OnResetController" 
                        disabled="@IsProcessing">
                    <i class="bi bi-trash"></i> Reset This Controller
                </button>
            </div>
        }
        else if (SelectedController != null)
        {
            <div class="text-center text-muted py-3">
                <i class="bi bi-info-circle"></i>
                <div class="small mt-2">No door states available</div>
            </div>
        }
    </div>
</div>

<style>
    .door-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(140px, 1fr));
        gap: 0.75rem;
    }

    .door-tile {
        border: 2px solid #dee2e6;
        border-radius: 0.5rem;
        padding: 0.75rem;
        background: #fff;
        transition: all 0.2s ease;
    }

    .door-tile:hover {
        border-color: #0d6efd;
        box-shadow: 0 0.25rem 0.5rem rgba(0,0,0,0.1);
    }

    .door-tile-open {
        border-color: #ffc107;
        background: #fff9e6;
    }

    .door-tile-locked {
        border-color: #dc3545;
        background: #fff5f5;
    }

    .door-tile-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 0.5rem;
        padding-bottom: 0.5rem;
        border-bottom: 1px solid #e9ecef;
    }

    .door-tile-name {
        font-weight: 600;
        font-size: 0.85rem;
        color: #212529;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    .door-tile-index {
        font-size: 0.75rem;
        color: #6c757d;
        font-family: monospace;
    }

    .door-tile-body {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
    }

    .led-indicator {
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .led {
        width: 12px;
        height: 12px;
        border-radius: 50%;
        box-shadow: 0 0 4px rgba(0,0,0,0.2);
        flex-shrink: 0;
    }

    .led-green {
        background: #28a745;
        box-shadow: 0 0 8px rgba(40, 167, 69, 0.6);
    }

    .led-red {
        background: #dc3545;
        box-shadow: 0 0 8px rgba(220, 53, 69, 0.6);
    }

    .led-yellow {
        background: #ffc107;
        box-shadow: 0 0 8px rgba(255, 193, 7, 0.6);
    }

    .led-gray {
        background: #6c757d;
        box-shadow: 0 0 4px rgba(108, 117, 125, 0.3);
    }

    .led-label {
        font-size: 0.75rem;
        color: #495057;
        font-weight: 500;
    }
</style>

@code {
    [Parameter] public List<ControllerDevice> Controllers { get; set; } = new();
    [Parameter] public List<DoorStateDto> DoorStates { get; set; } = new();
    [Parameter] public int SelectedControllerId { get; set; }
    [Parameter] public EventCallback<int> SelectedControllerIdChanged { get; set; }
    [Parameter] public EventCallback OnResetController { get; set; }
    [Parameter] public bool IsProcessing { get; set; }

    private ControllerDevice? SelectedController => 
        Controllers.FirstOrDefault(c => c.Id == SelectedControllerId);

    private async Task OnControllerChanged()
    {
        await SelectedControllerIdChanged.InvokeAsync(SelectedControllerId);
    }

    private string GetDoorStateClass(DoorStateDto doorState)
    {
        if (doorState.IsDoorOpen) return "door-tile-open";
        if (doorState.IsLocked) return "door-tile-locked";
        return string.Empty;
    }

    public class DoorStateDto
    {
        public int DoorIndex { get; set; }
        public string DoorName { get; set; } = string.Empty;
        public bool IsLocked { get; set; }
        public bool IsDoorOpen { get; set; }
    }
}
