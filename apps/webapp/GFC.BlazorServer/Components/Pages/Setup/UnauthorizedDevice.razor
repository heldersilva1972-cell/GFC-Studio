@page "/setup/request-access"
@layout FullPageLayout
@inject NavigationManager Navigation

<PageTitle>Security Verification Required - GFC</PageTitle>

<div class="d-flex min-vh-100 flex-column justify-content-center align-items-center bg-dark text-white">
    <div class="card bg-secondary shadow-lg border-0 p-5 text-center" style="max-width: 500px; width: 100%;">
        <div class="mb-4">
            <i class="bi bi-shield-lock-fill text-warning" style="font-size: 4rem;"></i>
        </div>
        <h2 class="mb-3">Device Not Authorized</h2>
        <p class="lead opacity-75 mb-4">
            For security, the GFC Web App is restricted to authorized devices only.
        </p>
        
        <div class="alert alert-dark text-start border-warning mb-4">
            <h6 class="fw-bold"><i class="bi bi-info-circle me-2"></i>What do I do?</h6>
            <ul class="mb-0 small">
                <li>Contact the system administrator for an <strong>Invite Link</strong>.</li>
                <li>Open the link on this device to grant access.</li>
                <li>Once authorized, you will see the login screen.</li>
            </ul>
        </div>
        
        <div class="text-muted small">
            System ID: @Environment.MachineName
        </div>
    </div>
</div>

@code {
    // This page acts as a "Privacy Screen" for anyone finding the URL on the public internet.
}
