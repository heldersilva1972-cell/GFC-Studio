@page "/setup/activate"
@using GFC.BlazorServer.Services
@inject IDeviceTrustService DeviceTrustService
@inject NavigationManager Navigation
@inject IJSRuntime JS
@inject CustomAuthenticationStateProvider AuthStateProvider
@inject ILogger<Activate> Logger

<div class="activation-container">
    @if (_activating)
    {
        <div class="text-center">
            <div class="spinner-border text-primary mb-3" role="status">
                <span class="visually-hidden">Activating...</span>
            </div>
            <h3>Activating Your Device...</h3>
            <p>Please wait while we set up secure access.</p>
        </div>
    }
    else if (_success)
    {
        <div class="alert alert-success shadow-sm">
            <i class="bi bi-check-circle-fill me-2"></i>
            <strong>Device Activated Successfully!</strong>
        </div>
        <p class="lead">Your device has been approved and securely registered.</p>
        
        <div class="mt-4 p-4 bg-white rounded-lg shadow-sm border" style="border-left: 5px solid #0d6efd !important;">
            <h5 class="text-primary"><i class="bi bi-shield-lock me-2"></i>Finalizing Setup</h5>
            <div class="d-flex align-items-center justify-content-center mt-3">
                <div class="spinner-border text-primary spinner-border-sm me-2" role="status"></div>
                <span class="text-muted">Securing your session and taking you to setup...</span>
            </div>
            <div class="mt-4">
                <a href="/" class="btn btn-primary btn-lg shadow-sm w-100">
                    <i class="bi bi-arrow-right-circle me-2"></i>Continue to Dashboard
                </a>
            </div>
        </div>
        <p class="mt-4 small text-muted">Redirecting automatically in a moment...</p>
    }
    else if (!string.IsNullOrEmpty(_errorMessage))
    {
        <div class="alert alert-danger shadow-sm">
            <i class="bi bi-exclamation-triangle-fill me-2"></i>
            <strong>Activation Failed</strong>
        </div>
        <p>@_errorMessage</p>
        <p class="text-muted">Please contact your administrator for a new invite link.</p>
    }
</div>

<style>
    .activation-container {
        max-width: 500px;
        margin: 100px auto;
        padding: 2rem;
        text-align: center;
    }
</style>

@code {
    private bool _activating = true;
    private bool _success = false;
    private string _errorMessage = "";

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await ActivateDevice();
        }
    }

    private async Task ActivateDevice()
    {
        try
        {
            // Get token from query string
            var uri = new Uri(Navigation.Uri);
            var query = System.Web.HttpUtility.ParseQueryString(uri.Query);
            var token = query["token"];

            if (string.IsNullOrEmpty(token))
            {
                _errorMessage = "Invalid activation link. No token provided.";
                _activating = false;
                StateHasChanged();
                return;
            }

            // 1. Set the cookie via global JavaScript helper (365 days) - Essential for Middleware
            await JS.InvokeVoidAsync("window.setCookie", "GFC_DeviceTrustToken", token, 365);
            
            // 2. Set in localStorage for App.razor auto-login resilience
            await JS.InvokeVoidAsync("localStorage.setItem", "gfc_device_token", token);

            // 3. Explicitly log the user in immediately
            var loginResult = await AuthStateProvider.LoginWithDeviceTokenAsync(token);
            
            if (loginResult.Success)
            {
                _success = true;
                _activating = false;
                StateHasChanged();

                // Give the browser a moment to ensure cookies and localStorage are written
                await Task.Delay(1000);

                // 4. Check if password setup is required
                var user = AuthStateProvider.GetCurrentUser();
                if (user != null && user.PasswordChangeRequired)
                {
                    // Redirect to password change
                    Navigation.NavigateTo("/changepassword", forceLoad: true);
                }
                else
                {
                    // Redirect to home
                    Navigation.NavigateTo("/", forceLoad: true);
                }
            }
            else
            {
                // Fallback: If immediate login fails (rarity), we still try the standard redirect flow
                // expecting App.razor to pick it up or Middleware to handle it.
                _success = true; 
                _activating = false;
                StateHasChanged();
                await Task.Delay(1500);
                await JS.InvokeVoidAsync("eval", "window.location.href = '/'");
            }
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Activation failure");
            _errorMessage = $"An error occurred during activation: {ex.Message}";
            _activating = false;
            StateHasChanged();
        }
    }
}
