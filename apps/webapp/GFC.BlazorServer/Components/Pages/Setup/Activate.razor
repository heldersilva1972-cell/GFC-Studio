@page "/setup/activate"
@using GFC.BlazorServer.Services
@inject IDeviceTrustService DeviceTrustService
@inject NavigationManager Navigation
@inject IJSRuntime JS

<div class="activation-container">
    @if (_activating)
    {
        <div class="text-center">
            <div class="spinner-border text-primary mb-3" role="status">
                <span class="visually-hidden">Activating...</span>
            </div>
            <h3>Activating Your Device...</h3>
            <p>Please wait while we set up secure access.</p>
        </div>
    }
    else if (_success)
    {
        <div class="alert alert-success">
            <i class="bi bi-check-circle-fill me-2"></i>
            <strong>Device Activated Successfully!</strong>
        </div>
        <h3>You're All Set!</h3>
        <p>Your device has been approved for secure access.</p>
        <p>Redirecting to login page...</p>
    }
    else if (!string.IsNullOrEmpty(_errorMessage))
    {
        <div class="alert alert-danger">
            <i class="bi bi-exclamation-triangle-fill me-2"></i>
            <strong>Activation Failed</strong>
        </div>
        <p>@_errorMessage</p>
        <p>Please contact your administrator for a new invite link.</p>
    }
</div>

<style>
    .activation-container {
        max-width: 500px;
        margin: 100px auto;
        padding: 2rem;
        text-align: center;
    }
</style>

@code {
    private bool _activating = true;
    private bool _success = false;
    private string _errorMessage = "";

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await ActivateDevice();
        }
    }

    private async Task ActivateDevice()
    {
        try
        {
            // Get token from query string
            var uri = new Uri(Navigation.Uri);
            var query = System.Web.HttpUtility.ParseQueryString(uri.Query);
            var token = query["token"];

            if (string.IsNullOrEmpty(token))
            {
                _errorMessage = "Invalid activation link. No token provided.";
                _activating = false;
                StateHasChanged();
                return;
            }

            // Set the cookie via JavaScript
            await JS.InvokeVoidAsync("eval", $"document.cookie = 'GFC_DeviceTrustToken={token}; path=/; max-age=31536000';");

            _success = true;
            _activating = false;
            StateHasChanged();

            // Redirect to login after 2 seconds
            await Task.Delay(2000);
            Navigation.NavigateTo("/login", true);
        }
        catch (Exception ex)
        {
            _errorMessage = $"An error occurred: {ex.Message}";
            _activating = false;
            StateHasChanged();
        }
    }
}
