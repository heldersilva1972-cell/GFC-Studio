@page "/setup/activate"
@using GFC.BlazorServer.Services
@inject IDeviceTrustService DeviceTrustService
@inject NavigationManager Navigation
@inject IJSRuntime JS
@inject CustomAuthenticationStateProvider AuthStateProvider
@inject ILogger<Activate> Logger

<div class="activation-container">
    @if (_activating)
    {
        <div class="text-center">
            <div class="spinner-border text-primary mb-3" role="status">
                <span class="visually-hidden">Activating...</span>
            </div>
            <h3>Activating Your Device...</h3>
            <p>Please wait while we set up secure access.</p>
        </div>
    }
    else if (_success)
    {
        <div class="alert alert-success">
            <i class="bi bi-check-circle-fill me-2"></i>
            <strong>Device Activated Successfully!</strong>
        </div>
        <p class="lead">Your device has been approved and securely registered.</p>
        <div class="mt-4">
            <div class="spinner-border text-primary spinner-border-sm me-2" role="status"></div>
            <span class="text-primary font-weight-bold">Securing your session and taking you to setup...</span>
        </div>
        <div class="mt-4 p-4 bg-white rounded-lg shadow-sm border" style="border-left: 5px solid #0d6efd !important;">
            <h5 class="text-primary"><i class="bi bi-shield-lock me-2"></i>Account Setup</h5>
            <p class="mb-0 small text-start">
                To complete your onboarding, you will now be asked to <strong>set your password</strong> and security preferences.
            </p>
        </div>
        <div class="mt-4 p-3 bg-light rounded border">
            <p class="mb-0 small text-start">
                <strong>Next Step:</strong> Sign in with your username and password. 
                <br/>
                <span class="text-muted">If this is your first time and you haven't setup a password yet, use the <strong>"Magic Link"</strong> tab on the login page.</span>
            </p>
        </div>
        <p class="mt-3 small text-muted">Redirecting automatically in a moment...</p>
    }
    else if (!string.IsNullOrEmpty(_errorMessage))
    {
        <div class="alert alert-danger">
            <i class="bi bi-exclamation-triangle-fill me-2"></i>
            <strong>Activation Failed</strong>
        </div>
        <p>@_errorMessage</p>
        <p>Please contact your administrator for a new invite link.</p>
    }
</div>

<style>
    .activation-container {
        max-width: 500px;
        margin: 100px auto;
        padding: 2rem;
        text-align: center;
    }
</style>

@code {
    private bool _activating = true;
    private bool _success = false;
    private string _errorMessage = "";

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await ActivateDevice();
        }
    }

    private async Task ActivateDevice()
    {
        try
        {
            // Get token from query string
            var uri = new Uri(Navigation.Uri);
            var query = System.Web.HttpUtility.ParseQueryString(uri.Query);
            var token = query["token"];

            if (string.IsNullOrEmpty(token))
            {
                _errorMessage = "Invalid activation link. No token provided.";
                _activating = false;
                StateHasChanged();
                return;
            }

            // Set the cookie via global JavaScript helper (365 days)
            await JS.InvokeVoidAsync("window.setCookie", "GFC_DeviceTrustToken", token, 365);
            
            // Also set in localStorage for App.razor auto-login
            await JS.InvokeVoidAsync("localStorage.setItem", "gfc_device_token", token);

            _success = true;
            _activating = false;
            StateHasChanged();

            // FAST ONBOARDING: Log user in automatically since we've verified the token
            var userId = await DeviceTrustService.GetUserIdByTokenAsync(token);
            if (userId.HasValue)
            {
                var loginResult = await AuthStateProvider.LoginWithUserAsync(userId.Value);
                if (loginResult.Success)
                {
                    // Automatic redirect to root (MainLayout will then force /changepassword)
                    await Task.Delay(2000);
                    Navigation.NavigateTo("/", forceLoad: true);
                    return;
                }
                else
                {
                    Logger.LogWarning("Auto-login failed after activation for user {UserId}: {Reason}", userId, loginResult.ErrorMessageForLog);
                }
            }

            // Fallback if auto-login fails or userId not found
            await Task.Delay(2000);
            Navigation.NavigateTo("/login");
        }
        catch (Exception ex)
        {
            _errorMessage = $"An error occurred during activation: {ex.Message}";
            _activating = false;
            StateHasChanged();
        }
    }
}
