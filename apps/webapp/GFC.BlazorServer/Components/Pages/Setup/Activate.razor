@page "/setup/activate"
@using GFC.BlazorServer.Services
@using GFC.BlazorServer.Services.Vpn
@inject IDeviceTrustService DeviceTrustService
@inject IVpnConfigurationService VpnService
@inject NavigationManager Navigation
@inject IJSRuntime JS
@inject CustomAuthenticationStateProvider AuthStateProvider
@inject ILogger<Activate> Logger

<div class="activation-container">
    @if (_activating)
    {
        <div class="text-center">
            <div class="spinner-border text-primary mb-3" role="status">
                <span class="visually-hidden">Activating...</span>
            </div>
            <h3>Activating Your Device...</h3>
            <p>Please wait while we set up secure access.</p>
        </div>
    }
    else if (_success)
    {
        <div class="alert alert-success shadow-sm">
            <i class="bi bi-check-circle-fill me-2"></i>
            <strong>Device Activated Successfully!</strong>
        </div>
        <p class="lead">Your device has been approved and securely registered.</p>
        
        <div class="mt-4 p-4 bg-white rounded-lg shadow-sm border" style="border-left: 5px solid #0d6efd !important;">
            <h5 class="text-primary"><i class="bi bi-shield-lock me-2"></i>Finalizing Setup</h5>
            <div class="d-flex align-items-center justify-content-center mt-3">
                <div class="spinner-border text-primary spinner-border-sm me-2" role="status"></div>
                <span class="text-muted">Securing your session and taking you to setup...</span>
            </div>
            <div class="mt-4">
                <a href="@_nextUrl" class="btn btn-primary btn-lg shadow-sm w-100">
                    <i class="bi bi-arrow-right-circle me-2"></i>Continue
                </a>
            </div>
        </div>
        <p class="mt-4 small text-muted">Redirecting automatically in a moment...</p>
        <div class="small text-muted" style="font-size: 0.7rem; opacity: 0.7;">Target: @_nextUrl</div>
    }
    else if (!string.IsNullOrEmpty(_errorMessage))
    {
        <div class="alert alert-danger shadow-sm">
            <i class="bi bi-exclamation-triangle-fill me-2"></i>
            <strong>Activation Failed</strong>
        </div>
        <p>@_errorMessage</p>
        <p class="text-muted">Please contact your administrator for a new invite link.</p>
    }
</div>

<style>
    .activation-container {
        max-width: 500px;
        margin: 100px auto;
        padding: 2rem;
        text-align: center;
    }
</style>

@code {
    private bool _activating = true;
    private bool _success = false;
    private string _errorMessage = "";
    private string _nextUrl = "/";

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await ActivateDevice();
        }
    }

    private async Task ActivateDevice()
    {
        try
        {
            // Get token from query string
            var uri = new Uri(Navigation.Uri);
            var query = System.Web.HttpUtility.ParseQueryString(uri.Query);
            var token = query["token"];

            if (string.IsNullOrEmpty(token))
            {
                _errorMessage = "Invalid activation link. No token provided.";
                _activating = false;
                StateHasChanged();
                return;
            }

            // 1. Validate the Invite/Onboarding Token
            var userId = await VpnService.ValidateOnboardingTokenAsync(token);

            if (userId == null)
            {
                _errorMessage = "Activation failed. The link may be invalid or expired.";
                _activating = false;
                StateHasChanged();
                return;
            }

            // 2. Create a NEW Device Trust Token for this session
            // We use a default duration (e.g., 30 days) and generic user agent since we're in Blazor context
            var deviceTrustToken = await DeviceTrustService.CreateDeviceTokenAsync(userId.Value, "Web Browser (Activated)", "Unknown IP", 30);

            // 3. Set the NEW TRUST COOKIE
            await JS.InvokeVoidAsync("window.setCookie", "GFC_DeviceTrustToken", deviceTrustToken, 365);
            await JS.InvokeVoidAsync("localStorage.setItem", "gfc_device_token", deviceTrustToken);

            // 4. Explicitly log the user in with the NEW TRUST TOKEN
            var loginResult = await AuthStateProvider.LoginWithDeviceTokenAsync(deviceTrustToken);
            
            if (loginResult.Success)
            {
                // CRITICAL: Login rotates the token! Update cookie with the NEW token if provided.
                if (!string.IsNullOrEmpty(loginResult.DeviceToken))
                {
                    await JS.InvokeVoidAsync("window.setCookie", "GFC_DeviceTrustToken", loginResult.DeviceToken, 365);
                    await JS.InvokeVoidAsync("localStorage.setItem", "gfc_device_token", loginResult.DeviceToken);
                }

                var bust = DateTime.UtcNow.Ticks;
                
                // POLICY: Always force setup/verification on new device activation
                _nextUrl = $"/changepassword?setup=true&t={bust}";

                _success = true;
                _activating = false;
                StateHasChanged();

                await Task.Delay(1000);
                
                // Use JS for reliable redirect
                await JS.InvokeVoidAsync("window.location.assign", _nextUrl);
            }
            else
            {
                // This shouldn't happen if activation was successful, but just in case
                _errorMessage = "Activation successful, but could not sign in automatically.";
                _activating = false;
                StateHasChanged();
            }
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Activation failure");
            _errorMessage = $"An error occurred during activation: {ex.Message}";
            _activating = false;
            StateHasChanged();
        }
    }
}
