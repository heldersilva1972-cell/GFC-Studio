@page "/setup/request-access"
@using GFC.Core.Interfaces
@using GFC.Core.Enums
@using GFC.BlazorServer.Data.Entities
@layout GFC.BlazorServer.Components.Layout.FullPageLayout
@inject IUserConnectionService ConnectionService
@inject IBlazorSystemSettingsService SettingsService
@inject NavigationManager Navigation
@inject ILogger<RequestAccess> Logger

<PageTitle>Access Restricted - GFC Studio</PageTitle>

<div class="access-request-container">
    <div class="access-request-card">
        <div class="status-indicator @GetStatusClass()">
            <i class="bi @GetStatusIcon()"></i>
        </div>
        
        <h1>@(IsTrusted ? "Connection Authorized" : "Access Restricted")</h1>
        <p class="subtitle">@(IsTrusted ? "Your connection is verified and safe." : "This application is locked for your current connection.")</p>
        
        <div class="info-grid">
            <div class="info-item">
                <span class="info-label">Detected IP</span>
                <span class="info-value">@(string.IsNullOrEmpty(ConnectionService.IpAddress) ? "Detection Pending..." : ConnectionService.IpAddress)</span>
            </div>
            <div class="info-item">
                <span class="info-label">Network Type</span>
                <span class="info-value">@ConnectionService.LocationType</span>
            </div>
        </div>

        @if (IsTrusted)
        {
            <div class="trust-banner">
                <i class="bi bi-shield-check me-2"></i>
                <span>Your connection is recognized as <strong>@(ConnectionService.LocationType == LocationType.Unknown ? "Safe (Global Access)" : "Trusted")</strong>.</span>
                <button class="btn btn-success mt-3 w-100" @onclick="RetryConnection">
                    Enter Application
                </button>
            </div>
        }
        else
        {
            <div class="instructions-card">
                <h3><i class="bi bi-info-circle me-2"></i>How to gain access:</h3>
                <ul>
                    @if (SystemSettings != null && !string.IsNullOrEmpty(SystemSettings.LanSubnet))
                    {
                        <li><strong>Option 1:</strong> Connect to the club's private WiFi (range: @SystemSettings.LanSubnet).</li>
                    }
                    else
                    {
                        <li><strong>Option 1:</strong> Connect to the club's private WiFi.</li>
                    }
                    <li><strong>Option 2:</strong> Activate your club VPN (WireGuard).</li>
                    <li><strong>Option 3:</strong> Use an authorized device provided by the admin.</li>
                </ul>
            </div>
            
            <div class="actions">
                <button class="btn btn-primary" @onclick="RetryConnection">
                    <i class="bi bi-arrow-clockwise me-2"></i>
                    Refresh Connection
                </button>
            </div>
        }
        
        <div class="footer-help">
            <p>Support ID: <code>GFC-@(ConnectionService.IpAddress?.Replace(".", "-") ?? "NO-IP")</code></p>
            <p>Current Mode: <strong>@(SystemSettings?.AccessMode.ToString() ?? "Loading...")</strong></p>
            <p>Contact your system administrator for authorization.</p>
        </div>
    </div>
</div>

<style>
    .access-request-container {
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        background: #0f172a;
        padding: 1.5rem;
        font-family: 'Inter', system-ui, -apple-system, sans-serif;
    }
    
    .access-request-card {
        background: #1e293b;
        border-radius: 24px;
        padding: 3rem;
        max-width: 500px;
        width: 100%;
        box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.5);
        text-align: center;
        color: #f8fafc;
        border: 1px solid rgba(255,255,255,0.1);
    }
    
    .status-indicator {
        width: 80px;
        height: 80px;
        border-radius: 20px;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 2rem;
        font-size: 2.5rem;
    }
    
    .status-locked {
        background: rgba(239, 68, 68, 0.15);
        color: #ef4444;
        border: 2px solid rgba(239, 68, 68, 0.2);
    }
    
    .status-trusted {
        background: rgba(34, 197, 94, 0.15);
        color: #22c55e;
        border: 2px solid rgba(34, 197, 94, 0.2);
    }
    
    h1 {
        font-size: 1.75rem;
        font-weight: 800;
        margin-bottom: 0.75rem;
        letter-spacing: -0.025em;
    }
    
    .subtitle {
        color: #94a3b8;
        margin-bottom: 2.5rem;
        font-size: 1.1rem;
    }
    
    .info-grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 1rem;
        margin-bottom: 2rem;
    }
    
    .info-item {
        background: rgba(15, 23, 42, 0.5);
        padding: 1rem;
        border-radius: 12px;
        text-align: left;
    }
    
    .info-label {
        display: block;
        font-size: 0.75rem;
        font-weight: 600;
        color: #64748b;
        text-transform: uppercase;
        margin-bottom: 0.25rem;
    }
    
    .info-value {
        font-family: 'JetBrains Mono', 'Fira Code', monospace;
        font-size: 0.9rem;
        color: #e2e8f0;
    }
    
    .trust-banner {
        background: rgba(34, 197, 94, 0.1);
        border: 1px solid rgba(34, 197, 94, 0.3);
        border-radius: 12px;
        padding: 1.5rem;
        margin-bottom: 2rem;
        color: #4ade80;
    }
    
    .instructions-card {
        background: rgba(30, 41, 59, 0.8);
        border: 1px solid rgba(148, 163, 184, 0.1);
        border-radius: 16px;
        padding: 1.5rem;
        margin-bottom: 2rem;
        text-align: left;
    }
    
    .instructions-card h3 {
        font-size: 0.9rem;
        font-weight: 600;
        color: #cbd5e1;
        margin-bottom: 1rem;
        display: flex;
        align-items: center;
    }
    
    .instructions-card ul {
        margin: 0;
        padding-left: 0;
        list-style: none;
    }
    
    .instructions-card li {
        color: #94a3b8;
        margin-bottom: 0.75rem;
        font-size: 0.875rem;
        line-height: 1.4;
    }
    
    .instructions-card li strong {
        color: #f1f5f9;
        font-weight: 600;
    }
    
    .actions .btn-primary {
        background: #3b82f6;
        color: white;
        border: none;
        padding: 0.875rem 2rem;
        border-radius: 12px;
        font-weight: 600;
        width: 100%;
        transition: all 0.2s;
    }
    
    .actions .btn-primary:hover {
        background: #2563eb;
        transform: translateY(-1px);
    }

    .btn-success {
        background: #22c55e;
        border: none;
        padding: 1rem;
        font-weight: 700;
        border-radius: 12px;
    }
    
    .footer-help {
        margin-top: 2rem;
        padding-top: 1.5rem;
        border-top: 1px solid rgba(148, 163, 184, 0.1);
        font-size: 0.75rem;
        color: #64748b;
    }
    
    .footer-help code {
        background: rgba(0,0,0,0.2);
        padding: 0.2rem 0.4rem;
        border-radius: 4px;
        color: #94a3b8;
    }
</style>

@code {
    private SystemSettings? SystemSettings { get; set; }
    
    private bool IsTrusted => 
        (ConnectionService.LocationType != LocationType.Public && ConnectionService.LocationType != LocationType.Unknown) ||
        (SystemSettings?.AccessMode == AccessMode.Open);

    protected override async Task OnInitializedAsync()
    {
        ConnectionService.DetectConnectionIfNeeded();
        SystemSettings = await SettingsService.GetAsync();
        
        if (IsTrusted)
        {
            Logger.LogInformation("Access Request page: Connection recognized as trusted. User can proceed.");
        }
    }

    private void RetryConnection()
    {
        Navigation.NavigateTo("/", forceLoad: true);
    }

    private string GetStatusClass() => IsTrusted ? "status-trusted" : "status-locked";
    private string GetStatusIcon() => IsTrusted ? "bi-shield-check" : "bi-shield-slash";
}

