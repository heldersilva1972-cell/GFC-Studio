@page "/setup/request-access"
@using GFC.Core.Interfaces
@inject IUserConnectionService ConnectionService
@inject NavigationManager Navigation

<PageTitle>Access Request - GFC Studio</PageTitle>

<div class="access-request-container">
    <div class="access-request-card">
        <div class="icon-container">
            <i class="bi bi-shield-lock"></i>
        </div>
        
        <h1>Access Restricted</h1>
        <p class="subtitle">This application is only accessible from authorized networks</p>
        
        <div class="info-box">
            <h3>Your Connection Details</h3>
            <div class="detail-row">
                <span class="label">IP Address:</span>
                <span class="value">@ConnectionService.IpAddress</span>
            </div>
            <div class="detail-row">
                <span class="label">Connection Type:</span>
                <span class="value">@ConnectionService.LocationType</span>
            </div>
        </div>
        
        <div class="instructions">
            <h3>To Access This Application:</h3>
            <ul>
                <li>Connect to the club's WiFi network</li>
                <li>Or connect via the club's VPN</li>
                <li>Or contact an administrator for device authorization</li>
            </ul>
        </div>
        
        <div class="actions">
            <button class="btn btn-primary" @onclick="RetryConnection">
                <i class="bi bi-arrow-clockwise me-2"></i>
                Retry Connection
            </button>
        </div>
        
        <div class="help-text">
            <p>If you believe this is an error, please contact your system administrator.</p>
        </div>
    </div>
</div>

<style>
    .access-request-container {
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        padding: 2rem;
    }
    
    .access-request-card {
        background: white;
        border-radius: 20px;
        padding: 3rem;
        max-width: 600px;
        width: 100%;
        box-shadow: 0 20px 60px rgba(0,0,0,0.3);
        text-align: center;
    }
    
    .icon-container {
        width: 100px;
        height: 100px;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 2rem;
    }
    
    .icon-container i {
        font-size: 3rem;
        color: white;
    }
    
    h1 {
        font-size: 2rem;
        font-weight: 700;
        color: #1a202c;
        margin-bottom: 0.5rem;
    }
    
    .subtitle {
        font-size: 1.1rem;
        color: #718096;
        margin-bottom: 2rem;
    }
    
    .info-box {
        background: #f7fafc;
        border-radius: 12px;
        padding: 1.5rem;
        margin-bottom: 2rem;
        text-align: left;
    }
    
    .info-box h3 {
        font-size: 1rem;
        font-weight: 600;
        color: #2d3748;
        margin-bottom: 1rem;
        text-align: center;
    }
    
    .detail-row {
        display: flex;
        justify-content: space-between;
        padding: 0.75rem 0;
        border-bottom: 1px solid #e2e8f0;
    }
    
    .detail-row:last-child {
        border-bottom: none;
    }
    
    .detail-row .label {
        font-weight: 600;
        color: #4a5568;
    }
    
    .detail-row .value {
        color: #2d3748;
        font-family: 'Courier New', monospace;
    }
    
    .instructions {
        background: #fff5f5;
        border-left: 4px solid #f56565;
        border-radius: 8px;
        padding: 1.5rem;
        margin-bottom: 2rem;
        text-align: left;
    }
    
    .instructions h3 {
        font-size: 1rem;
        font-weight: 600;
        color: #742a2a;
        margin-bottom: 1rem;
    }
    
    .instructions ul {
        margin: 0;
        padding-left: 1.5rem;
    }
    
    .instructions li {
        color: #742a2a;
        margin-bottom: 0.5rem;
    }
    
    .actions {
        margin-bottom: 1.5rem;
    }
    
    .btn-primary {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border: none;
        padding: 0.75rem 2rem;
        font-size: 1rem;
        font-weight: 600;
        border-radius: 8px;
        color: white;
        cursor: pointer;
        transition: transform 0.2s, box-shadow 0.2s;
    }
    
    .btn-primary:hover {
        transform: translateY(-2px);
        box-shadow: 0 10px 20px rgba(102, 126, 234, 0.4);
    }
    
    .help-text {
        font-size: 0.875rem;
        color: #a0aec0;
    }
</style>

@code {
    private void RetryConnection()
    {
        Navigation.NavigateTo("/", forceLoad: true);
    }
}
