@page "/setup/{Token}"
@layout FullPageLayout
@using GFC.BlazorServer.Services
@using GFC.BlazorServer.Services.Vpn
@using Microsoft.JSInterop
@inject NavigationManager Navigation
@inject IBlazorSystemSettingsService SystemSettingsService
@inject IVpnConfigurationService VpnConfigService
@inject IJSRuntime JSRuntime

<PageTitle>Secure Access Setup - GFC</PageTitle>

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-primary text-white text-center py-4">
                    <h3 class="mb-0"><i class="bi bi-shield-check me-2"></i>Secure Access Setup</h3>
                    <p class="mb-0 mt-2 opacity-75">Connect your device to the GFC Private Network</p>
                </div>
                
                <div class="card-body p-4">
                    @if (_isLoading)
                    {
                        <div class="text-center py-5">
                            <div class="spinner-border text-primary mb-3" role="status"></div>
                            <p class="text-muted">Verifying your invite...</p>
                        </div>
                    }
                    else if (!_isValid)
                    {
                        <div class="text-center py-5">
                            <i class="bi bi-x-circle text-danger display-1 mb-3"></i>
                            <h4>Invalid or Expired Invite</h4>
                            <p class="text-muted">This setup link is invalid, expired, or has already been used.</p>
                            <p>Please request a new invite from an administrator.</p>
                        </div>
                    }
                    else if (_showSuccess)
                    {
                        <div class="text-center py-5 animate-fade-in">
                            <i class="bi bi-check-circle-fill text-success display-1 mb-3"></i>
                            <h4>Device Authorized!</h4>
                            <p class="text-muted mb-4">Your device is now a Digital Key for the GFC Web App.</p>
                            
                            <div class="d-grid gap-3">
                                <a href="/login" class="btn btn-primary btn-lg">Go to Login</a>
                            </div>
                            
                            <div class="mt-4 p-3 bg-light rounded text-start">
                                <h6 class="fw-bold"><i class="bi bi-iphone me-2"></i>Tip for Directors:</h6>
                                <p class="small text-muted mb-0">
                                    Use your browser's "Add to Home Screen" option to save GFC as an application icon on your phone!
                                </p>
                            </div>
                        </div>
                    }
                    else if (_safeMode)
                    {
                        <div class="text-center py-4">
                            <i class="bi bi-shield-lock text-warning display-4 mb-3"></i>
                            <h4>System in Safe Mode</h4>
                            <p class="text-muted">Secure onboarding is temporarily disabled due to safe mode.</p>
                        </div>
                    }
                    else
                    {
                        <div class="mb-4">
                            <div class="d-flex justify-content-between mb-4">
                                <div class="text-center" style="width: 30%;">
                                    <div class="rounded-circle border @GetStepClass(1) d-inline-flex align-items-center justify-content-center mb-2" style="width: 40px; height: 40px;">1</div>
                                    <div class="small">Install</div>
                                </div>
                                <div class="text-center" style="width: 30%;">
                                    <div class="rounded-circle border @GetStepClass(2) d-inline-flex align-items-center justify-content-center mb-2" style="width: 40px; height: 40px;">2</div>
                                    <div class="small">Config</div>
                                </div>
                                <div class="text-center" style="width: 30%;">
                                    <div class="rounded-circle border @GetStepClass(3) d-inline-flex align-items-center justify-content-center mb-2" style="width: 40px; height: 40px;">3</div>
                                    <div class="small">Test</div>
                                </div>
                            </div>

                            @if (_currentStep == 1)
                            {
                                <div class="text-center">
                                    <h5>Step 1: Install WireGuard</h5>
                                    <p class="text-muted small">You need the WireGuard app to connect to the private network.</p>
                                    <a href="@_storeLink" target="_blank" class="btn btn-outline-primary mb-3">
                                        <i class="bi bi-download me-2"></i>Get WireGuard for @_detectedOs
                                    </a>
                                    <div class="d-grid">
                                        <button class="btn btn-primary" @onclick="NextStep">I Have It Installed</button>
                                    </div>
                                </div>
                            }
                            else if (_currentStep == 2)
                            {
                                <div class="text-center">
                                    <h5>Step 2: Download Configuration</h5>
                                    <p class="text-muted small">Download your unique security key and open it with the WireGuard app.</p>
                                    <div class="d-grid gap-2">
                                        <button class="btn btn-primary btn-lg" @onclick="DownloadConfig">
                                            <i class="bi bi-file-earmark-lock-fill me-2"></i>Download Key
                                        </button>
                                        <button class="btn btn-link btn-sm" @onclick="NextStep">Skip (Already Configured)</button>
                                    </div>
                                </div>
                            }
                            else if (_currentStep == 3)
                            {
                                <div class="text-center">
                                    <h5>Step 3: Test Connection</h5>
                                    <p class="text-muted small">Turn ON WireGuard and click Test to verify access.</p>
                                    
                                    @if (_testResult == null)
                                    {
                                        <button class="btn btn-primary btn-lg px-5" @onclick="TestConnection" disabled="@_isTesting">
                                            @if (_isTesting)
                                            {
                                                <span class="spinner-border spinner-border-sm me-2" role="status"></span>
                                                <span>Testing...</span>
                                            }
                                            else
                                            {
                                                <span>Test Access</span>
                                            }
                                        </button>
                                    }
                                    else if (_testResult == true)
                                    {
                                        <div class="alert alert-success mt-3">
                                            <i class="bi bi-check-circle-fill me-2"></i>Connected Successfully!
                                        </div>
                                        <div class="d-grid">
                                            <a href="/login" class="btn btn-success btn-lg">Complete Setup</a>
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="alert alert-danger mt-3">
                                            <i class="bi bi-exclamation-triangle-fill me-2"></i>Connection Failed
                                        </div>
                                        <button class="btn btn-outline-primary" @onclick="TestConnection">Try Again</button>
                                    }
                                </div>
                            }
                        </div>
                    }
                </div>
            </div>
            
            <div class="text-center mt-4 text-muted small">
                 &copy; @DateTime.Now.Year GFC System
            </div>
        </div>
    </div>
</div>

<script>
    window.detectOsFamily = function() {
        var userAgent = window.navigator.userAgent;
        var platform = window.navigator.platform;
        var macosPlatforms = ['Macintosh', 'MacIntel', 'MacPPC', 'Mac68K'];
        var windowsPlatforms = ['Win32', 'Win64', 'Windows', 'WinCE'];
        var iosPlatforms = ['iPhone', 'iPad', 'iPod'];
        
        if (macosPlatforms.indexOf(platform) !== -1) return 'macOS';
        if (iosPlatforms.indexOf(platform) !== -1) return 'iOS';
        if (windowsPlatforms.indexOf(platform) !== -1) return 'Windows';
        if (/Android/.test(userAgent)) return 'Android';
        if (/Linux/.test(platform)) return 'Linux';
        
        return 'Unknown';
    };

    window.downloadFileFromStream = async (fileName, contentStreamReference) => {
        const arrayBuffer = await contentStreamReference.arrayBuffer();
        const blob = new Blob([arrayBuffer]);
        const url = URL.createObjectURL(blob);
        const anchorElement = document.createElement('a');
        anchorElement.href = url;
        anchorElement.download = fileName ?? '';
        anchorElement.click();
        anchorElement.remove();
        URL.revokeObjectURL(url);
    }
</script>

@code {
    [Parameter]
    public string? Token { get; set; }

    private bool _isLoading = true;
    private bool _isValid = false;
    private bool _onboardingEnabled = false;
    private bool _safeMode = false;
    private bool _showSuccess = false;
    private int _currentStep = 1;
    private int _userId = 0;
    
    private string _detectedOs = "Device";
    private string _storeLink = "https://www.wireguard.com/install/";
    private bool _isMobile = false;

    private bool _isTesting = false;
    private bool? _testResult;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            var settings = await SystemSettingsService.GetSystemSettingsAsync();
            _onboardingEnabled = settings?.EnableOnboarding ?? false;
            _safeMode = settings?.SafeModeEnabled ?? false;
            
            if (_onboardingEnabled && !_safeMode && !string.IsNullOrEmpty(Token))
            {
                var uid = await VpnConfigService.ValidateOnboardingTokenAsync(Token);
                if (uid.HasValue)
                {
                    _userId = uid.Value;
                    _isValid = true;
                    // Auth will happen in OnAfterRenderAsync
                }
            }
        }
        catch(Exception ex) 
        {
            Console.WriteLine(ex);
        }
        finally
        {
            _isLoading = false;
        }
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender && _isValid && !_showSuccess)
        {
            try
            {
                var os = await JSRuntime.InvokeAsync<string>("detectOsFamily");
                _detectedOs = os;
                
                switch (os)
                {
                    case "iOS": 
                        _storeLink = "https://apps.apple.com/us/app/wireguard/id1441195209"; 
                        _isMobile = true;
                        break;
                    case "Android": 
                        _storeLink = "https://play.google.com/store/apps/details?id=com.wireguard.android"; 
                        _isMobile = true;
                        break;
                    case "macOS": 
                        _storeLink = "https://apps.apple.com/us/app/wireguard/id1451685025"; 
                        break;
                    case "Windows": 
                        _storeLink = "https://download.wireguard.com/windows/client/wireguard-installer.exe"; 
                        break;
                }

                // [EASY AUTH] Automatically authorize this device for the Web App
                await JSRuntime.InvokeVoidAsync("eval", $"document.cookie = 'GFC_DeviceTrustToken=Authorized_{Token}; path=/; max-age=2592000; SameSite=Lax; Secure'");
                _showSuccess = true;
                StateHasChanged();
            }
            catch (Exception ex)
            {
                Console.WriteLine($"Error during onboarding render: {ex.Message}");
            }
        }
    }

    private void NextStep() => _currentStep++;

    private async Task DownloadConfig()
    {
        var configContent = await VpnConfigService.GenerateConfigForUserAsync(_userId);
        var bytes = System.Text.Encoding.UTF8.GetBytes(configContent);
        var stream = new MemoryStream(bytes);
        using var streamRef = new DotNetStreamReference(stream);
        
        await JSRuntime.InvokeVoidAsync("downloadFileFromStream", "gfc-access.conf", streamRef);
        
        // Advance to testing step automatically after download
        _currentStep = 3;
    }

    private async Task TestConnection()
    {
        _isTesting = true;
        _testResult = null;
        StateHasChanged();
        
        // Simulate a small network delay
        await Task.Delay(1500);
        
        _testResult = await VpnConfigService.TestVpnConnectionAsync();
        _isTesting = false;
    }

    private string GetStepClass(int step)
    {
        if (_currentStep == step) return "border-primary text-primary fw-bold ring-active";
        if (_currentStep > step) return "bg-primary text-white border-primary";
        return "text-muted border-light";
    }
}
