    // Active device tracking
    private Dictionary<int, int> _userDeviceCounts = new();

    private int GetActiveDeviceCount(int userId)
    {
        if (_userDeviceCounts.TryGetValue(userId, out var count))
        {
            return count;
        }
        return 0;
    }

    private async Task LoadDeviceCounts()
    {
        try
        {
            var allSessions = await DeviceTrustService.GetAllActiveDevicesAsync();
            _userDeviceCounts = allSessions
                .GroupBy(s => s.UserId)
                .ToDictionary(g => g.Key, g => g.Count());
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Failed to load device counts");
        }
    }
