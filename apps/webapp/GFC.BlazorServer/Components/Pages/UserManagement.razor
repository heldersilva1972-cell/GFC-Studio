@page "/users"
@attribute [Authorize(Policy = AppPolicies.RequireAdmin)]
@using GFC.BlazorServer.Services
@using GFC.Core.DTOs
@using GFC.Core.Interfaces
@using GFC.Core.Models
@using Microsoft.AspNetCore.Authorization
@inject IUserManagementService UserService
@inject IAuthenticationService AuthService
@inject CustomAuthenticationStateProvider AuthStateProvider
@inject NavigationManager Navigation
@inject IJSRuntime JSRuntime
@inject ILogger<UserManagement> Logger
@inject IPasswordPolicy PasswordPolicy
@inject IDeviceTrustService DeviceTrustService

<link href="css/user-management-animations.css" rel="stylesheet" />

<PageTitle>User Management - GFC Membership</PageTitle>

<h1 class="page-title">User Management</h1>

@* Reminder Alert for Directors Needing Notification Setup *@
@if (_showDirectorReminder && _newDirectorsCount > 0)
{
    <div class="alert alert-warning alert-dismissible fade show mb-3" role="alert">
        <i class="bi bi-bell"></i>
        <strong>Action Required:</strong> 
        @_newDirectorsCount Director(s) need notification preferences configured.
        <button class="btn btn-sm btn-primary ms-2" @onclick='() => SetFilter("directors")'>
            <i class="bi bi-funnel"></i> View Directors
        </button>
        <button type="button" class="btn-close" @onclick="DismissDirectorReminder"></button>
    </div>
}

@* Bypass Authentication Toggle - DISABLED FOR SECURITY *@
<div class="data-card mb-4">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h3 class="mb-1">Authentication Bypass</h3>
            <p class="text-muted mb-0 small">
                <span class="text-danger"><strong>DISABLED</strong></span> - Authentication bypass has been permanently disabled for security. 
                All logins require valid username and password credentials.
            </p>
        </div>
        <div class="form-check form-switch">
            <input class="form-check-input" type="checkbox" role="switch" 
                   checked="false" 
                   disabled="true" />
        </div>
    </div>
</div>

@* User List *@
<div class="data-card">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h3>Users</h3>
        <button class="btn btn-primary" 
                @onclick="async () => await StartAddUser()">
            <i class="bi bi-person-plus-fill me-2"></i>Add User
        </button>
    </div>

    @* Filter Tabs *@
    <ul class="nav nav-tabs mb-3">
        <li class="nav-item">
            <button class="nav-link @(_userFilter == "all" ? "active" : "")" 
                    @onclick='() => SetFilter("all")'>
                All Users (@_users.Count)
            </button>
        </li>
        <li class="nav-item">
            <button class="nav-link @(_userFilter == "directors" ? "active" : "")" 
                    @onclick='() => SetFilter("directors")'>
                <i class="bi bi-star"></i> Current Directors (@GetFilteredCount("directors"))
            </button>
        </li>
        <li class="nav-item">
            <button class="nav-link @(_userFilter == "admins" ? "active" : "")" 
                    @onclick='() => SetFilter("admins")'>
                <i class="bi bi-shield-check"></i> Admins (@_users.Count(u => u.IsAdmin))
            </button>
        </li>
        <li class="nav-item">
            <button class="nav-link @(_userFilter == "active" ? "active" : "")" 
                    @onclick='() => SetFilter("active")'>
                <i class="bi bi-check-circle"></i> Active (@_users.Count(u => u.IsActive))
            </button>
        </li>
        <li class="nav-item">
            <button class="nav-link @(_userFilter == "inactive" ? "active" : "")" 
                    @onclick='() => SetFilter("inactive")'>
                <i class="bi bi-x-circle"></i> Inactive (@_users.Count(u => !u.IsActive))
            </button>
        </li>
    </ul>

    @if (_loading)
    {
        <div class="loading-state">
            <div class="spinner-border spinner-border-sm text-info" role="status"></div> Loading users...
        </div>
    }
    else if (!string.IsNullOrEmpty(_error))
    {
        <div class="alert alert-danger">
            <strong>Error:</strong> @_error
            <br />
            <small class="text-muted">If this persists, check the server logs for more details.</small>
        </div>
    }
    else
    {
        <div class="table-container">
            <table class="data-table table-compact table-sticky-header">
                <thead>
                    <tr>
                        <th>Username</th>
                        <th>Member</th>
                        <th>Role</th>
                        <th>Status</th>
                        <th>Last Login</th>
                        <th>Active Devices</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody class="@(FilteredUsers.Any() ? "" : "empty")">
                    @foreach (var user in FilteredUsers)
                    {
                        <tr class="@(user.IsActive ? "" : "bg-light text-muted")">
                            <td>
                                <div class="fw-semibold @(user.IsActive ? "" : "text-decoration-line-through")">@user.Username</div>
                                @if (!string.IsNullOrEmpty(user.Notes))
                                {
                                    <div class="text-muted small">@user.Notes</div>
                                }
                            </td>
                            <td>@(user.MemberName ?? "--")</td>
                            <td>
                                @if (user.IsAdmin)
                                {
                                    <span class="badge bg-primary">Admin</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">User</span>
                                }
                            </td>
                            <td>
                                @if (user.IsActive)
                                {
                                    <span class="badge badge-success">Active</span>
                                }
                                else
                                {
                                    <span class="badge badge-danger">Revoked / Inactive</span>
                                }
                            </td>
                            <td>
                                @if (user.LastLoginDate.HasValue)
                                {
                                    @user.LastLoginDate.Value.ToLocalTime().ToString("MMM d, yyyy h:mm tt")
                                }
                                else
                                {
                                    <span class="text-muted">Never</span>
                                }
                            </td>
                            <td>
                                @{
                                    var deviceCount = GetActiveDeviceCount(user.UserId);
                                }
                                @if (deviceCount > 0)
                                {
                                    <span class="badge bg-success" title="@deviceCount active device(s)">
                                        <i class="bi bi-laptop me-1"></i>@deviceCount
                                    </span>
                                }
                                else
                                {
                                    <span class="text-muted small">â€”</span>
                                }
                            </td>
                            <td>
                                <div class="d-flex gap-2 align-items-center">
                                    <button class="btn btn-sm btn-icon-modern" 
                                            @onclick="() => ViewHistory(user.UserId)"
                                            title="View Login History">
                                        <i class="bi bi-clock-history"></i>
                                    </button>
                                    
                                    <button class="btn btn-sm btn-icon-modern text-primary" 
                                            @onclick="() => EditUser(user.UserId)"
                                            title="Edit User">
                                        <i class="bi bi-pencil-fill"></i>
                                    </button>
                                    
                                    <button class="btn btn-sm btn-icon-modern text-info" 
                                            @onclick="() => ConfigureNotifications(user.UserId)"
                                            title="Notification Preferences">
                                        <i class="bi bi-bell-fill"></i>
                                    </button>
                                    
                                    <button class="btn btn-sm btn-icon-modern text-warning" 
                                            @onclick="() => ConfigurePagePermissions(user.UserId, user.Username, user.IsAdmin)"
                                            title="Page Access Permissions">
                                        <i class="bi bi-shield-lock-fill"></i>
                                    </button>
                                    
                                    <button class="btn btn-sm btn-icon-modern text-success" 
                                            @onclick="() => ManageDevices(user.UserId)"
                                            title="Manage Authorized Devices">
                                        <i class="bi bi-phone-fill"></i>
                                    </button>
                                    @if (user.IsActive)
                                    {
                                        @if (!user.IsAdmin)
                                        {
                                            <button class="btn btn-sm btn-outline-danger" 
                                                    @onclick="() => ConfirmRevokeUser(user.UserId, user.Username, user.IsAdmin)" 
                                                    title="Revoke Access Instantly">
                                                <i class="bi bi-slash-circle"></i> Revoke
                                            </button>
                                        }
                                        else
                                        {
                                            <button class="btn btn-sm btn-outline-secondary" 
                                                    disabled
                                                    style="opacity: 0.5;"
                                                    title="Admins cannot be revoked">
                                                <i class="bi bi-shield-check"></i> Protected
                                            </button>
                                        }
                                    }
                                    else
                                    {
                                         <button class="btn btn-sm btn-outline-success" 
                                                @onclick="() => EditUser(user.UserId)"
                                                title="Re-activate via Edit">
                                            <i class="bi bi-arrow-counterclockwise"></i>
                                        </button>
                                    }

                                    @* Strictly Block Deleting Admins *@
                                    @if (!user.IsAdmin)
                                    {
                                        <button class="btn btn-sm btn-danger p-1" 
                                                @onclick="() => ConfirmDeleteUser(user)"
                                                style="width: 32px;"
                                                title="Permanently Delete User">
                                            <i class="bi bi-trash-fill"></i>
                                        </button>
                                    }
                                    else
                                    {
                                        <button class="btn btn-sm btn-icon-modern text-muted" 
                                                disabled
                                                style="width: 32px; opacity: 0.5;"
                                                title="Admins cannot be deleted">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    }
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>

@* Add/Edit User Modal *@
@if (_showUserModal)
{
    <div class="modal-backdrop"></div>
    <div class="modal-card" style="max-width: 600px;">
        <div class="modal-card__header d-flex justify-content-between align-items-center mb-3">
            <h4 class="mb-0">@(_editingUserId.HasValue ? "Edit User" : "Add User")</h4>
            <button class="btn btn-link text-muted p-0" type="button" @onclick="async () => await CancelUserModal()">
                <i class="bi bi-x-lg"></i>
            </button>
        </div>

        @if (!string.IsNullOrEmpty(_modalError))
        {
            <div class="alert alert-danger mb-3">
                <strong>Error:</strong> @_modalError
            </div>
        }

        <EditForm Model="@_userForm" OnValidSubmit="SaveUser" OnInvalidSubmit="HandleInvalidSubmit">
            <DataAnnotationsValidator />
            @if (!IsEditingAdminUser)
            {
                <div class="mb-3">
                    <label class="form-label">Select Member (optional)</label>
                    <select class="form-select" @onchange="OnMemberSelected">
                        <option value="">-- Select a member --</option>
                        @foreach (var member in _activeMembers)
                        {
                            <option value="@member.MemberId">@member.DisplayName</option>
                        }
                    </select>
                    <small class="text-muted">Selecting a member will auto-fill the username</small>
                </div>
            }
            <div class="mb-3">
                <label class="form-label">Username <span class="text-danger">*</span></label>
                <InputText class="form-control" @bind-Value="_userForm.Username" disabled="@IsEditingAdminUser" />
                <ValidationMessage For="@(() => _userForm.Username)" />
                @if (IsEditingAdminUser)
                {
                    <small class="text-muted d-block">The admin username cannot be changed.</small>
                }
            </div>
            <div class="mb-3">
                <label class="form-label">@(_editingUserId.HasValue ? "New Password (leave blank to keep current)" : "Password (optional)")</label>
                <InputText type="password" class="form-control" @bind-Value="_userForm.Password" placeholder="@(_editingUserId.HasValue ? "" : "Leave blank to force setup on first login")" />
                <ValidationMessage For="@(() => _userForm.Password)" />
                <small class="text-muted d-block">If left blank, the user will be forced to create a password or passcode when they first log in.</small>
            </div>
            <div class="mb-3">
                <div class="form-check">
                    <InputCheckbox class="form-check-input" @bind-Value="_userForm.IsAdmin" disabled="@IsEditingAdminUser" />
                    <label class="form-check-label">Admin</label>
                    @if (IsEditingAdminUser)
                    {
                        <small class="text-muted d-block">The admin user must remain an administrator.</small>
                    }
                </div>
            </div>
            <div class="mb-3">
                <div class="form-check">
                    <InputCheckbox class="form-check-input" @bind-Value="_userForm.IsActive" disabled="@IsEditingAdminUser" />
                    <label class="form-check-label">Active</label>
                    @if (IsEditingAdminUser)
                    {
                        <small class="text-muted d-block">The admin user must remain active.</small>
                    }
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label">Notes</label>
                <InputTextArea class="form-control" rows="3" @bind-Value="_userForm.Notes" />
            </div>
            <div class="modal-card__actions">
                <button type="submit" class="btn btn-primary" disabled="@_savingUser">
                    <span class="spinner-border spinner-border-sm me-1" role="status" hidden="@(!_savingUser)"></span>
                    Save
                </button>
                <button type="button" class="btn btn-outline" @onclick="CancelUserModal">Cancel</button>
            </div>
        </EditForm>
    </div>
}

@* Login History Modal *@
@if (_showHistoryModal && _selectedUserId.HasValue)
{
    <div class="modal-backdrop"></div>
    <div class="modal-card" style="max-width: 800px;">
        <div class="modal-card__header d-flex justify-content-between align-items-center mb-3">
            <h4 class="mb-0">Login History</h4>
            <button class="btn btn-link text-muted p-0" type="button" @onclick="CloseHistoryModal">
                <i class="bi bi-x-lg"></i>
            </button>
        </div>
        @if (_historyLoading)
        {
            <div class="loading-state">
                <div class="spinner-border spinner-border-sm text-info" role="status"></div> Loading history...
            </div>
        }
        else
        {
            @* Login Statistics Summary *@
            <div class="row g-3 mb-4">
                <div class="col-md-3">
                    <div class="summary-card text-center border-success">
                        <i class="bi bi-check-circle-fill text-success" style="font-size: 2rem;"></i>
                        <h3 class="mb-0 mt-2">@_loginHistory.Count(x => x.LoginSuccessful)</h3>
                        <small class="text-muted">Successful Logins</small>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="summary-card text-center border-danger">
                        <i class="bi bi-x-circle-fill text-danger" style="font-size: 2rem;"></i>
                        <h3 class="mb-0 mt-2">@_loginHistory.Count(x => !x.LoginSuccessful)</h3>
                        <small class="text-muted">Failed Attempts</small>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="summary-card text-center border-primary">
                        <i class="bi bi-percent text-primary" style="font-size: 2rem;"></i>
                        <h3 class="mb-0 mt-2">
                            @if (_loginHistory.Any())
                            {
                                <text>@(Math.Round((_loginHistory.Count(x => x.LoginSuccessful) * 100.0 / _loginHistory.Count), 1))%</text>
                            }
                            else
                            {
                                <text>0%</text>
                            }
                        </h3>
                        <small class="text-muted">Success Rate</small>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="summary-card text-center border-warning">
                        <i class="bi bi-clock-history text-warning" style="font-size: 2rem;"></i>
                        <h6 class="mb-0 mt-2" style="font-size: 0.85rem;">
                            @if (_loginHistory.Any(x => x.LoginSuccessful))
                            {
                                var lastSuccess = _loginHistory.Where(x => x.LoginSuccessful).OrderByDescending(x => x.LoginDate).First();
                                @lastSuccess.LoginDate.ToLocalTime().ToString("MMM d, h:mm tt")
                            }
                            else
                            {
                                <text>Never</text>
                            }
                        </h6>
                        <small class="text-muted">Last Successful</small>
                    </div>
                </div>
            </div>
            
            @* Second Row - Average Logins per Week *@
            <div class="row g-3 mb-4">
                <div class="col-md-12">
                    <div class="summary-card">
                        <div class="d-flex align-items-center justify-content-between">
                            <div class="d-flex align-items-center">
                                <i class="bi bi-graph-up-arrow text-info" style="font-size: 2.5rem; margin-right: 20px;"></i>
                                <div>
                                    <h3 class="mb-0">
                                        @if (_loginHistory.Any())
                                        {
                                            var oldestLogin = _loginHistory.OrderBy(x => x.LoginDate).First().LoginDate;
                                            var newestLogin = _loginHistory.OrderByDescending(x => x.LoginDate).First().LoginDate;
                                            var daysDiff = (newestLogin - oldestLogin).TotalDays;
                                            var weeks = daysDiff > 0 ? daysDiff / 7.0 : 1;
                                            var avgPerWeek = _loginHistory.Count / weeks;
                                            @Math.Round(avgPerWeek, 1)
                                        }
                                        else
                                        {
                                            <text>0</text>
                                        }
                                    </h3>
                                    <small class="text-muted">Average Logins per Week</small>
                                </div>
                            </div>
                            <div class="text-end">
                                <small class="text-muted">
                                    @if (_loginHistory.Any())
                                    {
                                        var oldestLogin = _loginHistory.OrderBy(x => x.LoginDate).First().LoginDate;
                                        var newestLogin = _loginHistory.OrderByDescending(x => x.LoginDate).First().LoginDate;
                                        var daysDiff = (newestLogin - oldestLogin).TotalDays;
                                        <text>Based on @Math.Round(daysDiff, 0) days of history</text>
                                    }
                                </small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            

            <div class="table-container" style="max-height: 500px; overflow-y: auto; margin-bottom: 20px;">
                <table class="data-table table-compact">
                    <thead style="position: sticky; top: 0; z-index: 1;">
                        <tr>
                            <th>Date</th>
                            <th>IP Address</th>
                            <th>Result</th>
                            <th>Reason</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var entry in _loginHistory)
                        {
                            <tr>
                                <td>@entry.LoginDate.ToLocalTime().ToString("MMM d, yyyy h:mm tt")</td>
                                <td>@(entry.IpAddress ?? "--")</td>
                                <td>
                                    @if (entry.LoginSuccessful)
                                    {
                                        <span class="badge badge-success">Success</span>
                                    }
                                    else
                                    {
                                        <span class="badge badge-danger">Failed</span>
                                    }
                                </td>
                                <td>@(entry.FailureReason ?? "--")</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            
            <!-- Close Button at Bottom -->
            <div class="d-flex justify-content-end">
                <button type="button" class="btn btn-outline" @onclick="CloseHistoryModal">Close</button>
            </div>
        }
    </div>
}

@* Delete Confirmation Modal *@
@if (_showDeleteModal && _userToDelete.HasValue)
{
    <div class="modal-backdrop"></div>
    <div class="modal-card" style="max-width: 500px;">
        <div class="modal-card__header d-flex justify-content-between align-items-center mb-3">
            <h4 class="mb-0">Delete User</h4>
            <button class="btn btn-link text-muted p-0" type="button" @onclick="CancelDeleteUser">
                <i class="bi bi-x-lg"></i>
            </button>
        </div>
        <div class="mb-3">
            <p>Are you sure you want to permanently delete user <strong>@_userToDeleteUsername</strong>?</p>
            
            @if (_isDeleteDirectorWarning)
            {
                <div class="alert alert-danger mb-3 p-2">
                    <div class="d-flex">
                        <i class="bi bi-exclamation-triangle-fill me-2 fs-4"></i>
                        <div>
                            <strong>CRITICAL WARNING:</strong><br/>
                            This user is currently an <strong>Active Director</strong>.
                            Deleting them may cause issues with board reports or history.
                        </div>
                    </div>
                    <div class="form-check mt-2 small">
                        <input class="form-check-input" type="checkbox" id="confirmDirectorDelete" @bind="_directorDeleteConfirmed" />
                        <label class="form-check-label" for="confirmDirectorDelete">
                            I understand and want to permanently delete this active director.
                        </label>
                    </div>
                </div>
            }
            else
            {
                <p class="text-muted small">This action will permanently remove the user account. This cannot be undone.</p>
            }
        </div>
        <div class="modal-card__actions">
            <button type="button" class="btn btn-danger" 
                    disabled="@(_deletingUser || (_isDeleteDirectorWarning && !_directorDeleteConfirmed))" 
                    @onclick="DeleteUserConfirmed">
                <span class="spinner-border spinner-border-sm me-1" role="status" hidden="@(!_deletingUser)"></span>
                Delete Permanently
            </button>
            <button type="button" class="btn btn-outline" @onclick="CancelDeleteUser" disabled="@_deletingUser">Cancel</button>
        </div>
    </div>
}

@* Revoke Access Modal *@
@if (_showRevokeModal && _userToRevoke.HasValue)
{
    <div class="modal-backdrop"></div>
    <div class="modal-card" style="max-width: 500px; border-left: 5px solid red;">
        <div class="modal-card__header d-flex justify-content-between align-items-center mb-3">
             <h4 class="mb-0 text-danger"><i class="bi bi-shield-slash-fill me-2"></i>Revoke Access</h4>
            <button class="btn btn-link text-muted p-0" type="button" @onclick="CancelRevokeUser">
                <i class="bi bi-x-lg"></i>
            </button>
        </div>
        <div class="mb-3">
            <p>Are you sure you want to <strong>Revoke Access</strong> for user <strong>@_userToRevokeUsername</strong>?</p>
            <div class="alert alert-warning small">
                <strong>This action will immediately:</strong>
                <ul class="mb-0 ps-3">
                    <li>Disable user login (Set Inactive)</li>
                    <li>Log them out of ALL active sessions/devices</li>
                    <li>Invalidate any Magic Links</li>
                    <li>Revoke VPN Access Keys</li>
                </ul>
            </div>
            
            <label class="form-label small fw-bold">Reason for Revocation (Log Entry)</label>
            <input type="text" class="form-control" @bind="_revokeReason" placeholder="e.g., Policy Violation, Compromised Account..." />
            @if (string.IsNullOrWhiteSpace(_revokeReason))
            {
                 <small class="text-danger">* Reason is required.</small>
            }
        </div>
        <div class="modal-card__actions">
            <button type="button" class="btn btn-danger" disabled="@(_revokingUser || string.IsNullOrWhiteSpace(_revokeReason))" @onclick="RevokeUserConfirmed">
                <span class="spinner-border spinner-border-sm me-1" role="status" hidden="@(!_revokingUser)"></span>
                CONFIRM REVOCATION
            </button>
            <button type="button" class="btn btn-outline" @onclick="CancelRevokeUser" disabled="@_revokingUser">Cancel</button>
        </div>
    </div>
}

@* Notification Configuration Modal *@
@if (_showNotificationModal && _selectedNotificationUserId.HasValue)
{
    <div class="modal-backdrop"></div>
    <div class="modal-card" style="max-width: 800px;">
        <div class="modal-card__header d-flex justify-content-between align-items-center mb-3">
            <h4 class="mb-0">
                Notification Preferences - @_selectedUserName
                @if (_selectedUserIsDirector)
                {
                    <span class="badge bg-primary ms-2">Director</span>
                }
            </h4>
            <button class="btn btn-link text-muted p-0" type="button" @onclick="CloseNotificationModal">
                <i class="bi bi-x-lg"></i>
            </button>
        </div>

        @if (!string.IsNullOrEmpty(_notificationError))
        {
            <div class="alert alert-danger mb-3">
                <strong>Error:</strong> @_notificationError
            </div>
        }

        <!-- Contact Information -->
        <div class="row g-3 mb-4">
            <div class="col-md-6">
                <label class="form-label small">Email Address</label>
                <input type="email" class="form-control form-control-sm" 
                       @bind="_notificationForm.Email" placeholder="user@example.com" />
                <small class="text-muted">Required for email notifications</small>
            </div>
            <div class="col-md-6">
                <label class="form-label small">Phone Number</label>
                <input type="tel" class="form-control form-control-sm" 
                       @bind="_notificationForm.Phone" placeholder="(555) 123-4567" />
                <small class="text-muted">Required for SMS notifications</small>
            </div>
        </div>

        <!-- Notification Preferences Table -->
        <h6 class="mb-3">Notification Events</h6>
