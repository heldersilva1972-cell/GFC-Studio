@using GFC.Core.Models.Diagnostics

<div class="card">
    <div class="card-header">
        <h5 class="card-title">
            <i class="fas fa-tachometer-alt"></i> Performance Metrics
            <span class="badge bg-info gfc-new-tag">NEW</span>
        </h5>
    </div>
    <div class="card-body">
        @if (Metrics == null)
        {
            <div class="text-center">
                <div class="spinner-border" role="status">
                    <span class="visually-hidden">Loading...</span>
                </div>
                <p>Loading performance metrics...</p>
            </div>
        }
        else
        {
            <div class="row">
                <!-- CPU Usage -->
                <div class="col-md-3">
                    <div class="card text-center">
                        <div class="card-body">
                            <h6 class="card-subtitle mb-2 text-muted">CPU Usage</h6>
                            <p class="card-text fs-4">@Metrics.CpuUsage.ToString("F2")%</p>
                        </div>
                    </div>
                </div>

                <!-- Memory Usage -->
                <div class="col-md-3">
                    <div class="card text-center">
                        <div class="card-body">
                            <h6 class="card-subtitle mb-2 text-muted">Memory Usage</h6>
                            <p class="card-text fs-4">@Metrics.MemoryUsageGb.ToString("F2") GB (@Metrics.MemoryUsagePercentage.ToString("F2")%)</p>
                        </div>
                    </div>
                </div>

                <!-- Active Connections / Threads -->
                <div class="col-md-3">
                    <div class="card text-center">
                        <div class="card-body">
                            <h6 class="card-subtitle mb-2 text-muted">Connections & Threads</h6>
                            <p class="card-text fs-4">@Metrics.ActiveConnections / @Metrics.ActiveThreads</p>
                        </div>
                    </div>
                </div>

                <!-- Requests per Minute -->
                <div class="col-md-3">
                    <div class="card text-center">
                        <div class="card-body">
                            <h6 class="card-subtitle mb-2 text-muted">Requests/Min</h6>
                            <p class="card-text fs-4">@Metrics.RequestsPerMinute</p>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@code {
    [Parameter]
    public PerformanceMetrics? Metrics { get; set; }
}
