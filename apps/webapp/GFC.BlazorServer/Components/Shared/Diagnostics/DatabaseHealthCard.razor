@using GFC.Core.Models.Diagnostics
@inject GFC.BlazorServer.Services.Diagnostics.DatabaseHealthService DatabaseHealthService

<div class="card">
    <div class="card-header">
        <h5 class="card-title">
            <i class="fas fa-database"></i> Database Health
            <span class="badge bg-info gfc-new-tag">NEW</span>
        </h5>
    </div>
    <div class="card-body">
        @if (HealthInfo == null)
        {
            <div class="text-center">
                <div class="spinner-border" role="status">
                    <span class="visually-hidden">Loading...</span>
                </div>
                <p>Loading database health...</p>
            </div>
        }
        else
        {
            <ul class="list-group list-group-flush">
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    Health Status
                    <StatusBadge Status="HealthInfo.Status" />
                </li>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    Database Size
                    <span>@HealthInfo.DatabaseSizeGb.ToString("F2") GB</span>
                </li>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    Connection Pool
                    <span>@HealthInfo.ActiveConnections / @HealthInfo.MaxPoolSize</span>
                </li>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    Last Backup
                    <span>@(HealthInfo.LastBackupDate?.ToString("yyyy-MM-dd HH:mm:ss") ?? "N/A")</span>
                </li>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    Pending Migrations
                    <span>@(HealthInfo.HasPendingMigrations ? "Yes" : "No")</span>
                </li>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    Response Time
                    <span>@HealthInfo.ConnectionResponseTimeMs ms</span>
                </li>
            </ul>

            <div class="mt-3">
                <button class="btn btn-primary" @onclick="TestDatabaseConnection" disabled="@isTesting">
                    @if (isTesting)
                    {
                        <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
                        <span> Testing...</span>
                    }
                    else
                    {
                        <i class="fas fa-plug"></i>
                        <text> Test Database Connection</text>
                    }
                </button>
                <button class="btn btn-secondary" @onclick="TestAgentApiConnection" disabled="@isTestingAgent">
                    @if (isTestingAgent)
                    {
                        <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
                        <span> Testing...</span>
                    }
                    else
                    {
                        <i class="fas fa-network-wired"></i>
                        <text> Test Agent API</text>
                    }
                </button>
            </div>

            @if (testResult != null)
            {
                <div class="alert @(testResult.Success ? "alert-success" : "alert-danger") mt-3" role="alert">
                    <strong>DB Test Result:</strong> @testResult.Message (took @testResult.ResponseTimeMs ms)
                </div>
            }
            @if (testResultAgent != null)
            {
                <div class="alert @(testResultAgent.Success ? "alert-success" : "alert-danger") mt-3" role="alert">
                    <strong>Agent API Test Result:</strong> @testResultAgent.Message (took @testResultAgent.ResponseTimeMs ms)
                </div>
            }
        }
    </div>
</div>

@code {
    [Parameter]
    public DatabaseHealthInfo? HealthInfo { get; set; }

    private bool isTesting = false;
    private DiagnosticActionResult? testResult;

    private bool isTestingAgent = false;
    private DiagnosticActionResult? testResultAgent;

    private async Task TestDatabaseConnection()
    {
        isTesting = true;
        testResult = null;
        StateHasChanged();

        testResult = await DatabaseHealthService.TestDatabaseConnectionAsync();

        isTesting = false;
        StateHasChanged();
    }

    private async Task TestAgentApiConnection()
    {
        isTestingAgent = true;
        testResultAgent = null;
        StateHasChanged();

        testResultAgent = await DatabaseHealthService.TestAgentApiConnectionAsync();

        isTestingAgent = false;
        StateHasChanged();
    }
}
