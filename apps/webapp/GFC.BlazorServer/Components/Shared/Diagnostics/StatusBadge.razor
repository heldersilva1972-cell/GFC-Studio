@namespace GFC.BlazorServer.Components.Shared.Diagnostics

<span class="status-badge @BadgeClass" style="@BadgeStyle">
    @Status.ToString()
</span>

@code {
    [Parameter]
    public HealthStatus Status { get; set; }

    private string BadgeClass => Status switch
    {
        HealthStatus.Healthy => "status-healthy",
        HealthStatus.Warning => "status-warning",
        HealthStatus.Error => "status-error",
        HealthStatus.Critical => "status-critical",
        _ => "status-unknown"
    };

    private string BadgeStyle => Status == HealthStatus.Healthy ? "animation: pulse 2s infinite;" : "";
}
