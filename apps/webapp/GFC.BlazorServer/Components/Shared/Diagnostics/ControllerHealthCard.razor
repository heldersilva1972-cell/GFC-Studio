@using GFC.Core.Models.Diagnostics
@inject GFC.BlazorServer.Services.Diagnostics.ControllerDiagnosticsService ControllerDiagnosticsService
@inject IBlazorSystemSettingsService SystemSettingsService

<div class="card">
    <div class="card-header">
        <h5 class="card-title">@ControllerHealth.Name</h5>
        <span class="badge @GetStatusBadgeClass()">@ControllerHealth.Status</span>
    </div>
    <div class="card-body">
        <p><strong>Status:</strong> @(ControllerHealth.IsConnected ? "Connected" : "Disconnected")</p>
        <p><strong>Response Time:</strong> @ControllerHealth.ResponseTime.TotalMilliseconds ms</p>
        <p><strong>Doors:</strong> @ControllerHealth.DoorCount</p>
        <p><strong>Readers:</strong> @ControllerHealth.ReaderCount</p>
        <p><strong>Cards:</strong> @ControllerHealth.CardCount</p>
        <p><strong>24h Events:</strong> @ControllerHealth.EventCount24h</p>
        <p><strong>Last Communication:</strong> @FormatTimestamp(ControllerHealth.LastCommunication)</p>
        <button class="btn btn-primary" @onclick="TestConnection" disabled="@isTesting">
            @(isTesting ? "Testing..." : "Test Connection")
        </button>
        @if (testResult.HasValue)
        {
            <p class="mt-2">Test Result: @(testResult.Value ? "Success" : "Failed")</p>
        }
    </div>
</div>

@code {
    [Parameter]
    public ControllerHealthInfo ControllerHealth { get; set; }

    private bool isTesting = false;
    private bool? testResult;

    private async Task TestConnection()
    {
        isTesting = true;
        testResult = await ControllerDiagnosticsService.TestConnectionAsync();
        isTesting = false;
    }

    private string GetStatusBadgeClass()
    {
        return ControllerHealth.Status switch
        {
            HealthStatus.Healthy => "bg-success",
            HealthStatus.Warning => "bg-warning",
            HealthStatus.Critical => "bg-danger",
            _ => "bg-secondary"
        };
    }

    private TimeZoneInfo _systemTimeZone = TimeZoneInfo.FindSystemTimeZoneById("Eastern Standard Time");

    protected override async Task OnInitializedAsync()
    {
        try
        {
            var settings = await SystemSettingsService.GetAsync();
            _systemTimeZone = TimeZoneInfo.FindSystemTimeZoneById(settings.SystemTimeZoneId ?? "Eastern Standard Time");
        }
        catch (Exception ex)
        {
            _systemTimeZone = TimeZoneInfo.FindSystemTimeZoneById("Eastern Standard Time");
        }
    }

    private string FormatTimestamp(DateTime utcTime)
    {
        return TimeZoneInfo.ConvertTimeFromUtc(utcTime, _systemTimeZone).ToString("yyyy-MM-dd HH:mm:ss");
    }
}
