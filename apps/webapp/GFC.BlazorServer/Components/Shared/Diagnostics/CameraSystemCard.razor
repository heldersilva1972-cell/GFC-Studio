@using GFC.Core.Models.Diagnostics
@inject GFC.BlazorServer.Services.Diagnostics.CameraDiagnosticsService CameraDiagnosticsService

<div class="card">
    <div class="card-header">
        <h5 class="card-title">Camera System</h5>
        <span class="badge @GetNvrStatusBadgeClass()">@CameraSystem.NvrStatus</span>
    </div>
    <div class="card-body">
        <p><strong>Total Cameras:</strong> @CameraSystem.TotalCameras</p>
        <p><strong>Online:</strong> @CameraSystem.OnlineCameras</p>
        <p><strong>Offline:</strong> @CameraSystem.OfflineCameras</p>
        <p><strong>Active Streams:</strong> @CameraSystem.ActiveStreams</p>
        <p><strong>NVR Status:</strong> @CameraSystem.NvrStatus</p>
        <p><strong>Oldest Recording:</strong> @CameraSystem.OldestRecording.ToLocalTime()</p>
        <p><strong>Newest Recording:</strong> @CameraSystem.NewestRecording.ToLocalTime()</p>
        <p><strong>24h Events:</strong> @CameraSystem.EventsLast24h</p>
        <div class="progress mt-3">
            <div class="progress-bar @GetStorageProgressClass()" role="progressbar" style="width: @(CameraSystem.StorageUsagePercentage)%" aria-valuenow="@CameraSystem.StorageUsagePercentage" aria-valuemin="0" aria-valuemax="100">@($"{CameraSystem.StorageUsagePercentage:F2}%")</div>
        </div>
        <button class="btn btn-primary mt-3" @onclick="TestConnection" disabled="@isTesting">
            @(isTesting ? "Testing..." : "Test Connection")
        </button>
        @if (testResult.HasValue)
        {
            <p class="mt-2">Test Result: @(testResult.Value ? "Success" : "Failed")</p>
        }
    </div>
</div>

@code {
    [Parameter]
    public CameraSystemInfo CameraSystem { get; set; }

    private bool isTesting = false;
    private bool? testResult;

    private async Task TestConnection()
    {
        isTesting = true;
        testResult = await CameraDiagnosticsService.TestConnectionAsync();
        isTesting = false;
    }

    private string GetNvrStatusBadgeClass()
    {
        return CameraSystem.NvrStatus switch
        {
            GFC.Core.Models.HealthStatus.Healthy => "bg-success",
            GFC.Core.Models.HealthStatus.Warning => "bg-warning",
            GFC.Core.Models.HealthStatus.Critical => "bg-danger",
            _ => "bg-secondary"
        };
    }

    private string GetStorageProgressClass()
    {
        if (CameraSystem.StorageUsagePercentage > 95)
        {
            return "bg-danger";
        }
        if (CameraSystem.StorageUsagePercentage > 85)
        {
            return "bg-warning";
        }
        return "bg-success";
    }
}
