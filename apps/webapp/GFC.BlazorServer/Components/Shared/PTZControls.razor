@using GFC.BlazorServer.Services.Camera

<div class="ptz-controls-container">
    <div class="ptz-dpad">
        <button class="ptz-btn ptz-up" @onclick="() => OnCommand.InvokeAsync(PTZAction.Up)">
            <i class="bi bi-arrow-up-short"></i>
        </button>
        <button class="ptz-btn ptz-left" @onclick="() => OnCommand.InvokeAsync(PTZAction.Left)">
            <i class="bi bi-arrow-left-short"></i>
        </button>
        <div class="ptz-center"></div>
        <button class="ptz-btn ptz-right" @onclick="() => OnCommand.InvokeAsync(PTZAction.Right)">
            <i class="bi bi-arrow-right-short"></i>
        </button>
        <button class="ptz-btn ptz-down" @onclick="() => OnCommand.InvokeAsync(PTZAction.Down)">
            <i class="bi bi-arrow-down-short"></i>
        </button>
    </div>
    <div class="ptz-zoom">
        <button class="ptz-btn zoom-in" @onclick="() => OnCommand.InvokeAsync(PTZAction.ZoomIn)">
            <i class="bi bi-zoom-in"></i>
        </button>
        <button class="ptz-btn zoom-out" @onclick="() => OnCommand.InvokeAsync(PTZAction.ZoomOut)">
            <i class="bi bi-zoom-out"></i>
        </button>
    </div>
</div>

@code {
    [Parameter] public EventCallback<PTZAction> OnCommand { get; set; }
}
