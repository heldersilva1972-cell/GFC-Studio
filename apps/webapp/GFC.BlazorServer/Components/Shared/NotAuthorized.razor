@using Microsoft.AspNetCore.Components

<div class="guard-surface data-card" role="alert">
    <div class="guard-icon guard-icon--locked" aria-hidden="true">
        <i class="bi bi-shield-lock"></i>
    </div>
    <div class="guard-copy">
        <p class="guard-eyebrow">Not authorized</p>
        <h3 class="guard-title">Access not permitted</h3>
        <p class="guard-body">
            You don't have permission to view this area. If you think you should,
            please contact an administrator for access.
        </p>
        <div class="guard-actions">
            <a class="btn btn-primary" href="@RedirectUrl">@RedirectLabel</a>
            <a class="btn btn-outline" href="@SecondaryUrl">@SecondaryLabel</a>
        </div>
    </div>
</div>

@code {
    [Parameter] public string RedirectUrl { get; set; } = "/";
    [Parameter] public string RedirectLabel { get; set; } = "Return to dashboard";
    [Parameter] public string SecondaryUrl { get; set; } = "/login";
    [Parameter] public string SecondaryLabel { get; set; } = "Go to login";
}
