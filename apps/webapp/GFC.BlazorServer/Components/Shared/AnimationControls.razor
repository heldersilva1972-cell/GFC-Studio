@using GFC.BlazorServer.Components.Pages.Studio

<div class="animation-controls-panel">
    <h5>Animation Settings</h5>
    @if (TargetKeyframe != null)
    {
        <div class="form-group">
            <label>Effect</label>
            <select class="form-control" @bind="TargetKeyframe.Effect">
                <option value="fadeIn">Fade In</option>
                <option value="slideInUp">Slide In Up</option>
                <option value="scaleIn">Scale In</option>
                <option value="rotateIn">Rotate In</option>
            </select>
        </div>
        <div class="form-group">
            <label>Easing</label>
            <select class="form-control" @bind="TargetKeyframe.Easing">
                <option value="easeInOut">Smooth</option>
                <option value="spring">Spring</option>
                <option value="bounce">Bounce</option>
            </select>
        </div>
        <div class="form-group">
            <label>Trigger</label>
            <select class="form-control" @bind="TargetKeyframe.Trigger">
                <option value="onLoad">On Load</option>
                <option value="onScroll">On Scroll</option>
            </select>
        </div>
        <div class="form-group">
            <label>Duration: @TargetKeyframe.Duration.ToString("0.1")s</label>
            <input type="range" class="form-range" min="0.1" max="5" step="0.1" @bind="TargetKeyframe.Duration" />
        </div>
        <div class="form-group">
            <label>Delay: @TargetKeyframe.Delay.ToString("0.1")s</label>
            <input type="range" class="form-range" min="0" max="5" step="0.1" @bind="TargetKeyframe.Delay" />
        </div>
    }
    else
    {
        <p class="text-muted">Select an animation block in the timeline to edit its properties.</p>
    }
</div>

@code {
    [Parameter]
    public AnimationKeyframe TargetKeyframe { get; set; }
}
