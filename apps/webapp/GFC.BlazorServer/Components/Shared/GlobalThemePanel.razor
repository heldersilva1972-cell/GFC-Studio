@using GFC.Core.Models
@inject IWebsiteSettingsService SettingsService

<h3>Global Theme Settings</h3>

@if (_settings != null)
{
    <div class="form-group">
        <label>Primary Color</label>
        <input type="color" class="form-control" @bind="_settings.PrimaryColor" />
    </div>
    <div class="form-group">
        <label>Secondary Color</label>
        <input type="color" class="form-control" @bind="_settings.SecondaryColor" />
    </div>
    <div class="form-group">
        <label>Heading Font</label>
        <input type="text" class="form-control" @bind="_settings.HeadingFont" />
    </div>
    <div class="form-group">
        <label>Body Font</label>
        <input type="text" class="form-control" @bind="_settings.BodyFont" />
    </div>
    <div class="form-check">
        <input type="checkbox" class="form-check-input" @bind="_settings.HighAccessibilityMode" />
        <label class="form-check-label">High Accessibility Mode</label>
    </div>
    <button class="btn btn-primary" @onclick="SaveChanges">Save</button>
}
else
{
    <p>Loading settings...</p>
}

@code {
    private WebsiteSettings _settings;

    protected override async Task OnInitializedAsync()
    {
        _settings = await SettingsService.GetWebsiteSettingsAsync();
    }

    private async Task SaveChanges()
    {
        await SettingsService.UpdateWebsiteSettingsAsync(_settings);
    }
}
