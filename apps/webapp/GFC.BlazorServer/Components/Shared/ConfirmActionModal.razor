<div class="modal-backdrop show glass-backdrop"></div>
<div class="modal show d-block" role="dialog">
    <div class="modal-dialog modal-dialog-centered confirm-dialog" role="document">
        <div class="confirm-content fade-in-scale">
            <div class="confirm-body">
                <div class="confirm-icon-wrapper @GetIconClass()">
                    <i class="bi @Icon"></i>
                </div>
                
                <h3 class="confirm-title">@Title</h3>
                <p class="confirm-message">@Message</p>
                
                @if (!string.IsNullOrEmpty(SubMessage))
                {
                    <div class="confirm-submessage">
                        <i class="bi bi-info-circle me-1"></i> @SubMessage
                    </div>
                }
            </div>
            
            <div class="confirm-footer">
                <button type="button" class="btn-confirm-cancel" @onclick="OnCancel">@CancelText</button>
                <button type="button" class="btn-confirm-action @GetButtonClass()" @onclick="HandleConfirm">
                    @ConfirmText
                </button>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter] public string Title { get; set; } = "Confirm Action";
    [Parameter] public string Message { get; set; } = "Are you sure you want to proceed?";
    [Parameter] public string? SubMessage { get; set; }
    [Parameter] public string ConfirmText { get; set; } = "Confirm";
    [Parameter] public string CancelText { get; set; } = "Cancel";
    [Parameter] public string Icon { get; set; } = "bi-exclamation-triangle";
    [Parameter] public ConfirmType Type { get; set; } = ConfirmType.Warning;

    [Parameter] public EventCallback OnConfirm { get; set; }
    [Parameter] public EventCallback OnCancel { get; set; }

    public enum ConfirmType
    {
        Warning,
        Danger,
        Info,
        Success
    }

    private string GetIconClass() => Type switch
    {
        ConfirmType.Warning => "icon-warning",
        ConfirmType.Danger => "icon-danger",
        ConfirmType.Info => "icon-info",
        ConfirmType.Success => "icon-success",
        _ => "icon-warning"
    };

    private string GetButtonClass() => Type switch
    {
        ConfirmType.Warning => "btn-warning",
        ConfirmType.Danger => "btn-danger",
        ConfirmType.Info => "btn-info",
        ConfirmType.Success => "btn-success",
        _ => "btn-warning"
    };

    private async Task HandleConfirm()
    {
        await OnConfirm.InvokeAsync();
    }
}

<style>
    .glass-backdrop {
        background: rgba(15, 23, 42, 0.4);
        backdrop-filter: blur(8px);
        -webkit-backdrop-filter: blur(8px);
        z-index: 9998;
    }

    .modal.show.d-block {
        z-index: 9999;
    }

    .confirm-dialog {
        max-width: 400px;
        padding: 1rem;
    }

    .confirm-content {
        background: var(--bg-surface);
        border: 1px solid var(--glass-border);
        border-radius: 24px;
        box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.4);
        overflow: hidden;
        position: relative;
        pointer-events: auto !important;
    }

    .modal.show.d-block {
        z-index: 9999;
        pointer-events: none; /* Allow clicks to pass through transparent part of container */
    }

    .modal-dialog {
        pointer-events: none; /* Standard bootstrap behavior */
    }

    .confirm-body {
        padding: 2.5rem 2rem 1.5rem;
        text-align: center;
    }

    .confirm-icon-wrapper {
        width: 64px;
        height: 64px;
        border-radius: 20px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 2rem;
        margin: 0 auto 1.5rem;
    }

    .icon-warning { background: #fffbeb; color: #d97706; }
    .icon-danger { background: #fef2f2; color: #dc2626; }
    .icon-info { background: #eff6ff; color: #2563eb; }
    .icon-success { background: #f0fdf4; color: #166534; }

    .confirm-title {
        font-size: 1.25rem;
        font-weight: 800;
        color: var(--text-primary);
        margin-bottom: 0.75rem;
        letter-spacing: -0.02em;
    }

    .confirm-message {
        color: var(--text-secondary);
        font-size: 0.95rem;
        line-height: 1.5;
        margin-bottom: 1.25rem;
    }

    .confirm-submessage {
        background: var(--bg-secondary);
        padding: 0.75rem 1rem;
        border-radius: 12px;
        font-size: 0.8rem;
        color: var(--text-muted);
        text-align: left;
    }

    .confirm-footer {
        padding: 1.25rem;
        background: var(--bg-secondary);
        display: flex;
        gap: 0.75rem;
    }

    .confirm-footer button {
        flex: 1;
        padding: 0.75rem;
        border-radius: 14px;
        font-weight: 700;
        font-size: 0.9rem;
        transition: all 0.2s;
        border: none;
    }

    .btn-confirm-cancel {
        background: white;
        color: #64748b;
        border: 1px solid #e2e8f0 !important;
    }

    .btn-confirm-cancel:hover {
        background: #f8fafc;
        color: #475569;
    }

    .btn-confirm-action {
        color: white;
    }

    .btn-confirm-action.btn-warning { background: #f59e0b; }
    .btn-confirm-action.btn-warning:hover { background: #d97706; transform: translateY(-2px); }
    
    .btn-confirm-action.btn-danger { background: #ef4444; }
    .btn-confirm-action.btn-danger:hover { background: #dc2626; transform: translateY(-2px); }

    .btn-confirm-action.btn-info { background: #3b82f6; }
    .btn-confirm-action.btn-info:hover { background: #2563eb; transform: translateY(-2px); }

    .fade-in-scale {
        animation: fadeInScale 0.3s cubic-bezier(0.34, 1.56, 0.64, 1);
    }

    @@keyframes fadeInScale {
        from { opacity: 0; transform: scale(0.9); }
        to { opacity: 1; transform: scale(1); }
    }
</style>
