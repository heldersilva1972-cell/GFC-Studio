@using GFC.BlazorServer.Services
@inject IRemoteAccessHealthService HealthService

<div class="health-status-container">
    <div class="health-status-item">
        <strong>Cloudflare Tunnel:</strong>
        @if (_status == null)
        {
            <span class="badge bg-secondary">Checking...</span>
        }
        else if (_status.IsTunnelHealthy)
        {
            <span class="badge bg-success">Healthy</span>
        }
        else
        {
            <span class="badge bg-danger">Unhealthy</span>
        }
    </div>
    <div class="health-status-item">
        <strong>VPN Service:</strong>
        @if (_status == null)
        {
            <span class="badge bg-secondary">Checking...</span>
        }
        else if (_status.IsVpnHealthy)
        {
            <span class="badge bg-success">Healthy</span>
        }
        else
        {
            <span class="badge bg-danger">Unhealthy</span>
        }
    </div>
</div>

@code {
    private RemoteAccessHealthStatus _status;

    protected override async Task OnInitializedAsync()
    {
        _status = await HealthService.GetHealthStatusAsync();
    }
}
