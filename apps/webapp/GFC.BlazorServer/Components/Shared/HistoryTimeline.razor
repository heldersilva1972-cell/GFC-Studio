<div class="history-timeline">
    @foreach (var item in TimelineItems)
    {
        <div class="timeline-item">
            <div class="timeline-dot"></div>
            <div class="timeline-content">
                <div class="timeline-year">@item.Year</div>
                <h4 class="timeline-title">@item.Title</h4>
                <p class="timeline-description">@item.Description</p>
            </div>
        </div>
    }
</div>

@code {
    private class TimelineItem
    {
        public string Year { get; set; }
        public string Title { get; set; }
        public string Description { get; set; }
    }

    private List<TimelineItem> TimelineItems = new List<TimelineItem>
    {
        new TimelineItem { Year = "1923", Title = "The Founding", Description = "A group of visionary community members established the club, laying the foundation for a century of tradition." },
        new TimelineItem { Year = "1955", Title = "First Major Expansion", Description = "The main hall was constructed, providing a dedicated space for larger events and gatherings." },
        new TimelineItem { Year = "1989", Title = "Community Outreach Program", Description = "Launched a new initiative to support local charities, which continues to be a core part of our mission." },
        new TimelineItem { Year = "2005", Title = "Digital Age Upgrade", Description = "Modernized our facilities with new sound and lighting systems to better serve our rental clients." },
        new TimelineItem { Year = "2023", Title = "Centennial Celebration", Description = "Marked 100 years of service, community, and friendship with a year-long series of special events." }
    };
}
