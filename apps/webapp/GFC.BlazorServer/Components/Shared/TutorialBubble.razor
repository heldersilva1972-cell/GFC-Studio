@using GFC.BlazorServer.Services
@inject TutorialService TutorialService

<div class="tutorial-overlay @(Show ? "active" : "")" @onclick="OnOverlayClick">
    @if (Show)
    {
        <div class="tutorial-backdrop"></div>
        <div class="tutorial-card @Position @AnimationClass" style="@GetPositionStyle()" @onclick:stopPropagation="true">
            <div class="card-edge-glow"></div>
            
            <div class="card-header">
                <div class="step-indicator">
                    <span class="step-label">Step @CurrentStep</span>
                    <span class="step-track">
                        <span class="step-progress" style="width: @((double)CurrentStep/TotalSteps * 100)%"></span>
                    </span>
                </div>
                @if (AllowCancel)
                {
                    <button class="btn-close-minimal" @onclick="HandleCancel" aria-label="Dismiss">
                        <i class="bi bi-x"></i>
                    </button>
                }
            </div>

            <div class="card-body">
                <h3 class="card-title">@Title</h3>
                <p class="card-message">@Message</p>
                
                @if (!string.IsNullOrEmpty(Tip))
                {
                    <div class="tip-banner">
                        <div class="tip-icon">
                            <i class="bi bi-info-circle"></i>
                        </div>
                        <div class="tip-text">@Tip</div>
                    </div>
                }
            </div>

            <div class="card-footer">
                @if (ShowWait)
                {
                    <div class="waiting-indicator">
                        <div class="dot-pulse"></div>
                        <span>@WaitingText</span>
                    </div>
                }
                else
                {
                    <div class="action-group">
                        @if (ShowSkip)
                        {
                            <button class="btn-link-action" @onclick="HandleSkip">Skip tour</button>
                        }
                        @if (ShowNext)
                        {
                            <button class="btn-primary-action" @onclick="HandleNext">
                                <span>@NextButtonText</span>
                                <i class="bi bi-chevron-right"></i>
                            </button>
                        }
                    </div>
                }
            </div>
        </div>
    }
</div>

<style>
    /* 
       =========================================
       WORLD-CLASS SAAS TUTORIAL UI
       Inspired by Stripe, Linear, and Vercel
       =========================================
    */

    .tutorial-overlay {
        position: fixed;
        top: 0; left: 0; width: 100vw; height: 100vh;
        z-index: 9999;
        opacity: 0;
        pointer-events: none;
        transition: opacity 0.4s ease;
    }

    .tutorial-overlay.active {
        opacity: 1;
        pointer-events: none; /* Allow clicks to pass to highlighted elements */
    }

    .tutorial-backdrop {
        position: absolute;
        inset: 0;
        background: rgba(0, 0, 0, 0.15);
        pointer-events: none;
    }

    .tutorial-card {
        pointer-events: auto;
        position: fixed;
        background: rgba(255, 255, 255, 0.95);
        backdrop-filter: blur(20px);
        -webkit-backdrop-filter: blur(20px);
        border: 1px solid rgba(0, 0, 0, 0.08);
        border-radius: 16px;
        box-shadow: 
            0 1px 2px rgba(0,0,0,0.05),
            0 10px 40px -10px rgba(0,0,0,0.15),
            0 20px 60px -20px rgba(0,0,0,0.1);
        padding: 0;
        max-width: 400px;
        width: 90vw;
        z-index: 10000;
        color: #1a202c;
        overflow: hidden;
        font-family: -apple-system, BlinkMacSystemFont, "Inter", "Segoe UI", Roboto, sans-serif;
    }

    .card-edge-glow {
        position: absolute;
        top: 0; left: 0; right: 0; height: 2px;
        background: linear-gradient(90deg, #6366f1, #a855f7);
        opacity: 0.8;
    }

    .card-header {
        padding: 24px 24px 12px;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .step-indicator {
        display: flex;
        flex-direction: column;
        gap: 6px;
        width: 100px;
    }

    .step-label {
        font-size: 0.7rem;
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 0.05em;
        color: #6366f1;
    }

    .step-track {
        height: 3px;
        background: rgba(99, 102, 241, 0.1);
        border-radius: 2px;
        overflow: hidden;
        position: relative;
    }

    .step-progress {
        position: absolute;
        left: 0; top: 0; bottom: 0;
        background: #6366f1;
        transition: width 0.6s cubic-bezier(0.16, 1, 0.3, 1);
    }

    .btn-close-minimal {
        background: none;
        border: none;
        color: #a0aec0;
        font-size: 1.25rem;
        cursor: pointer;
        padding: 4px;
        border-radius: 6px;
        transition: all 0.2s;
        display: flex;
        align-items: center;
    }

    .btn-close-minimal:hover {
        background: #f7fafc;
        color: #1a202c;
    }

    .card-body { padding: 0 24px 20px; }

    .card-title {
        font-size: 1.25rem;
        font-weight: 800;
        margin-bottom: 8px;
        color: #111827;
        letter-spacing: -0.01em;
    }

    .card-message {
        font-size: 0.95rem;
        color: #4b5563;
        line-height: 1.6;
        margin: 0;
    }

    .tip-banner {
        margin-top: 16px;
        background: #f8fafc;
        border: 1px solid #e2e8f0;
        padding: 12px;
        border-radius: 10px;
        display: flex;
        gap: 12px;
        align-items: flex-start;
    }

    .tip-icon { color: #6366f1; font-size: 1.1rem; }
    .tip-text { font-size: 0.85rem; color: #64748b; font-weight: 500; }

    .card-footer {
        padding: 16px 24px 24px;
        border-top: 1px solid #f3f4f6;
    }

    .action-group {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .btn-link-action {
        background: none;
        border: none;
        color: #6b7280;
        font-size: 0.875rem;
        font-weight: 500;
        cursor: pointer;
        transition: color 0.2s;
    }

    .btn-link-action:hover { color: #111827; }

    .btn-primary-action {
        background: #111827;
        color: white;
        border: none;
        padding: 10px 18px;
        border-radius: 8px;
        font-weight: 600;
        font-size: 0.875rem;
        display: flex;
        align-items: center;
        gap: 6px;
        cursor: pointer;
        transition: all 0.2s;
        box-shadow: 0 4px 6px -1px rgba(0,0,0,0.1);
    }

    .btn-primary-action:hover {
        background: #000;
        transform: translateY(-1px);
        box-shadow: 0 10px 15px -3px rgba(0,0,0,0.1);
    }

    .waiting-indicator {
        display: flex;
        align-items: center;
        gap: 10px;
        color: #6b7280;
        font-size: 0.875rem;
        font-weight: 500;
    }

    .dot-pulse {
        width: 10px; height: 10px;
        background: #6366f1;
        border-radius: 50%;
        animation: card-dot-pulse 2s infinite ease-in-out;
    }

    @@keyframes card-dot-pulse {
        0%, 100% { transform: scale(0.8); opacity: 0.5; }
        50% { transform: scale(1.2); opacity: 1; }
    }

    .tutorial-card.reveal {
        animation: card-slide-reveal 0.5s cubic-bezier(0.16, 1, 0.3, 1);
    }

    @@keyframes card-slide-reveal {
        from { opacity: 0; transform: translate(-50%, 20px); }
        to { opacity: 1; transform: translate(-50%, 0); }
    }

    .tutorial-card.top-center { top: 40px; left: 50%; transform: translateX(-50%); }
    .tutorial-card.center { top: 50%; left: 50%; transform: translate(-50%, -50%); }
    .tutorial-card.bottom-center { bottom: 40px; left: 50%; transform: translateX(-50%); }
</style>

@code {
    [Parameter] public bool Show { get; set; }
    [Parameter] public int CurrentStep { get; set; }
    [Parameter] public int TotalSteps { get; set; } = 10;
    [Parameter] public string Title { get; set; } = "";
    [Parameter] public string Message { get; set; } = "";
    [Parameter] public string? Tip { get; set; }
    [Parameter] public string Position { get; set; } = "center";
    [Parameter] public bool ShowNext { get; set; } = true;
    [Parameter] public bool ShowSkip { get; set; } = true;
    [Parameter] public bool ShowWait { get; set; } = false;
    [Parameter] public bool AllowCancel { get; set; } = true;
    [Parameter] public string NextButtonText { get; set; } = "Continue";
    [Parameter] public string WaitingText { get; set; } = "Please click the button above";
    [Parameter] public EventCallback OnNext { get; set; }
    [Parameter] public EventCallback OnSkip { get; set; }
    [Parameter] public EventCallback OnCancel { get; set; }
    [Parameter] public string? CustomTop { get; set; }
    [Parameter] public string? CustomLeft { get; set; }

    private string AnimationClass => Show ? "reveal" : "";

    private async Task HandleNext()
    {
        if (OnNext.HasDelegate)
        {
            await OnNext.InvokeAsync();
        }
        else
        {
            await TutorialService.NextStepAsync();
        }
    }

    private async Task HandleSkip()
    {
        if (OnSkip.HasDelegate)
        {
            await OnSkip.InvokeAsync();
        }
        else
        {
            await TutorialService.CancelTutorialAsync();
        }
    }

    private async Task HandleCancel()
    {
        if (OnCancel.HasDelegate)
        {
            await OnCancel.InvokeAsync();
        }
        else
        {
            await TutorialService.CancelTutorialAsync();
        }
    }

    private void OnOverlayClick()
    {
        // Custom logic if needed
    }

    private string GetPositionStyle()
    {
        if (!string.IsNullOrEmpty(CustomTop) || !string.IsNullOrEmpty(CustomLeft))
        {
            var styles = new List<string>();
            if (!string.IsNullOrEmpty(CustomTop)) styles.Add($"top: {CustomTop}");
            if (!string.IsNullOrEmpty(CustomLeft)) styles.Add($"left: {CustomLeft}");
            return string.Join("; ", styles);
        }
        return "";
    }
}
