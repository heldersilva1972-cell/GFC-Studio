@namespace GFC.BlazorServer.Components.Shared
@using GFC.Core.Models

<div class="inspector-panel">
    @if (SelectedKeyframe != null)
    {
        <TransitionEditor SelectedKeyframe="SelectedKeyframe" OnKeyframeChanged="OnKeyframeChanged" />
    }
    else
    {
        <div class="placeholder-text">
            <p>Select a keyframe on the timeline to inspect its properties.</p>
        </div>
    }
</div>

@code {
    [Parameter]
    public AnimationKeyframe SelectedKeyframe { get; set; }

    [Parameter]
    public EventCallback OnKeyframeChanged { get; set; }
}
